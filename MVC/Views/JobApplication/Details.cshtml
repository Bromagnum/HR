@model JobApplicationDetailViewModel
@{
    ViewData["Title"] = "Başvuru Detayları";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">
                        <i class="fas fa-file-alt me-2"></i>Başvuru Detayları
                    </h3>
                    <div class="card-tools">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Düzenle
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Geri
                        </a>
                    </div>
                </div>

                <div class="card-body">
                    <div class="row">
                        <!-- Sol Sütun: Kişisel Bilgiler -->
                        <div class="col-md-6">
                            <div class="card h-100">
                                <div class="card-header">
                                    <h5><i class="fas fa-user"></i> Kişisel Bilgiler</h5>
                                </div>
                                <div class="card-body">
                                    <table class="table table-borderless">
                                        <tr>
                                            <td><strong>Ad Soyad:</strong></td>
                                            <td>@Model.FullName</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Email:</strong></td>
                                            <td>@Model.Email</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Telefon:</strong></td>
                                            <td>@Model.Phone</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Doğum Tarihi:</strong></td>
                                            <td>@(Model.DateOfBirth?.ToString("dd.MM.yyyy") ?? "Belirtilmemiş")</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Cinsiyet:</strong></td>
                                            <td>@(Model.Gender ?? "Belirtilmemiş")</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Adres:</strong></td>
                                            <td>@(Model.Address ?? "Belirtilmemiş")</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Şehir:</strong></td>
                                            <td>@(Model.City ?? "Belirtilmemiş")</td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <!-- Sağ Sütun: Başvuru Bilgileri -->
                        <div class="col-md-6">
                            <div class="card h-100">
                                <div class="card-header">
                                    <h5><i class="fas fa-briefcase"></i> Başvuru Bilgileri</h5>
                                </div>
                                <div class="card-body">
                                    <table class="table table-borderless">
                                        <tr>
                                            <td><strong>Pozisyon:</strong></td>
                                            <td>@Model.PositionName</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Departman:</strong></td>
                                            <td>@Model.DepartmentName</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Başvuru Tarihi:</strong></td>
                                            <td>@Model.ApplicationDate.ToString("dd.MM.yyyy HH:mm")</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Durum:</strong></td>
                                            <td>
                                                <span class="badge @Model.StatusClass">@Model.StatusText</span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td><strong>Başvuru Dönemi:</strong></td>
                                            <td>@Model.ApplicationPeriod</td>
                                        </tr>
                                        @if (!string.IsNullOrEmpty(Model.ReviewedByName))
                                        {
                                            <tr>
                                                <td><strong>İnceleyen:</strong></td>
                                                <td>@Model.ReviewedByName</td>
                                            </tr>
                                        }
                                        @if (Model.ReviewedAt.HasValue)
                                        {
                                            <tr>
                                                <td><strong>İnceleme Tarihi:</strong></td>
                                                <td>@Model.ReviewedAt.Value.ToString("dd.MM.yyyy HH:mm")</td>
                                            </tr>
                                        }
                                        @if (Model.Rating.HasValue)
                                        {
                                            <tr>
                                                <td><strong>Puan:</strong></td>
                                                <td>@Model.Rating/10</td>
                                            </tr>
                                        }
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- İkinci Satır: Eğitim ve Deneyim -->
                    <div class="row mt-4">
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header">
                                    <h5><i class="fas fa-graduation-cap"></i> Eğitim Bilgileri</h5>
                                </div>
                                <div class="card-body">
                                    <table class="table table-borderless">
                                        <tr>
                                            <td><strong>Eğitim Seviyesi:</strong></td>
                                            <td>@(Model.EducationLevel ?? "Belirtilmemiş")</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Üniversite:</strong></td>
                                            <td>@(Model.University ?? "Belirtilmemiş")</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Bölüm:</strong></td>
                                            <td>@(Model.Department ?? "Belirtilmemiş")</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Mezuniyet Yılı:</strong></td>
                                            <td>@(Model.GraduationYear?.ToString() ?? "Belirtilmemiş")</td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header">
                                    <h5><i class="fas fa-briefcase"></i> İş Deneyimi</h5>
                                </div>
                                <div class="card-body">
                                    <table class="table table-borderless">
                                        <tr>
                                            <td><strong>Deneyim (Yıl):</strong></td>
                                            <td>@(Model.ExperienceYears?.ToString() ?? "Belirtilmemiş")</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Mevcut Şirket:</strong></td>
                                            <td>@(Model.CurrentCompany ?? "Belirtilmemiş")</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Mevcut Pozisyon:</strong></td>
                                            <td>@(Model.CurrentPosition ?? "Belirtilmemiş")</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Maaş Beklentisi:</strong></td>
                                            <td>@(Model.ExpectedSalary?.ToString("N0") ?? "Belirtilmemiş") ₺</td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Üçüncü Satır: Ön Yazı ve Notlar -->
                    <div class="row mt-4">
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header">
                                    <h5><i class="fas fa-sticky-note"></i> Ön Yazı</h5>
                                </div>
                                <div class="card-body">
                                    @if (!string.IsNullOrEmpty(Model.CoverLetter))
                                    {
                                        <p>@Model.CoverLetter</p>
                                    }
                                    else
                                    {
                                        <p class="text-muted">Ön yazı eklenmemiş</p>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header">
                                    <h5><i class="fas fa-comments"></i> Değerlendirme Notları</h5>
                                </div>
                                <div class="card-body">
                                    @if (!string.IsNullOrEmpty(Model.ReviewNotes))
                                    {
                                        <p>@Model.ReviewNotes</p>
                                    }
                                    else
                                    {
                                        <p class="text-muted">Değerlendirme notu eklenmemiş</p>
                                    }
                                    
                                    @if (Model.InterviewDate.HasValue)
                                    {
                                        <hr />
                                        <h6>Mülakat Tarihi:</h6>
                                        <p>@Model.InterviewDate.Value.ToString("dd.MM.yyyy HH:mm")</p>
                                    }
                                    
                                    @if (!string.IsNullOrEmpty(Model.InterviewNotes))
                                    {
                                        <h6>Mülakat Notları:</h6>
                                        <p>@Model.InterviewNotes</p>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Dördüncü Satır: Dökümanlar -->
                    @if (Model.Documents.Any())
                    {
                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h5><i class="fas fa-paperclip"></i> Dökümanlar</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table table-striped">
                                                <thead>
                                                    <tr>
                                                        <th>Dosya Adı</th>
                                                        <th>Tür</th>
                                                        <th>Boyut</th>
                                                        <th>Yükleme Tarihi</th>
                                                        <th>Durum</th>
                                                        <th>İşlemler</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var doc in Model.Documents)
                                                    {
                                                        <tr>
                                                            <td>@doc.FileName</td>
                                                            <td>@doc.DocumentTypeName</td>
                                                            <td>@doc.FileSizeFormatted</td>
                                                            <td>@doc.UploadedAt.ToString("dd.MM.yyyy")</td>
                                                            <td>
                                                                @if (doc.IsVerified)
                                                                {
                                                                    <span class="badge bg-success">Doğrulandı</span>
                                                                }
                                                                else
                                                                {
                                                                    <span class="badge bg-warning">Bekliyor</span>
                                                                }
                                                            </td>
                                                            <td>
                                                                <a href="@Url.Action("DownloadDocument", new { id = doc.Id })" class="btn btn-sm btn-primary" title="İndir">
                                                                    <i class="fas fa-download"></i>
                                                                </a>
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function changeStatus(applicationId, newStatus) {
            if (confirm('Başvuru durumunu değiştirmek istediğinizden emin misiniz?')) {
                var form = $('<form>', {
                    'method': 'post',
                    'action': '@Url.Action("ChangeStatus")'
                });
                
                form.append($('<input>', {
                    'type': 'hidden',
                    'name': 'id',
                    'value': applicationId
                }));
                
                form.append($('<input>', {
                    'type': 'hidden',
                    'name': 'newStatus',
                    'value': newStatus
                }));
                
                form.append('@Html.AntiForgeryToken()');
                
                $('body').append(form);
                form.submit();
            }
        }
    </script>
}
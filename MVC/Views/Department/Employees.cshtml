@model IEnumerable<MVC.Models.PersonListViewModel>

@{
    ViewData["Title"] = $"{ViewBag.DepartmentName} - Personeller";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@ViewData["Title"]</h1>
    <div>
        <a asp-controller="Person" asp-action="Create" class="btn btn-success me-2">
            <i class="fas fa-user-plus"></i> Yeni Personel Ekle
        </a>
        <a asp-action="Details" asp-route-id="@ViewBag.DepartmentId" class="btn btn-info me-2">
            <i class="fas fa-building"></i> Departman Detayı
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Departmanlara Dön
        </a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.TcKimlikNo)</th>
                            <th>@Html.DisplayNameFor(model => model.FullName)</th>
                            <th>@Html.DisplayNameFor(model => model.EmployeeNumber)</th>
                            <th>@Html.DisplayNameFor(model => model.Position)</th>
                            <th>@Html.DisplayNameFor(model => model.Email)</th>
                            <th>@Html.DisplayNameFor(model => model.Phone)</th>
                            <th>@Html.DisplayNameFor(model => model.HireDate)</th>
                            <th>@Html.DisplayNameFor(model => model.IsActive)</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="@(item.IsActive ? "" : "table-secondary")">
                                <td>@Html.DisplayFor(modelItem => item.TcKimlikNo)</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div>
                                            <div class="fw-bold">@Html.DisplayFor(modelItem => item.FullName)</div>
                                        </div>
                                    </div>
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.EmployeeNumber)</td>
                                <td>@Html.DisplayFor(modelItem => item.Position)</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Email))
                                    {
                                        <a href="mailto:@item.Email">@item.Email</a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                                <td>@(item.HireDate?.ToString("dd.MM.yyyy"))</td>
                                <td>
                                    @if (item.IsActive)
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Pasif</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-controller="Person" asp-action="Details" asp-route-id="@item.Id" 
                                           class="btn btn-info btn-sm" title="Detay">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-controller="Person" asp-action="Edit" asp-route-id="@item.Id" 
                                           class="btn btn-warning btn-sm" title="Düzenle">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            
            <div class="mt-3">
                <div class="row">
                    <div class="col-md-6">
                        <div class="card bg-light">
                            <div class="card-body">
                                <h6 class="card-title">
                                    <i class="fas fa-chart-bar text-primary"></i> Özet İstatistik
                                </h6>
                                <p class="card-text">
                                    <strong>Toplam Personel:</strong> @Model.Count()<br>
                                    <strong>Aktif:</strong> @Model.Count(p => p.IsActive)<br>
                                    <strong>Pasif:</strong> @Model.Count(p => !p.IsActive)
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-user-slash fa-3x text-muted mb-3"></i>
                <h4 class="text-muted">Bu departmanda henüz personel bulunmamaktadır</h4>
                <p class="text-muted">İlk personel kaydını oluşturmak için "Yeni Personel Ekle" butonunu kullanın.</p>
                <a asp-controller="Person" asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-user-plus"></i> Personel Ekle
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
}

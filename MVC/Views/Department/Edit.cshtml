@model MVC.Models.DepartmentEditViewModel

@{
    ViewData["Title"] = "Departman Düzenle";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">@Model.Name - Bilgilerini Düzenle</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="form-group mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" placeholder="Departman adını giriniz" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Departman açıklamasını giriniz (isteğe bağlı)"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="ParentDepartmentId" class="form-label"></label>
                        <select asp-for="ParentDepartmentId" class="form-select" asp-items="ViewBag.ParentDepartments">
                            <option value="">-- Ana Departman (Üst departman yok) --</option>
                        </select>
                        <span asp-validation-for="ParentDepartmentId" class="text-danger"></span>
                        <div class="form-text">Eğer bu departman başka bir departmanın alt departmanı ise üst departmanı seçiniz.</div>
                    </div>
                    
                    <div class="form-check mb-3">
                        <input asp-for="IsActive" class="form-check-input" />
                        <label asp-for="IsActive" class="form-check-label"></label>
                        <span asp-validation-for="IsActive" class="text-danger"></span>
                        <div class="form-text">Pasif departmanlar listede gizlenir ve yeni personel ataması yapılamaz.</div>
                    </div>
                    
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Güncelle
                        </button>
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                            <i class="fas fa-eye"></i> Detaya Dön
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Listeye Dön
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-exclamation-triangle text-warning"></i> Dikkat</h5>
            </div>
            <div class="card-body">
                <h6>Departman Düzenleme Kuralları</h6>
                <ul class="small text-muted">
                    <li>Departman adı değiştirilebilir ancak benzersiz olmalıdır</li>
                    <li>Üst departman değiştirilebilir ancak döngüsel bağımlılık oluşmamalıdır</li>
                    <li>Departman kendisinin alt departmanı olamaz</li>
                    <li>Pasif yapılan departmanlara yeni personel ataması yapılamaz</li>
                </ul>
                
                <div class="alert alert-warning mt-3">
                    <small>
                        <i class="fas fa-info-circle"></i>
                        Bu departmanı pasif yaparsanız, alt departmanlar ve personeller etkilenmez ancak yeni atamalar yapılamaz.
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
}

@model IEnumerable<MVC.Models.SkillTemplateListViewModel>

@{
    ViewData["Title"] = "Beceri Şablonları";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@ViewData["Title"]</h1>
    <div class="btn-group">
        <a asp-action="Analytics" class="btn btn-info">
            <i class="fas fa-chart-bar"></i> Analiz
        </a>
        <a asp-action="CreateSkillTemplate" class="btn btn-primary">
            <i class="fas fa-plus"></i> Yeni Şablon
        </a>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Beceri Adı</th>
                            <th>Kategori</th>
                            <th>Tür</th>
                            <th>Kişi Sayısı</th>
                            <th>Ort. Seviye</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@item.Name</strong>
                                    @if (!string.IsNullOrEmpty(item.Description))
                                    {
                                        <br><small class="text-muted">@item.Description.Substring(0, Math.Min(50, item.Description.Length))...</small>
                                    }
                                </td>
                                <td><span class="badge bg-secondary">@item.Category</span></td>
                                <td><span class="badge bg-info">@item.TypeText</span></td>
                                <td>@item.PersonCount</td>
                                <td>
                                    @if (item.PersonCount > 0)
                                    {
                                        <div class="d-flex align-items-center">
                                            <div class="progress me-2" style="width: 60px; height: 15px;">
                                                <div class="progress-bar bg-success" style="width: @((item.AverageLevel / 10) * 100)%"></div>
                                            </div>
                                            <span>@item.AverageLevel.ToString("F1")</span>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (item.IsActive)
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Pasif</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="SkillTemplateDetails" asp-route-id="@item.Id" 
                                           class="btn btn-outline-primary" title="Detaylar">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="EditSkillTemplate" asp-route-id="@item.Id" 
                                           class="btn btn-outline-warning" title="Düzenle">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-cogs fa-4x text-muted mb-3"></i>
                <h4 class="text-muted">Henüz beceri şablonu bulunmuyor</h4>
                <p class="text-muted">İlk beceri şablonunuzu oluşturmak için yukarıdaki "Yeni Şablon" butonunu kullanın.</p>
                <a asp-action="CreateSkillTemplate" class="btn btn-primary">
                    <i class="fas fa-plus"></i> İlk Şablonu Oluştur
                </a>
            </div>
        }
    </div>
</div>

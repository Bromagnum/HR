@model BLL.DTOs.PerformanceAnalyticsDto

@{
    ViewData["Title"] = "Performans Analitiği";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@ViewData["Title"]</h1>
    <div class="btn-group">
        <a asp-action="Index" class="btn btn-primary">
            <i class="fas fa-list"></i> Değerlendirmeler
        </a>
        <a asp-action="Periods" class="btn btn-secondary">
            <i class="fas fa-calendar"></i> Dönemler
        </a>
    </div>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Filters -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label class="form-label">Departman</label>
                @Html.DropDownList("departmentId", ViewBag.Departments as SelectList, "Tüm Departmanlar", new { @class = "form-select" })
            </div>
            <div class="col-md-4">
                <label class="form-label">Yıl</label>
                @Html.DropDownList("year", ViewBag.Years as SelectList, "Tüm Yıllar", new { @class = "form-select" })
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="fas fa-search"></i> Filtrele
                </button>
                <a asp-action="Analytics" class="btn btn-outline-secondary">
                    <i class="fas fa-times"></i> Temizle
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Summary Cards -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6 class="card-title">Toplam Değerlendirme</h6>
                        <h3 class="mb-0">@Model.TotalReviews</h3>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-chart-bar fa-2x opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card bg-success text-white h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6 class="card-title">Tamamlanan</h6>
                        <h3 class="mb-0">@Model.CompletedReviews</h3>
                        <small>%@Model.CompletionRate.ToString("F1")</small>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-check-circle fa-2x opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card bg-warning text-white h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6 class="card-title">Bekleyen</h6>
                        <h3 class="mb-0">@Model.PendingReviews</h3>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-clock fa-2x opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card bg-info text-white h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6 class="card-title">Ortalama Skor</h6>
                        <h3 class="mb-0">@Model.AverageOverallScore.ToString("F1")</h3>
                        <small>/5.0</small>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-star fa-2x opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Detailed Analytics -->
<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">
                    <i class="fas fa-chart-line"></i> Kategori Bazlı Ortalamalar
                </h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label">İş Kalitesi</label>
                    <div class="d-flex align-items-center">
                        <div class="progress me-2 flex-grow-1">
                            <div class="progress-bar bg-info" style="width: @(((double)Model.AverageJobQualityScore / 5.0) * 100)%"></div>
                        </div>
                        <span>@Model.AverageJobQualityScore.ToString("F1")/5</span>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label">Üretkenlik</label>
                    <div class="d-flex align-items-center">
                        <div class="progress me-2 flex-grow-1">
                            <div class="progress-bar bg-info" style="width: @(((double)Model.AverageProductivityScore / 5.0) * 100)%"></div>
                        </div>
                        <span>@Model.AverageProductivityScore.ToString("F1")/5</span>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label">Ekip Çalışması</label>
                    <div class="d-flex align-items-center">
                        <div class="progress me-2 flex-grow-1">
                            <div class="progress-bar bg-info" style="width: @(((double)Model.AverageTeamworkScore / 5.0) * 100)%"></div>
                        </div>
                        <span>@Model.AverageTeamworkScore.ToString("F1")/5</span>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label">İletişim</label>
                    <div class="d-flex align-items-center">
                        <div class="progress me-2 flex-grow-1">
                            <div class="progress-bar bg-info" style="width: @(((double)Model.AverageCommunicationScore / 5.0) * 100)%"></div>
                        </div>
                        <span>@Model.AverageCommunicationScore.ToString("F1")/5</span>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label">Liderlik</label>
                    <div class="d-flex align-items-center">
                        <div class="progress me-2 flex-grow-1">
                            <div class="progress-bar bg-info" style="width: @(((double)Model.AverageLeadershipScore / 5.0) * 100)%"></div>
                        </div>
                        <span>@Model.AverageLeadershipScore.ToString("F1")/5</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">
                    <i class="fas fa-building"></i> Departman Performansı
                </h5>
            </div>
            <div class="card-body">
                @if (Model.DepartmentPerformances.Any())
                {
                    @foreach (var dept in Model.DepartmentPerformances.Take(5))
                    {
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div>
                                <strong>@dept.DepartmentName</strong><br>
                                <small class="text-muted">@dept.ReviewCount değerlendirme</small>
                            </div>
                            <div class="text-end">
                                <span class="@(dept.AverageScore >= 4 ? "text-success" : dept.AverageScore >= 3 ? "text-warning" : "text-danger")">
                                    @dept.AverageScore.ToString("F1")/5
                                </span><br>
                                <small class="text-muted">%@dept.CompletionRate.ToString("F0") tamamlandı</small>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p class="text-muted text-center">Henüz departman verisi bulunmuyor</p>
                }
            </div>
        </div>
    </div>
</div>

<!-- Completion Rate Chart -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">
                    <i class="fas fa-chart-pie"></i> Tamamlanma Oranı
                </h5>
            </div>
            <div class="card-body">
                <div class="progress" style="height: 30px;">
                    <div class="progress-bar bg-success" 
                         style="width: @Model.CompletionRate%"
                         role="progressbar">
                        %@Model.CompletionRate.ToString("F1") Tamamlandı
                    </div>
                    <div class="progress-bar bg-warning" 
                         style="width: @(100 - Model.CompletionRate)%"
                         role="progressbar">
                        %@((100 - Model.CompletionRate).ToString("F1")) Bekliyor
                    </div>
                </div>
                <div class="row mt-3 text-center">
                    <div class="col-md-4">
                        <h6>@Model.TotalReviews</h6>
                        <small class="text-muted">Toplam</small>
                    </div>
                    <div class="col-md-4">
                        <h6 class="text-success">@Model.CompletedReviews</h6>
                        <small class="text-muted">Tamamlanan</small>
                    </div>
                    <div class="col-md-4">
                        <h6 class="text-warning">@Model.PendingReviews</h6>
                        <small class="text-muted">Bekleyen</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

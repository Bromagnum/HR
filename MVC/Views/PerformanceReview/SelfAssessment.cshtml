@model IEnumerable<BLL.DTOs.PerformanceReviewListDto>

@{
    ViewData["Title"] = "Öz Değerlendirmelerim";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@ViewData["Title"]</h1>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Tüm Değerlendirmeler
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    @if (Model.Any())
    {
        @foreach (var review in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">@review.ReviewPeriodName</h5>
                        <span class="badge @(review.Status switch {
                            DAL.Entities.ReviewStatus.EmployeeReview => "bg-warning",
                            DAL.Entities.ReviewStatus.ManagerReview => "bg-primary",
                            DAL.Entities.ReviewStatus.Completed => "bg-success",
                            DAL.Entities.ReviewStatus.Approved => "bg-success",
                            _ => "bg-secondary"
                        })">
                            @review.StatusText
                        </span>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <strong>Değerlendiren:</strong> @review.ReviewerName<br>
                            <strong>Genel Skor:</strong> 
                            <span class="@(review.OverallScore >= 4 ? "text-success" : review.OverallScore >= 3 ? "text-warning" : "text-danger")">
                                @review.OverallScore/5
                            </span>
                        </div>

                        <div class="mb-3">
                            <strong>Oluşturulma:</strong> @review.CreatedAt.ToString("dd.MM.yyyy")<br>
                            @if (review.SubmittedAt.HasValue)
                            {
                                <strong>Gönderilme:</strong> @review.SubmittedAt.Value.ToString("dd.MM.yyyy")<br>
                            }
                        </div>

                        @if (review.IsSelfAssessmentCompleted)
                        {
                            <div class="alert alert-success">
                                <i class="fas fa-check-circle"></i> Öz değerlendirme tamamlandı
                            </div>
                        }
                        else if (review.Status == DAL.Entities.ReviewStatus.EmployeeReview)
                        {
                            <div class="alert alert-warning">
                                <i class="fas fa-clock"></i> Öz değerlendirme bekleniyor
                            </div>
                        }

                        <div class="d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@review.Id" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-eye"></i> Detaylar
                            </a>
                            
                            @if (!review.IsSelfAssessmentCompleted && review.Status == DAL.Entities.ReviewStatus.EmployeeReview)
                            {
                                <a asp-action="CompleteSelfAssessment" asp-route-id="@review.Id" class="btn btn-warning btn-sm">
                                    <i class="fas fa-user-check"></i> Öz Değerlendirme Yap
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="card">
                <div class="card-body text-center py-5">
                    <i class="fas fa-user-check fa-4x text-muted mb-3"></i>
                    <h4 class="text-muted">Henüz öz değerlendirme bulunmuyor</h4>
                    <p class="text-muted">
                        Yöneticiniz tarafından size bir performans değerlendirmesi atandığında, 
                        burada öz değerlendirmenizi tamamlayabileceksiniz.
                    </p>
                </div>
            </div>
        </div>
    }
</div>

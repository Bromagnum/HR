@model IEnumerable<BLL.DTOs.PerformanceReviewListDto>

@{
    ViewData["Title"] = "Performans Değerlendirmeleri";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@ViewData["Title"]</h1>
    <div class="btn-group">
        @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
        {
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Yeni Değerlendirme
            </a>
            <a asp-action="Analytics" class="btn btn-info">
                <i class="fas fa-chart-bar"></i> Analitik
            </a>
            <a asp-action="Periods" class="btn btn-secondary">
                <i class="fas fa-calendar"></i> Dönemler
            </a>
        }
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Filters -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label class="form-label">Departman</label>
                @Html.DropDownList("departmentId", ViewBag.Departments as SelectList, "Tüm Departmanlar", new { @class = "form-select" })
            </div>
            <div class="col-md-4">
                <label class="form-label">Durum</label>
                @Html.DropDownList("status", ViewBag.Statuses as SelectList, "Tüm Durumlar", new { @class = "form-select" })
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="fas fa-search"></i> Filtrele
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-times"></i> Temizle
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Performance Reviews Table -->
<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Personel</th>
                            <th>Departman</th>
                            <th>Değerlendirme Dönemi</th>
                            <th>Değerlendiren</th>
                            <th>Genel Skor</th>
                            <th>Durum</th>
                            <th>Tarih</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@item.PersonName</strong>
                                </td>
                                <td>@item.DepartmentName</td>
                                <td>@item.ReviewPeriodName</td>
                                <td>@item.ReviewerName</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="progress me-2" style="width: 60px; height: 20px;">
                                            <div class="progress-bar @(item.OverallScore >= 4 ? "bg-success" : item.OverallScore >= 3 ? "bg-warning" : "bg-danger")" 
                                                 style="width: @((item.OverallScore / 5.0) * 100)%"></div>
                                        </div>
                                        <span class="@(item.OverallScore >= 4 ? "text-success" : item.OverallScore >= 3 ? "text-warning" : "text-danger")">
                                            @item.OverallScore/5
                                        </span>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge @(item.Status switch {
                                        DAL.Entities.ReviewStatus.Draft => "bg-secondary",
                                        DAL.Entities.ReviewStatus.InProgress => "bg-info",
                                        DAL.Entities.ReviewStatus.EmployeeReview => "bg-warning",
                                        DAL.Entities.ReviewStatus.ManagerReview => "bg-primary",
                                        DAL.Entities.ReviewStatus.Completed => "bg-success",
                                        DAL.Entities.ReviewStatus.Approved => "bg-success",
                                        _ => "bg-secondary"
                                    })">
                                        @item.StatusText
                                    </span>
                                </td>
                                <td>@item.CreatedAt.ToString("dd.MM.yyyy")</td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@item.Id" 
                                           class="btn btn-outline-primary" title="Detaylar">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        @if (item.Status == DAL.Entities.ReviewStatus.Draft || item.Status == DAL.Entities.ReviewStatus.InProgress)
                                        {
                                            <a asp-action="Edit" asp-route-id="@item.Id" 
                                               class="btn btn-outline-warning" title="Düzenle">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        }
                                        @if (item.Status == DAL.Entities.ReviewStatus.Completed && (User.IsInRole("Admin") || User.IsInRole("Manager")))
                                        {
                                            <form asp-action="Approve" asp-route-id="@item.Id" method="post" class="d-inline">
                                                <button type="submit" class="btn btn-outline-success btn-sm" title="Onayla"
                                                        onclick="return confirm('Bu değerlendirmeyi onaylamak istediğinizden emin misiniz?')">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-chart-bar fa-4x text-muted mb-3"></i>
                <h4 class="text-muted">Henüz performans değerlendirmesi bulunmuyor</h4>
                <p class="text-muted">İlk değerlendirmeyi oluşturmak için "Yeni Değerlendirme" butonunu kullanın.</p>
                @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                {
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> İlk Değerlendirmeyi Oluştur
                    </a>
                }
            </div>
        }
    </div>
</div>

@model IEnumerable<BLL.DTOs.ReviewPeriodListDto>

@{
    ViewData["Title"] = "Değerlendirme Dönemleri";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@ViewData["Title"]</h1>
    <div class="btn-group">
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="CreatePeriod" class="btn btn-primary">
                <i class="fas fa-plus"></i> Yeni Dönem
            </a>
        }
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-chart-bar"></i> Değerlendirmeler
        </a>
        <a asp-action="Analytics" class="btn btn-info">
            <i class="fas fa-chart-pie"></i> Analitik
        </a>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Dönem Adı</th>
                            <th>Tür</th>
                            <th>Dönem Tarihleri</th>
                            <th>Değerlendirme Tarihleri</th>
                            <th>Durum</th>
                            <th>İlerleme</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var period in Model)
                        {
                            <tr class="@(period.IsCurrentPeriod ? "table-info" : "")">
                                <td>
                                    <strong>@period.Name</strong>
                                    @if (period.IsCurrentPeriod)
                                    {
                                        <span class="badge bg-success ms-2">Mevcut</span>
                                    }
                                    @if (!string.IsNullOrEmpty(period.Description))
                                    {
                                        <br><small class="text-muted">@period.Description</small>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-secondary">@period.TypeText</span>
                                </td>
                                <td>
                                    @period.StartDate.ToString("dd.MM.yyyy")<br>
                                    <small class="text-muted">- @period.EndDate.ToString("dd.MM.yyyy")</small>
                                </td>
                                <td>
                                    @period.ReviewStartDate.ToString("dd.MM.yyyy")<br>
                                    <small class="text-muted">- @period.ReviewEndDate.ToString("dd.MM.yyyy")</small>
                                </td>
                                <td>
                                    @if (period.IsActive)
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Pasif</span>
                                    }
                                </td>
                                <td>
                                    @if (period.ReviewCount > 0)
                                    {
                                        var completionPercentage = (decimal)period.CompletedReviewCount / period.ReviewCount * 100;
                                        <div class="progress" style="height: 20px;">
                                            <div class="progress-bar @(completionPercentage >= 80 ? "bg-success" : completionPercentage >= 50 ? "bg-warning" : "bg-danger")" 
                                                 style="width: @(completionPercentage)%">
                                                @period.CompletedReviewCount/@period.ReviewCount
                                            </div>
                                        </div>
                                        <small class="text-muted">%@completionPercentage.ToString("F0")</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">0/0</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="#" class="btn btn-outline-primary" title="Detaylar">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <a href="#" class="btn btn-outline-warning" title="Düzenle">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-calendar fa-4x text-muted mb-3"></i>
                <h4 class="text-muted">Henüz değerlendirme dönemi bulunmuyor</h4>
                <p class="text-muted">İlk değerlendirme dönemini oluşturmak için "Yeni Dönem" butonunu kullanın.</p>
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="CreatePeriod" class="btn btn-primary">
                        <i class="fas fa-plus"></i> İlk Dönemi Oluştur
                    </a>
                }
            </div>
        }
    </div>
</div>

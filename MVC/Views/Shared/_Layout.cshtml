<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - İKYS</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVC.styles.css" asp-append-version="true" />
    <!-- Font Awesome CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">İKYS</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-users"></i> Personel
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Person" asp-action="Index">
                                    <i class="fas fa-list"></i> Personel Listesi
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="Person" asp-action="Create">
                                    <i class="fas fa-user-plus"></i> Yeni Personel
                                </a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-building"></i> Departman
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Department" asp-action="Index">
                                    <i class="fas fa-list"></i> Departman Listesi
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="Department" asp-action="Tree">
                                    <i class="fas fa-sitemap"></i> Ağaç Görünümü
                                </a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-controller="Department" asp-action="Create">
                                    <i class="fas fa-plus"></i> Yeni Departman
                                </a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-graduation-cap"></i> Eğitim
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Education" asp-action="Index">
                                    <i class="fas fa-list"></i> Eğitim Listesi
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="Education" asp-action="Ongoing">
                                    <i class="fas fa-clock"></i> Devam Eden Eğitimler
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="Education" asp-action="Completed">
                                    <i class="fas fa-check-circle"></i> Tamamlanan Eğitimler
                                </a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-controller="Education" asp-action="Create">
                                    <i class="fas fa-plus"></i> Yeni Eğitim Ekle
                                </a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-certificate"></i> Yeterlilik
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Qualification" asp-action="Index">
                                    <i class="fas fa-list"></i> Yeterlilik Listesi
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="Qualification" asp-action="ExpiringSoon">
                                    <i class="fas fa-clock"></i> Süresi Yaklaşanlar
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="Qualification" asp-action="Expired">
                                    <i class="fas fa-exclamation-triangle"></i> Süresi Dolmuşlar
                                </a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-controller="Qualification" asp-action="Create">
                                    <i class="fas fa-plus"></i> Yeni Yeterlilik Ekle
                                </a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-briefcase"></i> Pozisyon
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Position" asp-action="Index">
                                    <i class="fas fa-list"></i> Pozisyon Listesi
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="Position" asp-action="Available">
                                    <i class="fas fa-check-circle"></i> Müsait Pozisyonlar
                                </a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><h6 class="dropdown-header">Seviyeye Göre</h6></li>
                                <li><a class="dropdown-item" asp-controller="Position" asp-action="ByLevel" asp-route-level="Junior">
                                    <i class="fas fa-seedling"></i> Junior
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="Position" asp-action="ByLevel" asp-route-level="Senior">
                                    <i class="fas fa-star"></i> Senior
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="Position" asp-action="ByLevel" asp-route-level="Manager">
                                    <i class="fas fa-user-tie"></i> Manager
                                </a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-controller="Position" asp-action="Create">
                                    <i class="fas fa-plus"></i> Yeni Pozisyon Ekle
                                </a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-clock"></i> Çalışma Saati
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="WorkLog" asp-action="Index">
                                    <i class="fas fa-list"></i> Çalışma Kayıtları
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="WorkLog" asp-action="CheckIn">
                                    <i class="fas fa-sign-in-alt"></i> Giriş Yap
                                </a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><h6 class="dropdown-header">Raporlar</h6></li>
                                <li><a class="dropdown-item" asp-controller="WorkLog" asp-action="TimeSheet">
                                    <i class="fas fa-table"></i> Zaman Çizelgesi
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="WorkLog" asp-action="OvertimeReport">
                                    <i class="fas fa-clock"></i> Mesai Raporu
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="WorkLog" asp-action="LateArrivalReport">
                                    <i class="fas fa-exclamation-triangle"></i> Geç Gelme Raporu
                                </a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-controller="WorkLog" asp-action="Create">
                                    <i class="fas fa-plus"></i> Yeni Kayıt Ekle
                                </a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-calendar-check"></i> İzin Yönetimi
                            </a>
                            <ul class="dropdown-menu">
                                <li><h6 class="dropdown-header">İzin Türleri</h6></li>
                                <li><a class="dropdown-item" asp-controller="LeaveType" asp-action="Index">
                                    <i class="fas fa-list"></i> İzin Türleri
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="LeaveType" asp-action="Active">
                                    <i class="fas fa-check-circle"></i> Aktif İzin Türleri
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="LeaveType" asp-action="Create">
                                    <i class="fas fa-plus"></i> Yeni İzin Türü
                                </a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><h6 class="dropdown-header">İzin Talepleri</h6></li>
                                <li><a class="dropdown-item" asp-controller="Leave" asp-action="Index">
                                    <i class="fas fa-calendar-alt"></i> Tüm İzinler
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="Leave" asp-action="PendingApprovals">
                                    <i class="fas fa-hourglass-half"></i> Onay Bekleyenler
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="Leave" asp-action="Calendar">
                                    <i class="fas fa-calendar"></i> İzin Takvimi
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="Leave" asp-action="Create">
                                    <i class="fas fa-plus"></i> Yeni İzin Talebi
                                </a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - İnsan Kaynakları Yönetim Sistemi (İKYS)
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- SheetJS for Excel export functionality -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

@model IEnumerable<MVC.Models.LeaveBalanceListViewModel>
@{
    ViewData["Title"] = "İzin Bakiye Yönetimi";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-balance-scale text-primary me-2"></i>
                        İzin Bakiye Yönetimi
                    </h3>
                    <div class="btn-group">
                        <a asp-action="Create" class="btn btn-success">
                            <i class="fas fa-plus me-1"></i>
                            Yeni Bakiye
                        </a>
                        <a asp-action="Adjust" class="btn btn-warning">
                            <i class="fas fa-edit me-1"></i>
                            Bakiye Düzelt
                        </a>
                        <a asp-action="Statistics" class="btn btn-info">
                            <i class="fas fa-chart-bar me-1"></i>
                            İstatistikler
                        </a>
                        <a asp-action="LowBalanceAlerts" class="btn btn-danger">
                            <i class="fas fa-exclamation-triangle me-1"></i>
                            Düşük Bakiyeler
                        </a>
                    </div>
                </div>

                <!-- Filter Section -->
                <div class="card-body">
                    <form method="get" class="row g-3 mb-4">
                        <div class="col-md-3">
                            <label class="form-label">Personel</label>
                            <select name="personId" class="form-select">
                                <option value="">Tümü</option>
                                <!-- Options will be populated by controller -->
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">İzin Türü</label>
                            <select name="leaveTypeId" class="form-select">
                                <option value="">Tümü</option>
                                <!-- Options will be populated by controller -->
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Departman</label>
                            <select name="departmentId" class="form-select">
                                <option value="">Tümü</option>
                                <!-- Options will be populated by controller -->
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Yıl</label>
                            <input name="year" type="number" class="form-control" value="@DateTime.Now.Year" min="2020" max="2030" />
                        </div>
                        <div class="col-md-1 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </form>

                    <!-- Statistics Cards -->
                    <div class="row mb-4">
                        <div class="col-md-3">
                            <div class="card bg-primary text-white">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h4 class="mb-0">@Model.Count()</h4>
                                            <p class="mb-0">Toplam Bakiye</p>
                                        </div>
                                        <div class="align-self-center">
                                            <i class="fas fa-balance-scale fa-2x"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-success text-white">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h4 class="mb-0">@Model.Sum(b => b.AllocatedDays)</h4>
                                            <p class="mb-0">Toplam Tahsis</p>
                                        </div>
                                        <div class="align-self-center">
                                            <i class="fas fa-calendar-plus fa-2x"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-info text-white">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h4 class="mb-0">@Model.Sum(b => b.UsedDays)</h4>
                                            <p class="mb-0">Kullanılan</p>
                                        </div>
                                        <div class="align-self-center">
                                            <i class="fas fa-calendar-check fa-2x"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-warning text-dark">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h4 class="mb-0">@Model.Sum(b => b.RemainingDays)</h4>
                                            <p class="mb-0">Kalan</p>
                                        </div>
                                        <div class="align-self-center">
                                            <i class="fas fa-calendar-minus fa-2x"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Data Table -->
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Personel</th>
                                    <th>İzin Türü</th>
                                    <th>Yıl</th>
                                    <th>Tahsis</th>
                                    <th>Devir</th>
                                    <th>Kullanılan</th>
                                    <th>Kalan</th>
                                    <th>Durum</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="@(item.RemainingDays < 2 ? "table-warning" : "")">
                                        <td>
                                            <div>
                                                <strong>@item.PersonName</strong>
                                                <br />
                                                <small class="text-muted">@item.EmployeeNumber</small>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge" style="background-color: @item.LeaveTypeColor; color: white;">
                                                @item.LeaveTypeName
                                            </span>
                                        </td>
                                        <td>@item.Year</td>
                                        <td>
                                            <span class="badge bg-primary">@item.AllocatedDays gün</span>
                                        </td>
                                        <td>
                                            <span class="badge bg-info">@item.CarriedOverDays gün</span>
                                        </td>
                                        <td>
                                            <span class="badge bg-success">@item.UsedDays gün</span>
                                        </td>
                                        <td>
                                            <span class="badge @(item.RemainingDays < 2 ? "bg-danger" : "bg-secondary")">
                                                @item.RemainingDays gün
                                            </span>
                                        </td>
                                        <td>
                                            @if (item.RemainingDays < 2)
                                            {
                                                <span class="badge bg-danger">
                                                    <i class="fas fa-exclamation-triangle me-1"></i>
                                                    Düşük
                                                </span>
                                            }
                                            else if (item.RemainingDays > item.AllocatedDays * 0.8m)
                                            {
                                                <span class="badge bg-warning text-dark">
                                                    <i class="fas fa-clock me-1"></i>
                                                    Kullanılmamış
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">
                                                    <i class="fas fa-check me-1"></i>
                                                    Normal
                                                </span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info" title="Detaylar">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning" title="Düzenle">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="Summary" asp-route-personId="@item.PersonId" asp-route-year="@item.Year" class="btn btn-primary" title="Özet">
                                                    <i class="fas fa-chart-pie"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    @if (!Model.Any())
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-balance-scale fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">İzin bakiyesi bulunamadı</h5>
                            <p class="text-muted">Filtreleri değiştirerek tekrar deneyin veya yeni bir bakiye oluşturun.</p>
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus me-1"></i>
                                İlk Bakiyeyi Ekle
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

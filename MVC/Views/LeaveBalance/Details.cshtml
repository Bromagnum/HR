@model MVC.Models.LeaveBalanceDetailViewModel
@{
    ViewData["Title"] = "İzin Bakiyesi Detayları";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-info-circle text-info me-2"></i>
                        İzin Bakiyesi Detayları
                    </h3>
                    <div class="btn-group">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="fas fa-edit me-1"></i>
                            Düzenle
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>
                            Geri Dön
                        </a>
                    </div>
                </div>

                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="border rounded p-3 mb-4">
                                <h5 class="text-primary mb-3">
                                    <i class="fas fa-user me-2"></i>
                                    Personel Bilgileri
                                </h5>
                                <div class="row mb-2">
                                    <div class="col-sm-4"><strong>Personel:</strong></div>
                                    <div class="col-sm-8">@Model.PersonName</div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-sm-4"><strong>Sicil No:</strong></div>
                                    <div class="col-sm-8">@Model.EmployeeNumber</div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-4"><strong>Departman:</strong></div>
                                    <div class="col-sm-8">@Model.DepartmentName</div>
                                </div>
                            </div>

                            <div class="border rounded p-3 mb-4">
                                <h5 class="text-primary mb-3">
                                    <i class="fas fa-calendar-check me-2"></i>
                                    İzin Türü Bilgileri
                                </h5>
                                <div class="row mb-2">
                                    <div class="col-sm-4"><strong>İzin Türü:</strong></div>
                                    <div class="col-sm-8">
                                        <span class="badge" style="background-color: @Model.LeaveTypeColor; color: white;">
                                            @Model.LeaveTypeName
                                        </span>
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-sm-4"><strong>Yıl:</strong></div>
                                    <div class="col-sm-8">@Model.Year</div>
                                </div>
                                @if (Model.LeaveTypeRequiresDocument)
                                {
                                    <div class="row">
                                        <div class="col-sm-4"><strong>Belge Gerekli:</strong></div>
                                        <div class="col-sm-8">
                                            <span class="badge bg-warning text-dark">Evet</span>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="border rounded p-3 mb-4">
                                <h5 class="text-primary mb-3">
                                    <i class="fas fa-balance-scale me-2"></i>
                                    Bakiye Detayları
                                </h5>
                                
                                <div class="row mb-3">
                                    <div class="col-sm-6">
                                        <div class="card bg-primary text-white">
                                            <div class="card-body text-center">
                                                <h4 class="mb-0">@Model.AllocatedDays</h4>
                                                <small>Tahsis Edilen</small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="card bg-info text-white">
                                            <div class="card-body text-center">
                                                <h4 class="mb-0">@Model.CarriedOverDays</h4>
                                                <small>Devir</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-sm-6">
                                        <div class="card bg-success text-white">
                                            <div class="card-body text-center">
                                                <h4 class="mb-0">@Model.UsedDays</h4>
                                                <small>Kullanılan</small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="card bg-warning text-dark">
                                            <div class="card-body text-center">
                                                <h4 class="mb-0">@Model.RemainingDays</h4>
                                                <small>Kalan</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                @if (Model.MonthlyAccrual > 0)
                                {
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="card bg-light">
                                                <div class="card-body text-center">
                                                    <h5 class="mb-0">@Model.MonthlyAccrual gün/ay</h5>
                                                    <small class="text-muted">Aylık Tahakkuk</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>

                            <!-- Usage Progress -->
                            <div class="border rounded p-3 mb-4">
                                <h5 class="text-primary mb-3">
                                    <i class="fas fa-chart-bar me-2"></i>
                                    Kullanım Durumu
                                </h5>
                                
                                @{
                                    var totalAvailable = Model.AllocatedDays + Model.CarriedOverDays;
                                    var usagePercentage = totalAvailable > 0 ? (Model.UsedDays / totalAvailable) * 100 : 0;
                                    var progressClass = usagePercentage > 80 ? "bg-danger" : usagePercentage > 60 ? "bg-warning" : "bg-success";
                                }
                                
                                <div class="mb-3">
                                    <div class="d-flex justify-content-between mb-1">
                                        <span>Kullanım Oranı</span>
                                        <span>@usagePercentage.ToString("F1")%</span>
                                    </div>
                                    <div class="progress">
                                        <div class="progress-bar @progressClass" role="progressbar" style="width: @usagePercentage.ToString("F1")%" aria-valuenow="@usagePercentage" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>

                                <div class="small text-muted">
                                    <div class="d-flex justify-content-between">
                                        <span>Toplam Mevcut: @totalAvailable gün</span>
                                        <span>Kullanılan: @Model.UsedDays gün</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Audit Information -->
                    <div class="border rounded p-3 bg-light">
                        <h6 class="text-muted mb-3">
                            <i class="fas fa-history me-2"></i>
                            Denetim Bilgileri
                        </h6>
                        <div class="row">
                            <div class="col-md-3">
                                <strong>Oluşturulma:</strong>
                                <br />
                                @Model.CreatedAt.ToString("dd MMMM yyyy HH:mm")
                            </div>
                            @if (Model.UpdatedAt.HasValue)
                            {
                                <div class="col-md-3">
                                    <strong>Güncellenme:</strong>
                                    <br />
                                    @Model.UpdatedAt.Value.ToString("dd MMMM yyyy HH:mm")
                                </div>
                            }
                            <div class="col-md-3">
                                <strong>Son Hesaplama:</strong>
                                <br />
                                @Model.LastCalculated?.ToString("dd MMMM yyyy HH:mm") ?? "Hiç hesaplanmadı"
                            </div>
                            <div class="col-md-3">
                                <strong>Aktif:</strong>
                                <br />
                                @if (Model.IsActive)
                                {
                                    <span class="badge bg-success">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Pasif</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

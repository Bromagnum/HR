@model MVC.Models.LeaveBalanceStatisticsViewModel
@{
    ViewData["Title"] = "İzin Bakiye Özeti";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-chart-bar text-info me-2"></i>
                        İzin Bakiye Özeti
                    </h3>
                    <div class="card-tools">
                        <a asp-action="Index" class="btn btn-sm btn-secondary">
                            <i class="fas fa-list me-1"></i>
                            Bakiye Listesi
                        </a>
                    </div>
                </div>
                
                <div class="card-body">
                    <!-- Summary Statistics -->
                    <div class="row mb-4">
                        <div class="col-lg-3 col-md-6">
                            <div class="card bg-primary text-white">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h3 class="card-title">@Model.TotalPersonnel</h3>
                                            <p class="card-text">Toplam Personel</p>
                                        </div>
                                        <div class="align-self-center">
                                            <i class="fas fa-users fa-2x"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-lg-3 col-md-6">
                            <div class="card bg-success text-white">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h3 class="card-title">@Model.TotalActiveBalances</h3>
                                            <p class="card-text">Aktif Bakiyeler</p>
                                        </div>
                                        <div class="align-self-center">
                                            <i class="fas fa-calendar-check fa-2x"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-lg-3 col-md-6">
                            <div class="card bg-warning text-white">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h3 class="card-title">@Model.AverageRemainingDays.ToString("F1")</h3>
                                            <p class="card-text">Ort. Kalan Gün</p>
                                        </div>
                                        <div class="align-self-center">
                                            <i class="fas fa-clock fa-2x"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-lg-3 col-md-6">
                            <div class="card bg-info text-white">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h3 class="card-title">@DateTime.Now.Year</h3>
                                            <p class="card-text">Mevcut Yıl</p>
                                        </div>
                                        <div class="align-self-center">
                                            <i class="fas fa-calendar-alt fa-2x"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Recent Leave Balances -->
                    @if (Model.RecentBalances?.Any() == true)
                    {
                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h5 class="card-title mb-0">
                                            <i class="fas fa-history text-secondary me-2"></i>
                                            Son Güncellenen Bakiyeler
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table table-striped table-hover">
                                                <thead class="table-dark">
                                                    <tr>
                                                        <th>Personel</th>
                                                        <th>İzin Türü</th>
                                                        <th>Yıl</th>
                                                        <th>Toplam Hak</th>
                                                        <th>Kullanılan</th>
                                                        <th>Kalan</th>
                                                        <th>Güncelleme</th>
                                                        <th>İşlemler</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var balance in Model.RecentBalances)
                                                    {
                                                        <tr>
                                                            <td>
                                                                <strong>@balance.PersonName</strong>
                                                                @if (!string.IsNullOrEmpty(balance.DepartmentName))
                                                                {
                                                                    <br><small class="text-muted">@balance.DepartmentName</small>
                                                                }
                                                            </td>
                                                            <td>
                                                                <span class="badge bg-primary">@balance.LeaveTypeName</span>
                                                            </td>
                                                            <td>
                                                                <span class="badge bg-info">@balance.Year</span>
                                                            </td>
                                                            <td>
                                                                <span class="fw-bold text-success">@balance.TotalDays gün</span>
                                                            </td>
                                                            <td>
                                                                <span class="fw-bold text-warning">@balance.UsedDays gün</span>
                                                            </td>
                                                            <td>
                                                                <span class="fw-bold @(balance.RemainingDays > 5 ? "text-success" : balance.RemainingDays > 0 ? "text-warning" : "text-danger")">
                                                                    @balance.RemainingDays gün
                                                                </span>
                                                            </td>
                                                            <td>
                                                                @if (balance.UpdatedAt.HasValue)
                                                                {
                                                                    <small class="text-muted">@balance.UpdatedAt.Value.ToString("dd.MM.yyyy HH:mm")</small>
                                                                }
                                                                else
                                                                {
                                                                    <small class="text-muted">-</small>
                                                                }
                                                            </td>
                                                            <td>
                                                                <div class="btn-group" role="group">
                                                                    <a asp-action="Details" asp-route-id="@balance.Id" 
                                                                       class="btn btn-sm btn-outline-info" title="Detaylar">
                                                                        <i class="fas fa-eye"></i>
                                                                    </a>
                                                                    <a asp-action="Edit" asp-route-id="@balance.Id" 
                                                                       class="btn btn-sm btn-outline-primary" title="Düzenle">
                                                                        <i class="fas fa-edit"></i>
                                                                    </a>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                        
                                        <div class="mt-3">
                                            <a asp-action="Index" class="btn btn-primary">
                                                <i class="fas fa-list me-1"></i>
                                                Tüm Bakiyeleri Görüntüle
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="row">
                            <div class="col-12">
                                <div class="alert alert-info text-center">
                                    <i class="fas fa-info-circle fa-2x mb-3"></i>
                                    <h5>Henüz İzin Bakiyesi Bulunmuyor</h5>
                                    <p class="mb-0">Personeller için izin bakiyeleri oluşturmaya başlayın.</p>
                                    <div class="mt-3">
                                        <a asp-action="Create" class="btn btn-primary">
                                            <i class="fas fa-plus me-1"></i>
                                            Yeni Bakiye Oluştur
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            });
        });
    </script>
}

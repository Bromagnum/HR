@model MVC.Models.LoginViewModel
@{
    ViewData["Title"] = "Giriş Yap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7 col-sm-9">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header">
                    <h3 class="text-center font-weight-light my-4">
                        <i class="fas fa-sign-in-alt me-2"></i>Giriş Yap
                    </h3>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    
                    @if (TempData["InfoMessage"] != null)
                    {
                        <div class="alert alert-info alert-dismissible fade show" role="alert">
                            <i class="fas fa-info-circle me-2"></i>@TempData["InfoMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form action="/Auth/Login" method="post" enctype="application/x-www-form-urlencoded">
                        @Html.AntiForgeryToken()
                        @if (!string.IsNullOrEmpty(ViewData["ReturnUrl"]?.ToString()))
                        {
                            <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
                        }
                        
                        <div class="form-floating mb-3">
                            <input name="Email" class="form-control" id="inputEmail" type="email" placeholder="admin@ikys.com" required />
                            <label for="inputEmail">Email Adresi</label>
                        </div>
                        
                        <div class="form-floating mb-3">
                            <input name="Password" class="form-control" id="inputPassword" type="password" placeholder="Admin123!" required />
                            <label for="inputPassword">Şifre</label>
                        </div>
                        
                        <div class="form-check mb-3">
                            <input name="RememberMe" class="form-check-input" id="inputRememberPassword" type="checkbox" value="true" />
                            <input name="RememberMe" type="hidden" value="false" />
                            <label class="form-check-label" for="inputRememberPassword">Beni Hatırla</label>
                        </div>
                        
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="text-danger mb-3">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <div>@error.ErrorMessage</div>
                                }
                            </div>
                        }
                        
                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                            <a class="small" asp-controller="Auth" asp-action="ForgotPassword">Şifremi Unuttum</a>
                            <button class="btn btn-primary" type="submit">
                                <i class="fas fa-sign-in-alt me-1"></i>Giriş Yap
                            </button>
                        </div>
                        
                        <!-- Debug: Form information -->
                        <div class="mt-2">
                            <small class="text-muted">
                                <strong>Form Action:</strong> /Auth/Login | <strong>Method:</strong> POST | <strong>Port:</strong> 8080<br>
                                <strong>Test:</strong> admin@ikys.com / Admin123!
                            </small>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center py-3">
                    <div class="small text-muted">
                        <i class="fas fa-info-circle me-1"></i>
                        Hesap oluşturma için departman yöneticinizle iletişime geçin.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@{
    ViewData["Title"] = "Erişim Reddedildi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="text-center mt-5">
                <div class="error mx-auto" data-text="403">
                    <i class="fas fa-ban fa-5x text-danger mb-4"></i>
                </div>
                <p class="fs-3"><span class="text-danger">Oops!</span> Erişim Reddedildi</p>
                <p class="lead">
                    Bu sayfaya erişim yetkiniz bulunmamaktadır.
                </p>
                <div class="alert alert-warning" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>Erişim Reddedildi (403)</strong><br>
                    Bu kaynağa erişmek için yeterli yetkiniz yok. Lütfen sistem yöneticisi ile iletişime geçin.
                </div>
                <div class="d-flex justify-content-center gap-3 mt-4">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                        <i class="fas fa-home me-1"></i>Ana Sayfaya Dön
                    </a>
                    <a href="javascript:history.back()" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Geri Dön
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.error {
    font-size: 7rem;
    position: relative;
}

.error:before {
    content: attr(data-text);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    color: #e74c3c;
    z-index: -1;
    opacity: 0.1;
    font-weight: bold;
}
</style>

@model MVC.Models.ChangePasswordViewModel
@{
    ViewData["Title"] = "Şifre Değiştir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">
        <i class="fas fa-key me-2"></i>Şifre Değiştir
    </h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Ana Sayfa</a></li>
        <li class="breadcrumb-item"><a asp-controller="Auth" asp-action="Profile">Profil</a></li>
        <li class="breadcrumb-item active">Şifre Değiştir</li>
    </ol>

    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header">
                    <h3 class="text-center font-weight-light my-4">
                        <i class="fas fa-lock me-2"></i>Şifre Değiştir
                    </h3>
                </div>
                <div class="card-body">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-controller="Auth" asp-action="ChangePassword" method="post">
                        @Html.AntiForgeryToken()
                        
                        <div class="form-floating mb-3">
                            <input asp-for="CurrentPassword" class="form-control" id="inputCurrentPassword" type="password" placeholder="Mevcut Şifre" />
                            <label for="inputCurrentPassword">Mevcut Şifre</label>
                            <span asp-validation-for="CurrentPassword" class="text-danger small"></span>
                        </div>
                        
                        <div class="form-floating mb-3">
                            <input asp-for="NewPassword" class="form-control" id="inputNewPassword" type="password" placeholder="Yeni Şifre" />
                            <label for="inputNewPassword">Yeni Şifre</label>
                            <span asp-validation-for="NewPassword" class="text-danger small"></span>
                        </div>
                        
                        <div class="form-floating mb-3">
                            <input asp-for="ConfirmNewPassword" class="form-control" id="inputConfirmNewPassword" type="password" placeholder="Yeni Şifre Tekrarı" />
                            <label for="inputConfirmNewPassword">Yeni Şifre Tekrarı</label>
                            <span asp-validation-for="ConfirmNewPassword" class="text-danger small"></span>
                        </div>
                        
                        <div class="alert alert-info small">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Şifre Gereksinimleri:</strong>
                            <ul class="mb-0 mt-2">
                                <li>En az 6 karakter olmalıdır</li>
                                <li>En az bir rakam içermelidir</li>
                                <li>En az bir küçük harf içermelidir</li>
                            </ul>
                        </div>
                        
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                            <a asp-controller="Auth" asp-action="Profile" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Geri Dön
                            </a>
                            <button class="btn btn-primary" type="submit">
                                <i class="fas fa-save me-1"></i>Şifreyi Değiştir
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        // Password strength indicator
        document.getElementById('inputNewPassword').addEventListener('input', function(e) {
            const password = e.target.value;
            const requirements = {
                length: password.length >= 6,
                number: /\d/.test(password),
                lowercase: /[a-z]/.test(password)
            };
            
            // Visual feedback for password requirements
            let strength = Object.values(requirements).filter(Boolean).length;
            let strengthText = '';
            let strengthClass = '';
            
            if (strength === 0) {
                strengthText = '';
            } else if (strength === 1) {
                strengthText = 'Zayıf';
                strengthClass = 'text-danger';
            } else if (strength === 2) {
                strengthText = 'Orta';
                strengthClass = 'text-warning';
            } else {
                strengthText = 'Güçlü';
                strengthClass = 'text-success';
            }
            
            // Update or create strength indicator
            let indicator = document.getElementById('password-strength');
            if (!indicator && strengthText) {
                indicator = document.createElement('small');
                indicator.id = 'password-strength';
                indicator.className = 'form-text';
                e.target.parentNode.appendChild(indicator);
            }
            
            if (indicator) {
                indicator.innerHTML = strengthText ? `Şifre Gücü: <span class="${strengthClass}">${strengthText}</span>` : '';
            }
        });
    </script>
}

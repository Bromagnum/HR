@model MVC.Models.UserProfileViewModel
@{
    ViewData["Title"] = "Profil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">
        <i class="fas fa-user-circle me-2"></i>Profil Bilgileri
    </h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Ana Sayfa</a></li>
        <li class="breadcrumb-item active">Profil</li>
    </ol>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-xl-4">
            <!-- Profile Info Card -->
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-user me-1"></i>
                    Profil Özeti
                </div>
                <div class="card-body">
                    <div class="text-center">
                        <div class="profile-avatar mb-3">
                            <i class="fas fa-user-circle fa-5x text-muted"></i>
                        </div>
                        <h5 class="mb-1">@Model.FullName</h5>
                        <p class="text-muted mb-2">@Model.Email</p>
                        
                        @if (!string.IsNullOrEmpty(Model.DepartmentName))
                        {
                            <span class="badge bg-primary mb-2">@Model.DepartmentName</span>
                        }
                        
                        @if (Model.Roles.Any())
                        {
                            <div class="mt-2">
                                @foreach (var role in Model.Roles)
                                {
                                    <span class="badge bg-secondary me-1">@role</span>
                                }
                            </div>
                        }
                    </div>
                    
                    <hr>
                    
                    <div class="row text-center">
                        <div class="col-6">
                            <strong>Kayıt Tarihi</strong>
                            <p class="text-muted small">@Model.CreatedAt.ToString("dd.MM.yyyy")</p>
                        </div>
                        <div class="col-6">
                            <strong>Son Giriş</strong>
                            <p class="text-muted small">
                                @(Model.LastLoginAt?.ToString("dd.MM.yyyy HH:mm") ?? "Henüz giriş yapılmamış")
                            </p>
                        </div>
                    </div>
                    
                    <div class="d-grid gap-2 mt-3">
                        <a asp-controller="Auth" asp-action="ChangePassword" class="btn btn-outline-primary">
                            <i class="fas fa-key me-1"></i>Şifre Değiştir
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-8">
            <!-- Edit Profile Card -->
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-edit me-1"></i>
                    Profil Bilgilerini Düzenle
                </div>
                <div class="card-body">
                    <form asp-controller="Auth" asp-action="UpdateProfile" method="post">
                        @Html.AntiForgeryToken()
                        <input asp-for="UserId" type="hidden" />
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="FirstName" class="form-control" id="inputFirstName" type="text" placeholder="Ad" />
                                    <label for="inputFirstName">Ad</label>
                                    <span asp-validation-for="FirstName" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="LastName" class="form-control" id="inputLastName" type="text" placeholder="Soyad" />
                                    <label for="inputLastName">Soyad</label>
                                    <span asp-validation-for="LastName" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-floating mb-3">
                            <input asp-for="Email" class="form-control" id="inputEmail" type="email" placeholder="name@example.com" />
                            <label for="inputEmail">Email Adresi</label>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                        
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <div class="mt-4 mb-0">
                            <button class="btn btn-success" type="submit">
                                <i class="fas fa-save me-1"></i>Bilgileri Güncelle
                            </button>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary ms-2">
                                <i class="fas fa-times me-1"></i>İptal
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

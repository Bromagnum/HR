@model IEnumerable<PayrollListViewModel>
@{
    ViewData["Title"] = "Bordro Yönetimi";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-money-bill-wave me-2"></i>Bordro Yönetimi
                    </h4>
                    <div class="d-flex gap-2">
                        @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                        {
                            <a href="@Url.Action("Create")" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i>Yeni Bordro
                            </a>
                            <a href="@Url.Action("PeriodSummary")" class="btn btn-info">
                                <i class="fas fa-chart-bar me-2"></i>Dönem Raporu
                            </a>
                        }
                    </div>
                </div>

                <div class="card-body">
                    <!-- Filtreleme Formu -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header">
                                    <h6 class="card-title mb-0">
                                        <i class="fas fa-filter me-2"></i>Filtreleme
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <form method="get" action="@Url.Action("Index")">
                                        <div class="row g-3">
                                            <div class="col-md-3">
                                                <label class="form-label">Personel:</label>
                                                @Html.DropDownList("PersonId", ViewBag.PersonList as SelectList, "Tüm Personeller", new { @class = "form-select" })
                                            </div>
                                            <div class="col-md-3">
                                                <label class="form-label">Departman:</label>
                                                @Html.DropDownList("DepartmentId", ViewBag.DepartmentList as SelectList, "Tüm Departmanlar", new { @class = "form-select" })
                                            </div>
                                            <div class="col-md-2">
                                                <label class="form-label">Yıl:</label>
                                                @Html.DropDownList("Year", ViewBag.YearList as SelectList, "Tüm Yıllar", new { @class = "form-select" })
                                            </div>
                                            <div class="col-md-2">
                                                <label class="form-label">Ay:</label>
                                                @Html.DropDownList("Month", ViewBag.MonthList as SelectList, "Tüm Aylar", new { @class = "form-select" })
                                            </div>
                                            <div class="col-md-2">
                                                <label class="form-label">&nbsp;</label>
                                                <div class="d-grid">
                                                    <button type="submit" class="btn btn-primary">
                                                        <i class="fas fa-search me-2"></i>Filtrele
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row g-3 mt-2">
                                            <div class="col-md-3">
                                                <label class="form-label">Min Net Maaş:</label>
                                                <input type="number" name="MinNetSalary" class="form-control" placeholder="0" step="0.01" />
                                            </div>
                                            <div class="col-md-3">
                                                <label class="form-label">Max Net Maaş:</label>
                                                <input type="number" name="MaxNetSalary" class="form-control" placeholder="999999" step="0.01" />
                                            </div>
                                            <div class="col-md-6">
                                                <label class="form-label">&nbsp;</label>
                                                <div class="d-flex gap-2">
                                                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                                                        <i class="fas fa-times me-2"></i>Temizle
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Bordro Listesi -->
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover" id="payrollTable">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Personel</th>
                                        <th>Personel No</th>
                                        <th>Departman</th>
                                        <th>Dönem</th>
                                        <th>Temel Maaş</th>
                                        <th>Ek Ödemeler</th>
                                        <th>Brüt Maaş</th>
                                        <th>Kesintiler</th>
                                        <th>Net Maaş</th>
                                        <th>Hazırlayan</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var payroll in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@payroll.PersonFullName</strong>
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary">@payroll.EmployeeNumber</span>
                                            </td>
                                            <td>@payroll.DepartmentName</td>
                                            <td>
                                                <span class="badge bg-info">@payroll.PayrollPeriod</span>
                                            </td>
                                            <td class="text-end">
                                                <span class="text-primary fw-bold">@payroll.BasicSalary.ToString("C")</span>
                                            </td>
                                            <td class="text-end">
                                                @if (payroll.Allowances > 0)
                                                {
                                                    <span class="text-success">@payroll.Allowances.ToString("C")</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td class="text-end">
                                                <span class="text-success fw-bold">@payroll.GrossSalary.ToString("C")</span>
                                            </td>
                                            <td class="text-end">
                                                @if (payroll.Deductions > 0)
                                                {
                                                    <span class="text-danger">@payroll.Deductions.ToString("C")</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td class="text-end">
                                                <span class="text-dark fw-bold fs-6">@payroll.NetSalary.ToString("C")</span>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(payroll.PreparedByName))
                                                {
                                                    <small class="text-muted">@payroll.PreparedByName</small>
                                                }
                                                else
                                                {
                                                    <small class="text-muted">-</small>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("Details", new { id = payroll.Id })" 
                                                       class="btn btn-sm btn-outline-info" title="Detay">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                                                    {
                                                        <a href="@Url.Action("Edit", new { id = payroll.Id })" 
                                                           class="btn btn-sm btn-outline-warning" title="Düzenle">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                        <button type="button" class="btn btn-sm btn-outline-danger" 
                                                                onclick="deletePayroll(@payroll.Id)" title="Sil">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    }
                                                    <a href="@Url.Action("PersonYearlySummary", new { personId = payroll.PersonId, year = payroll.Year })" 
                                                       class="btn btn-sm btn-outline-primary" title="Yıllık Özet">
                                                        <i class="fas fa-chart-line"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Özet Bilgiler -->
                        <div class="row mt-4">
                            <div class="col-md-12">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <div class="row text-center">
                                            <div class="col-md-3">
                                                <h6 class="text-muted mb-1">Toplam Bordro</h6>
                                                <h4 class="mb-0">@Model.Count()</h4>
                                            </div>
                                            <div class="col-md-3">
                                                <h6 class="text-muted mb-1">Toplam Brüt Maaş</h6>
                                                <h4 class="mb-0 text-success">@Model.Sum(p => p.GrossSalary).ToString("C")</h4>
                                            </div>
                                            <div class="col-md-3">
                                                <h6 class="text-muted mb-1">Toplam Kesinti</h6>
                                                <h4 class="mb-0 text-danger">@Model.Sum(p => p.Deductions).ToString("C")</h4>
                                            </div>
                                            <div class="col-md-3">
                                                <h6 class="text-muted mb-1">Toplam Net Maaş</h6>
                                                <h4 class="mb-0 text-primary">@Model.Sum(p => p.NetSalary).ToString("C")</h4>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-money-bill-wave fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Bordro kaydı bulunamadı</h5>
                            <p class="text-muted">Henüz hiç bordro oluşturulmamış veya filtreleme kriterlerinize uygun kayıt yok.</p>
                            @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                            {
                                <a href="@Url.Action("Create")" class="btn btn-primary mt-2">
                                    <i class="fas fa-plus me-2"></i>İlk Bordroyu Oluştur
                                </a>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // DataTable başlat
            $('#payrollTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.13.4/i18n/tr.json"
                },
                "order": [[ 3, "desc" ]], // Dönem sütununa göre azalan sıralama
                "pageLength": 25,
                "responsive": true,
                "columnDefs": [
                    { "orderable": false, "targets": -1 } // İşlemler sütunu sıralama dışı
                ]
            });
        });

        // Bordro silme fonksiyonu
        function deletePayroll(payrollId) {
            if (confirm('Bu bordroyu silmek istediğinizden emin misiniz?')) {
                $.ajax({
                    url: '@Url.Action("Delete")',
                    type: 'POST',
                    data: {
                        id: payrollId,
                        __RequestVerificationToken: $('[name=__RequestVerificationToken]').val()
                    },
                    success: function(result) {
                        if (result.success) {
                            toastr.success(result.message);
                            location.reload();
                        } else {
                            toastr.error(result.message);
                        }
                    },
                    error: function() {
                        toastr.error('Bordro silinirken bir hata oluştu.');
                    }
                });
            }
        }
    </script>
}

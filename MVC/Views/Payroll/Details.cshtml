@model PayrollDetailViewModel
@{
    ViewData["Title"] = $"Bordro Detayı - {Model.PayrollPeriod}";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-file-invoice-dollar me-2"></i>Bordro Detayı
                    </h4>
                    <div class="d-flex gap-2">
                        @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                        {
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit me-2"></i>Düzenle
                            </a>
                        }
                        <a asp-action="PersonYearlySummary" asp-route-personId="@Model.PersonId" asp-route-year="@Model.Year" class="btn btn-info btn-sm">
                            <i class="fas fa-chart-line me-2"></i>Yıllık Özet
                        </a>
                        <a asp-action="Index" class="btn btn-secondary btn-sm">
                            <i class="fas fa-arrow-left me-2"></i>Geri Dön
                        </a>
                    </div>
                </div>

                <div class="card-body">
                    <div class="row">
                        <!-- Sol Taraf - Personel Bilgileri -->
                        <div class="col-md-6">
                            <div class="card h-100">
                                <div class="card-header bg-primary text-white">
                                    <h6 class="mb-0">
                                        <i class="fas fa-user me-2"></i>Personel Bilgileri
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <div class="row mb-3">
                                        <div class="col-sm-4"><strong>Ad Soyad:</strong></div>
                                        <div class="col-sm-8">@Model.PersonFullName</div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-sm-4"><strong>TC Kimlik No:</strong></div>
                                        <div class="col-sm-8">
                                            <span class="badge bg-secondary">@Model.PersonTcKimlikNo</span>
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-sm-4"><strong>Personel No:</strong></div>
                                        <div class="col-sm-8">
                                            <span class="badge bg-info">@Model.PersonEmployeeNumber</span>
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-sm-4"><strong>Departman:</strong></div>
                                        <div class="col-sm-8">@Model.DepartmentName</div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-sm-4"><strong>Pozisyon:</strong></div>
                                        <div class="col-sm-8">@Model.PositionName</div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Sağ Taraf - Bordro Bilgileri -->
                        <div class="col-md-6">
                            <div class="card h-100">
                                <div class="card-header bg-success text-white">
                                    <h6 class="mb-0">
                                        <i class="fas fa-calendar me-2"></i>Bordro Bilgileri
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <div class="row mb-3">
                                        <div class="col-sm-4"><strong>Dönem:</strong></div>
                                        <div class="col-sm-8">
                                            <span class="badge bg-primary fs-6">@Model.PayrollPeriod</span>
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-sm-4"><strong>Yıl:</strong></div>
                                        <div class="col-sm-8">@Model.Year</div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-sm-4"><strong>Ay:</strong></div>
                                        <div class="col-sm-8">@Model.MonthName (@Model.Month)</div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-sm-4"><strong>Hazırlama Tarihi:</strong></div>
                                        <div class="col-sm-8">@Model.PreparedDate.ToString("dd.MM.yyyy HH:mm")</div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-sm-4"><strong>Hazırlayan:</strong></div>
                                        <div class="col-sm-8">
                                            @if (!string.IsNullOrEmpty(Model.PreparedByName))
                                            {
                                                @Model.PreparedByName
                                            }
                                            else
                                            {
                                                <span class="text-muted">Belirtilmemiş</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Maaş Detayları -->
                    <div class="row mt-4">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header bg-warning text-dark">
                                    <h6 class="mb-0">
                                        <i class="fas fa-money-bill-wave me-2"></i>Maaş Detayları
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-3">
                                            <div class="text-center p-3 border rounded">
                                                <h6 class="text-muted mb-1">Temel Maaş</h6>
                                                <h4 class="text-primary mb-0">@Model.BasicSalary.ToString("C")</h4>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="text-center p-3 border rounded">
                                                <h6 class="text-muted mb-1">Ek Ödemeler</h6>
                                                <h4 class="text-success mb-0">
                                                    @if (Model.Allowances > 0)
                                                    {
                                                        <span>+ @Model.Allowances.ToString("C")</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">-</span>
                                                    }
                                                </h4>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="text-center p-3 border rounded">
                                                <h6 class="text-muted mb-1">Kesintiler</h6>
                                                <h4 class="text-danger mb-0">
                                                    @if (Model.Deductions > 0)
                                                    {
                                                        <span>- @Model.Deductions.ToString("C")</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">-</span>
                                                    }
                                                </h4>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="text-center p-3 border rounded bg-light">
                                                <h6 class="text-muted mb-1">Net Maaş</h6>
                                                <h3 class="text-dark mb-0 fw-bold">@Model.NetSalary.ToString("C")</h3>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Hesaplama Formülü -->
                                    <div class="mt-4">
                                        <div class="alert alert-info">
                                            <h6 class="alert-heading">
                                                <i class="fas fa-calculator me-2"></i>Hesaplama
                                            </h6>
                                            <div class="d-flex align-items-center">
                                                <span class="text-primary fw-bold">@Model.BasicSalary.ToString("C")</span>
                                                <span class="mx-2">+</span>
                                                <span class="text-success fw-bold">@Model.Allowances.ToString("C")</span>
                                                <span class="mx-2">-</span>
                                                <span class="text-danger fw-bold">@Model.Deductions.ToString("C")</span>
                                                <span class="mx-2">=</span>
                                                <span class="text-dark fw-bold fs-5">@Model.NetSalary.ToString("C")</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Açıklama -->
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h6 class="mb-0">
                                            <i class="fas fa-comment me-2"></i>Açıklama
                                        </h6>
                                    </div>
                                    <div class="card-body">
                                        <p class="mb-0">@Model.Description</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Sistem Bilgileri -->
                    <div class="row mt-4">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header">
                                    <h6 class="mb-0">
                                        <i class="fas fa-info-circle me-2"></i>Sistem Bilgileri
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <strong>Bordro ID:</strong> #@Model.Id
                                        </div>
                                        <div class="col-md-4">
                                            <strong>Oluşturulma Tarihi:</strong> @Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                                        </div>
                                        <div class="col-md-4">
                                            @if (Model.UpdatedAt.HasValue)
                                            {
                                                <strong>Son Güncelleme:</strong> @Model.UpdatedAt.Value.ToString("dd.MM.yyyy HH:mm")
                                            }
                                            else
                                            {
                                                <strong>Durum:</strong> <span class="badge bg-success">Yeni</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- İşlem Butonları -->
                    <div class="row mt-4">
                        <div class="col-12">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <a asp-action="Index" class="btn btn-secondary">
                                        <i class="fas fa-list me-2"></i>Bordro Listesi
                                    </a>
                                </div>
                                <div class="d-flex gap-2">
                                    @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                                    {
                                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                                            <i class="fas fa-edit me-2"></i>Düzenle
                                        </a>
                                        <button type="button" class="btn btn-danger" onclick="deletePayroll(@Model.Id)">
                                            <i class="fas fa-trash me-2"></i>Sil
                                        </button>
                                    }
                                    <button type="button" class="btn btn-info" onclick="printPayroll()">
                                        <i class="fas fa-print me-2"></i>Yazdır
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function deletePayroll(payrollId) {
            if (confirm('Bu bordroyu silmek istediğinizden emin misiniz?\n\nBu işlem geri alınamaz!')) {
                $.ajax({
                    url: '@Url.Action("Delete")',
                    type: 'POST',
                    data: {
                        id: payrollId,
                        __RequestVerificationToken: $('[name=__RequestVerificationToken]').val()
                    },
                    success: function(result) {
                        if (result.success) {
                            toastr.success(result.message);
                            window.location.href = '@Url.Action("Index")';
                        } else {
                            toastr.error(result.message);
                        }
                    },
                    error: function() {
                        toastr.error('Bordro silinirken bir hata oluştu.');
                    }
                });
            }
        }

        function printPayroll() {
            // Yazdırma için CSS'i gizle
            var printContents = $('.card').html();
            var originalContents = document.body.innerHTML;
            
            var printWindow = window.open('', '_blank');
            printWindow.document.write('<html><head><title>Bordro Detayı</title>');
            printWindow.document.write('<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">');
            printWindow.document.write('<style>@@media print { .btn { display: none !important; } }</style>');
            printWindow.document.write('</head><body>');
            printWindow.document.write('<div class="container mt-4">');
            printWindow.document.write(printContents);
            printWindow.document.write('</div></body></html>');
            printWindow.document.close();
            
            setTimeout(function() {
                printWindow.print();
                printWindow.close();
            }, 500);
        }
    </script>
}

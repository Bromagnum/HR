@model IEnumerable<MVC.Models.WorkLogListViewModel>
@{
    ViewData["Title"] = "Geç Gelme Raporu";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Geç Gelme Raporu
                    </h3>
                </div>

                <div class="card-body">
                    <!-- Filter Section -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <form method="get" class="row g-3">
                                <div class="col-md-4">
                                    <label class="form-label">Başlangıç Tarihi</label>
                                    <input type="date" name="startDate" class="form-control" value="@ViewBag.StartDate" />
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Bitiş Tarihi</label>
                                    <input type="date" name="endDate" class="form-control" value="@ViewBag.EndDate" />
                                </div>
                                <div class="col-md-4 d-flex align-items-end">
                                    <button type="submit" class="btn btn-danger w-100">
                                        <i class="fas fa-search me-1"></i>
                                        Raporu Oluştur
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>

                    @if (ViewBag.StartDate != null && ViewBag.EndDate != null)
                    {
                        <!-- Summary Statistics -->
                        @if (Model.Any())
                        {
                            <div class="row mb-4">
                                <div class="col-md-3">
                                    <div class="card bg-danger text-white">
                                        <div class="card-body text-center">
                                            <h5>@Model.Count()</h5>
                                            <small>Toplam Geç Gelme</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="card bg-warning text-white">
                                        <div class="card-body text-center">
                                            <h5>@Model.GroupBy(w => w.PersonId).Count()</h5>
                                            <small>Geç Gelen Personel</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="card bg-info text-white">
                                        <div class="card-body text-center">
                                            <h5>@(Model.GroupBy(w => w.PersonId).Select(g => g.Count()).Max())</h5>
                                            <small>En Fazla Geç Gelme</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="card bg-secondary text-white">
                                        <div class="card-body text-center">
                                            <h5>@(Model.GroupBy(w => w.PersonId).Average(g => g.Count()).ToString("F1"))</h5>
                                            <small>Ortalama/Personel</small>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Alert Message -->
                            <div class="alert alert-warning">
                                <i class="fas fa-info-circle me-2"></i>
                                <strong>Geç Gelme Kriteri:</strong> Standart çalışma başlangıç saati 09:00'dır. 09:15'ten sonra gelen giriş kayıtları geç gelme olarak işaretlenir.
                            </div>
                        }

                        <!-- Data Table -->
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th><i class="fas fa-user me-1"></i>Personel</th>
                                        <th><i class="fas fa-building me-1"></i>Departman</th>
                                        <th><i class="fas fa-calendar me-1"></i>Tarih</th>
                                        <th><i class="fas fa-clock me-1"></i>Giriş Saati</th>
                                        <th><i class="fas fa-stopwatch me-1"></i>Geç Kalma</th>
                                        <th><i class="fas fa-briefcase me-1"></i>Çalışma Türü</th>
                                        <th><i class="fas fa-info-circle me-1"></i>Durum</th>
                                        <th><i class="fas fa-cogs me-1"></i>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Any())
                                    {
                                        @foreach (var item in Model.OrderByDescending(w => w.Date).ThenByDescending(w => w.StartTime))
                                        {
                                            <tr>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <div class="avatar-sm me-2">
                                                            <span class="avatar-title rounded-circle bg-danger">
                                                                @item.PersonName.Split(' ').FirstOrDefault()?.Substring(0, 1)@item.PersonName.Split(' ').LastOrDefault()?.Substring(0, 1)
                                                            </span>
                                                        </div>
                                                        <div>
                                                            <strong>@item.PersonName</strong>
                                                            @if (!string.IsNullOrEmpty(item.EmployeeNumber))
                                                            {
                                                                <br><small class="text-muted">@item.EmployeeNumber</small>
                                                            }
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>@item.DepartmentName</td>
                                                <td>
                                                    @item.Date.ToString("dd.MM.yyyy")
                                                    <br>
                                                    <small class="text-muted">@item.Date.ToString("dddd", new System.Globalization.CultureInfo("tr-TR"))</small>
                                                </td>
                                                <td>
                                                    <div class="text-center">
                                                        <span class="h6 text-danger">@item.StartTime.ToString(@"hh\:mm")</span>
                                                        <br>
                                                        <small class="text-muted">Standart: 09:00</small>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="text-center">
                                                        @{
                                                            var standardStart = new TimeSpan(9, 0, 0);
                                                            var lateMinutes = (item.StartTime - standardStart).TotalMinutes;
                                                        }
                                                        @if (lateMinutes > 0)
                                                        {
                                                            <span class="badge bg-danger p-2">
                                                                @((int)lateMinutes) dakika
                                                            </span>
                                                            <br>
                                                            @if (lateMinutes >= 60)
                                                            {
                                                                <small class="text-danger">Ciddi Gecikme!</small>
                                                            }
                                                            else if (lateMinutes >= 30)
                                                            {
                                                                <small class="text-warning">Orta Gecikme</small>
                                                            }
                                                            else
                                                            {
                                                                <small class="text-info">Hafif Gecikme</small>
                                                            }
                                                        }
                                                    </div>
                                                </td>
                                                <td>
                                                    @switch (item.WorkType)
                                                    {
                                                        case "Office":
                                                            <span class="badge bg-primary">Ofis</span>
                                                            break;
                                                        case "Remote":
                                                            <span class="badge bg-success">Uzaktan</span>
                                                            break;
                                                        case "Field":
                                                            <span class="badge bg-info">Saha</span>
                                                            break;
                                                        case "Meeting":
                                                            <span class="badge bg-warning">Toplantı</span>
                                                            break;
                                                        default:
                                                            <span class="badge bg-secondary">@item.WorkType</span>
                                                            break;
                                                    }
                                                </td>
                                                <td>
                                                    @switch (item.Status)
                                                    {
                                                        case "Active":
                                                            <span class="badge bg-warning">Aktif</span>
                                                            break;
                                                        case "Completed":
                                                            <span class="badge bg-primary">Tamamlandı</span>
                                                            break;
                                                        case "Approved":
                                                            <span class="badge bg-success">Onaylandı</span>
                                                            break;
                                                        case "Rejected":
                                                            <span class="badge bg-danger">Reddedildi</span>
                                                            break;
                                                        default:
                                                            <span class="badge bg-secondary">@item.Status</span>
                                                            break;
                                                    }
                                                </td>
                                                <td>
                                                    <a asp-action="Details" asp-route-id="@item.Id" 
                                                       class="btn btn-sm btn-outline-info"
                                                       data-bs-toggle="tooltip" title="Detayları Görüntüle">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="8" class="text-center py-4">
                                                <i class="fas fa-thumbs-up fa-3x text-success mb-3"></i>
                                                <h5 class="text-success">Harika! Bu tarih aralığında geç gelme kaydı bulunamadı</h5>
                                                <p class="text-muted">Tüm personel zamanında gelmiş.</p>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        @if (Model.Any())
                        {
                            <!-- Personel Bazında Özet -->
                            <div class="row mt-4">
                                <div class="col-12">
                                    <h5><i class="fas fa-users me-2"></i>Personel Bazında Geç Gelme Özeti</h5>
                                    <div class="table-responsive">
                                        <table class="table table-sm table-bordered">
                                            <thead class="table-danger">
                                                <tr>
                                                    <th>Personel</th>
                                                    <th class="text-center">Toplam Geç Gelme</th>
                                                    <th class="text-center">En Geç Gelme</th>
                                                    <th class="text-center">Ortalama Gecikme</th>
                                                    <th class="text-center">Son Geç Gelme</th>
                                                    <th class="text-center">Risk Seviyesi</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var personGroup in Model.GroupBy(w => new { w.PersonId, w.PersonName }).OrderByDescending(g => g.Count()))
                                                {
                                                    var standardStart = new TimeSpan(9, 0, 0);
                                                    var avgLateMinutes = personGroup.Average(w => (w.StartTime - standardStart).TotalMinutes);
                                                    var maxLateMinutes = personGroup.Max(w => (w.StartTime - standardStart).TotalMinutes);
                                                    var lateCount = personGroup.Count();
                                                    var lastLateDate = personGroup.Max(w => w.Date);
                                                    
                                                    <tr>
                                                        <td><strong>@personGroup.Key.PersonName</strong></td>
                                                        <td class="text-center">@lateCount kez</td>
                                                        <td class="text-center">@((int)maxLateMinutes) dakika</td>
                                                        <td class="text-center">@((int)avgLateMinutes) dakika</td>
                                                        <td class="text-center">@lastLateDate.ToString("dd.MM.yyyy")</td>
                                                        <td class="text-center">
                                                            @if (lateCount >= 5 || avgLateMinutes >= 30)
                                                            {
                                                                <span class="badge bg-danger">Yüksek</span>
                                                            }
                                                            else if (lateCount >= 3 || avgLateMinutes >= 20)
                                                            {
                                                                <span class="badge bg-warning">Orta</span>
                                                            }
                                                            else
                                                            {
                                                                <span class="badge bg-info">Düşük</span>
                                                            }
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>

                            <!-- Recommendations -->
                            <div class="row mt-4">
                                <div class="col-12">
                                    <div class="card bg-light">
                                        <div class="card-header bg-secondary text-white">
                                            <h6 class="mb-0"><i class="fas fa-lightbulb me-2"></i>Öneriler</h6>
                                        </div>
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <h6 class="text-danger">Yüksek Risk Personeli İçin:</h6>
                                                    <ul class="list-unstyled">
                                                        <li><i class="fas fa-arrow-right text-danger me-2"></i>Kişisel görüşme planlanmalı</li>
                                                        <li><i class="fas fa-arrow-right text-danger me-2"></i>Geç gelme sebepleri araştırılmalı</li>
                                                        <li><i class="fas fa-arrow-right text-danger me-2"></i>Esnek çalışma saatleri değerlendirilmeli</li>
                                                        <li><i class="fas fa-arrow-right text-danger me-2"></i>Disiplin süreci başlatılabilir</li>
                                                    </ul>
                                                </div>
                                                <div class="col-md-6">
                                                    <h6 class="text-warning">Genel Öneriler:</h6>
                                                    <ul class="list-unstyled">
                                                        <li><i class="fas fa-arrow-right text-warning me-2"></i>Mesai saatleri düzenlemeleri</li>
                                                        <li><i class="fas fa-arrow-right text-warning me-2"></i>Ulaşım desteği sağlanması</li>
                                                        <li><i class="fas fa-arrow-right text-warning me-2"></i>Ödül sistemleri oluşturulması</li>
                                                        <li><i class="fas fa-arrow-right text-warning me-2"></i>Farkındalık eğitimleri verilmesi</li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <!-- No Filters Applied -->
                        <div class="text-center py-5">
                            <i class="fas fa-exclamation-triangle fa-4x text-muted mb-4"></i>
                            <h4 class="text-muted">Geç Gelme Raporu</h4>
                            <p class="text-muted">Rapor oluşturmak için yukarıdaki filtreleri kullanarak tarih aralığı seçin.</p>
                            
                            <div class="mt-4">
                                <div class="row justify-content-center">
                                    <div class="col-md-6">
                                        <div class="card bg-light">
                                            <div class="card-body">
                                                <h6><i class="fas fa-info-circle me-2"></i>Geç Gelme Raporu Özellikleri</h6>
                                                <ul class="list-unstyled">
                                                    <li><i class="fas fa-check text-success me-2"></i>09:15'ten sonra giriş kayıtları</li>
                                                    <li><i class="fas fa-check text-success me-2"></i>Personel bazında gecikme analizi</li>
                                                    <li><i class="fas fa-check text-success me-2"></i>Risk seviyesi değerlendirmesi</li>
                                                    <li><i class="fas fa-check text-success me-2"></i>Disiplin önerileri</li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <div class="card-footer">
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>
                            Geri Dön
                        </a>
                        @if (Model.Any())
                        {
                            <div>
                                <button type="button" class="btn btn-success me-2" onclick="window.print()">
                                    <i class="fas fa-print me-1"></i>
                                    Yazdır
                                </button>
                                <button type="button" class="btn btn-danger" onclick="exportToExcel()">
                                    <i class="fas fa-file-excel me-1"></i>
                                    Excel'e Aktar
                                </button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-sm {
        width: 32px;
        height: 32px;
    }
    .avatar-title {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        font-size: 12px;
    }
    @@media print {
        .card-footer, .btn {
            display: none !important;
        }
        .card {
            border: none !important;
            box-shadow: none !important;
        }
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Initialize tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    });

    function exportToExcel() {
        const table = document.querySelector('table');
        if (table) {
            const wb = XLSX.utils.table_to_book(table, {sheet: "Geç Gelme Raporu"});
            XLSX.writeFile(wb, 'gec-gelme-raporu-' + new Date().toISOString().split('T')[0] + '.xlsx');
        }
    }
</script>

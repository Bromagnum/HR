@model IEnumerable<MVC.Models.WorkLogListViewModel>
@{
    ViewData["Title"] = "Mesai Raporu";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-warning text-white">
                    <h3 class="card-title">
                        <i class="fas fa-clock me-2"></i>
                        Mesai Saatleri Raporu
                    </h3>
                </div>

                <div class="card-body">
                    <!-- Filter Section -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <form method="get" class="row g-3">
                                <div class="col-md-4">
                                    <label class="form-label">Başlangıç Tarihi</label>
                                    <input type="date" name="startDate" class="form-control" value="@ViewBag.StartDate" />
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Bitiş Tarihi</label>
                                    <input type="date" name="endDate" class="form-control" value="@ViewBag.EndDate" />
                                </div>
                                <div class="col-md-4 d-flex align-items-end">
                                    <button type="submit" class="btn btn-warning w-100">
                                        <i class="fas fa-search me-1"></i>
                                        Raporu Oluştur
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>

                    @if (ViewBag.StartDate != null && ViewBag.EndDate != null)
                    {
                        <!-- Summary Statistics -->
                        @if (Model.Any())
                        {
                            <div class="row mb-4">
                                <div class="col-md-3">
                                    <div class="card bg-primary text-white">
                                        <div class="card-body text-center">
                                            <h5>@Model.Count()</h5>
                                            <small>Toplam Mesai Günü</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="card bg-warning text-white">
                                        <div class="card-body text-center">
                                            <h5>@Model.Sum(w => w.OvertimeHours).ToString("F1")</h5>
                                            <small>Toplam Mesai Saati</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="card bg-info text-white">
                                        <div class="card-body text-center">
                                            <h5>@Model.GroupBy(w => w.PersonId).Count()</h5>
                                            <small>Mesai Yapan Personel</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="card bg-success text-white">
                                        <div class="card-body text-center">
                                            <h5>@(Model.Any() ? Model.Average(w => w.OvertimeHours).ToString("F1") : "0.0")</h5>
                                            <small>Ortalama Mesai/Gün</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                        <!-- Data Table -->
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th><i class="fas fa-user me-1"></i>Personel</th>
                                        <th><i class="fas fa-building me-1"></i>Departman</th>
                                        <th><i class="fas fa-calendar me-1"></i>Tarih</th>
                                        <th><i class="fas fa-clock me-1"></i>Giriş-Çıkış</th>
                                        <th><i class="fas fa-hourglass-half me-1"></i>Toplam Saat</th>
                                        <th><i class="fas fa-plus-circle me-1"></i>Mesai Saati</th>
                                        <th><i class="fas fa-briefcase me-1"></i>Tür</th>
                                        <th><i class="fas fa-info-circle me-1"></i>Durum</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Any())
                                    {
                                        @foreach (var item in Model.OrderByDescending(w => w.OvertimeHours))
                                        {
                                            <tr>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <div class="avatar-sm me-2">
                                                            <span class="avatar-title rounded-circle bg-warning">
                                                                @item.PersonName.Split(' ').FirstOrDefault()?.Substring(0, 1)@item.PersonName.Split(' ').LastOrDefault()?.Substring(0, 1)
                                                            </span>
                                                        </div>
                                                        <div>
                                                            <strong>@item.PersonName</strong>
                                                            @if (!string.IsNullOrEmpty(item.EmployeeNumber))
                                                            {
                                                                <br><small class="text-muted">@item.EmployeeNumber</small>
                                                            }
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>@item.DepartmentName</td>
                                                <td>
                                                    @item.Date.ToString("dd.MM.yyyy")
                                                    <br>
                                                    <small class="text-muted">@item.Date.ToString("dddd", new System.Globalization.CultureInfo("tr-TR"))</small>
                                                </td>
                                                <td>
                                                    @item.StartTime.ToString(@"hh\:mm") - 
                                                    @if (item.EndTime.HasValue)
                                                    {
                                                        @item.EndTime.Value.ToString(@"hh\:mm")
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-warning">Devam</span>
                                                    }
                                                </td>
                                                <td>
                                                    <strong>@item.TotalHours.ToString("F1") saat</strong>
                                                </td>
                                                <td>
                                                    <div class="text-center">
                                                        <span class="h5 text-warning">@item.OvertimeHours.ToString("F1")</span>
                                                        <small class="d-block text-muted">saat</small>
                                                        @if (item.OvertimeHours >= 4)
                                                        {
                                                            <span class="badge bg-danger">Yoğun</span>
                                                        }
                                                        else if (item.OvertimeHours >= 2)
                                                        {
                                                            <span class="badge bg-warning">Orta</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-info">Az</span>
                                                        }
                                                    </div>
                                                </td>
                                                <td>
                                                    @switch (item.WorkType)
                                                    {
                                                        case "Office":
                                                            <span class="badge bg-primary">Ofis</span>
                                                            break;
                                                        case "Remote":
                                                            <span class="badge bg-success">Uzaktan</span>
                                                            break;
                                                        case "Field":
                                                            <span class="badge bg-info">Saha</span>
                                                            break;
                                                        case "Meeting":
                                                            <span class="badge bg-warning">Toplantı</span>
                                                            break;
                                                        default:
                                                            <span class="badge bg-secondary">@item.WorkType</span>
                                                            break;
                                                    }
                                                </td>
                                                <td>
                                                    @switch (item.Status)
                                                    {
                                                        case "Active":
                                                            <span class="badge bg-warning">Aktif</span>
                                                            break;
                                                        case "Completed":
                                                            <span class="badge bg-primary">Tamamlandı</span>
                                                            break;
                                                        case "Approved":
                                                            <span class="badge bg-success">Onaylandı</span>
                                                            break;
                                                        case "Rejected":
                                                            <span class="badge bg-danger">Reddedildi</span>
                                                            break;
                                                        default:
                                                            <span class="badge bg-secondary">@item.Status</span>
                                                            break;
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="8" class="text-center py-4">
                                                <i class="fas fa-chart-line fa-3x text-muted mb-3"></i>
                                                <h5 class="text-muted">Bu tarih aralığında mesai kaydı bulunamadı</h5>
                                                <p class="text-muted">Seçilen tarih aralığında hiç mesai yapılmamış.</p>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        @if (Model.Any())
                        {
                            <!-- Personel Bazında Özet -->
                            <div class="row mt-4">
                                <div class="col-12">
                                    <h5><i class="fas fa-users me-2"></i>Personel Bazında Mesai Özeti</h5>
                                    <div class="table-responsive">
                                        <table class="table table-sm table-bordered">
                                            <thead class="table-warning">
                                                <tr>
                                                    <th>Personel</th>
                                                    <th class="text-center">Toplam Mesai Günü</th>
                                                    <th class="text-center">Toplam Mesai Saati</th>
                                                    <th class="text-center">Ortalama Mesai/Gün</th>
                                                    <th class="text-center">En Fazla Mesai</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var personGroup in Model.GroupBy(w => new { w.PersonId, w.PersonName }))
                                                {
                                                    <tr>
                                                        <td><strong>@personGroup.Key.PersonName</strong></td>
                                                        <td class="text-center">@personGroup.Count() gün</td>
                                                        <td class="text-center"><strong>@personGroup.Sum(w => w.OvertimeHours).ToString("F1") saat</strong></td>
                                                        <td class="text-center">@personGroup.Average(w => w.OvertimeHours).ToString("F1") saat</td>
                                                        <td class="text-center">@personGroup.Max(w => w.OvertimeHours).ToString("F1") saat</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <!-- No Filters Applied -->
                        <div class="text-center py-5">
                            <i class="fas fa-clock fa-4x text-muted mb-4"></i>
                            <h4 class="text-muted">Mesai Raporu</h4>
                            <p class="text-muted">Rapor oluşturmak için yukarıdaki filtreleri kullanarak tarih aralığı seçin.</p>
                            
                            <div class="mt-4">
                                <div class="row justify-content-center">
                                    <div class="col-md-6">
                                        <div class="card bg-light">
                                            <div class="card-body">
                                                <h6><i class="fas fa-info-circle me-2"></i>Mesai Raporu Özellikleri</h6>
                                                <ul class="list-unstyled">
                                                    <li><i class="fas fa-check text-success me-2"></i>8 saatten fazla çalışma kayıtları</li>
                                                    <li><i class="fas fa-check text-success me-2"></i>Personel bazında mesai analizi</li>
                                                    <li><i class="fas fa-check text-success me-2"></i>Departman bazında istatistikler</li>
                                                    <li><i class="fas fa-check text-success me-2"></i>Mesai yoğunluk analizi</li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <div class="card-footer">
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>
                            Geri Dön
                        </a>
                        @if (Model.Any())
                        {
                            <div>
                                <button type="button" class="btn btn-success me-2" onclick="window.print()">
                                    <i class="fas fa-print me-1"></i>
                                    Yazdır
                                </button>
                                <button type="button" class="btn btn-warning" onclick="exportToExcel()">
                                    <i class="fas fa-file-excel me-1"></i>
                                    Excel'e Aktar
                                </button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-sm {
        width: 32px;
        height: 32px;
    }
    .avatar-title {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        font-size: 12px;
    }
    @@media print {
        .card-footer, .btn {
            display: none !important;
        }
        .card {
            border: none !important;
            box-shadow: none !important;
        }
    }
</style>

<script>
    function exportToExcel() {
        const table = document.querySelector('table');
        if (table) {
            const wb = XLSX.utils.table_to_book(table, {sheet: "Mesai Raporu"});
            XLSX.writeFile(wb, 'mesai-raporu-' + new Date().toISOString().split('T')[0] + '.xlsx');
        }
    }
</script>

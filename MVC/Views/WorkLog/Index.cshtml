@model IEnumerable<MVC.Models.WorkLogListViewModel>
@{
    ViewData["Title"] = "Çalışma Saati Takibi";
    var filter = ViewBag.Filter as MVC.Models.WorkLogFilterViewModel;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">
                        <i class="fas fa-clock me-2"></i>
                        Çalışma Saati Takibi
                    </h3>
                    <div class="btn-group">
                        <a asp-action="CheckIn" class="btn btn-success">
                            <i class="fas fa-sign-in-alt me-1"></i>
                            Giriş Yap
                        </a>
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus me-1"></i>
                            Yeni Kayıt
                        </a>
                        <div class="btn-group">
                            <button type="button" class="btn btn-info dropdown-toggle" data-bs-toggle="dropdown">
                                <i class="fas fa-chart-bar me-1"></i>
                                Raporlar
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-action="TimeSheet"><i class="fas fa-table me-2"></i>Zaman Çizelgesi</a></li>
                                <li><a class="dropdown-item" asp-action="OvertimeReport"><i class="fas fa-clock me-2"></i>Mesai Raporu</a></li>
                                <li><a class="dropdown-item" asp-action="LateArrivalReport"><i class="fas fa-exclamation-triangle me-2"></i>Geç Gelme Raporu</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-action="Active"><i class="fas fa-play-circle me-2"></i>Aktif Kayıtlar</a></li>
                                <li><a class="dropdown-item" asp-action="PendingApprovals"><i class="fas fa-hourglass-half me-2"></i>Onay Bekleyenler</a></li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Filter Panel -->
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-12">
                            <form method="get" class="row g-3">
                                <div class="col-md-3">
                                    <label class="form-label">Personel</label>
                                    <select name="PersonId" class="form-select">
                                        <option value="">-- Tüm Personel --</option>
                                        @if (ViewBag.PersonSelectList != null)
                                        {
                                            @foreach (var person in (SelectList)ViewBag.PersonSelectList)
                                            {
                                                <option value="@person.Value" selected="@(person.Value == filter?.PersonId?.ToString())">@person.Text</option>
                                            }
                                        }
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <label class="form-label">Başlangıç Tarihi</label>
                                    <input type="date" name="StartDate" class="form-control" value="@filter?.StartDate?.ToString("yyyy-MM-dd")" />
                                </div>
                                <div class="col-md-2">
                                    <label class="form-label">Bitiş Tarihi</label>
                                    <input type="date" name="EndDate" class="form-control" value="@filter?.EndDate?.ToString("yyyy-MM-dd")" />
                                </div>
                                <div class="col-md-2">
                                    <label class="form-label">Çalışma Türü</label>
                                    <select name="WorkType" class="form-select">
                                        <option value="">-- Tümü --</option>
                                        <option value="Office" selected="@(filter?.WorkType == "Office")">Ofis</option>
                                        <option value="Remote" selected="@(filter?.WorkType == "Remote")">Uzaktan</option>
                                        <option value="Field" selected="@(filter?.WorkType == "Field")">Saha</option>
                                        <option value="Meeting" selected="@(filter?.WorkType == "Meeting")">Toplantı</option>
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <label class="form-label">Durum</label>
                                    <select name="Status" class="form-select">
                                        <option value="">-- Tümü --</option>
                                        <option value="Active" selected="@(filter?.Status == "Active")">Aktif</option>
                                        <option value="Completed" selected="@(filter?.Status == "Completed")">Tamamlandı</option>
                                        <option value="Approved" selected="@(filter?.Status == "Approved")">Onaylandı</option>
                                        <option value="Rejected" selected="@(filter?.Status == "Rejected")">Reddedildi</option>
                                    </select>
                                </div>
                                <div class="col-md-1 d-flex align-items-end">
                                    <button type="submit" class="btn btn-outline-primary w-100">
                                        <i class="fas fa-search me-1"></i>
                                        Ara
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- Advanced Filters -->
                    <div class="row mb-3">
                        <div class="col-12">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" name="OnlyOvertime" value="true" @(filter?.OnlyOvertime == true ? "checked" : "") onchange="this.form.submit()">
                                <label class="form-check-label">Sadece Mesai</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" name="OnlyLateArrivals" value="true" @(filter?.OnlyLateArrivals == true ? "checked" : "") onchange="this.form.submit()">
                                <label class="form-check-label">Geç Gelenler</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" name="OnlyEarlyDepartures" value="true" @(filter?.OnlyEarlyDepartures == true ? "checked" : "") onchange="this.form.submit()">
                                <label class="form-check-label">Erken Gidenler</label>
                            </div>
                        </div>
                    </div>

                    <!-- Statistics Summary -->
                    @if (Model.Any())
                    {
                        <div class="row mb-3">
                            <div class="col-md-3">
                                <div class="card bg-primary text-white">
                                    <div class="card-body text-center">
                                        <h5>@Model.Count()</h5>
                                        <small>Toplam Kayıt</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-success text-white">
                                    <div class="card-body text-center">
                                        <h5>@Model.Sum(w => w.TotalHours).ToString("F1")</h5>
                                        <small>Toplam Saat</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-warning text-white">
                                    <div class="card-body text-center">
                                        <h5>@Model.Sum(w => w.OvertimeHours).ToString("F1")</h5>
                                        <small>Mesai Saati</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-danger text-white">
                                    <div class="card-body text-center">
                                        <h5>@Model.Count(w => w.IsLateArrival)</h5>
                                        <small>Geç Gelme</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Data Table -->
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th><i class="fas fa-user me-1"></i>Personel</th>
                                    <th><i class="fas fa-building me-1"></i>Departman</th>
                                    <th><i class="fas fa-calendar me-1"></i>Tarih</th>
                                    <th><i class="fas fa-clock me-1"></i>Giriş</th>
                                    <th><i class="fas fa-clock me-1"></i>Çıkış</th>
                                    <th><i class="fas fa-hourglass-half me-1"></i>Toplam Saat</th>
                                    <th><i class="fas fa-briefcase me-1"></i>Tür</th>
                                    <th><i class="fas fa-info-circle me-1"></i>Durum</th>
                                    <th><i class="fas fa-cogs me-1"></i>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Any())
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr class="@(!item.IsActive ? "table-secondary" : "")">
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-sm me-2">
                                                        <span class="avatar-title rounded-circle bg-primary">
                                                            @item.PersonName.Split(' ').FirstOrDefault()?.Substring(0, 1)@item.PersonName.Split(' ').LastOrDefault()?.Substring(0, 1)
                                                        </span>
                                                    </div>
                                                    <div>
                                                        <strong>@item.PersonName</strong>
                                                        @if (!string.IsNullOrEmpty(item.EmployeeNumber))
                                                        {
                                                            <br><small class="text-muted">@item.EmployeeNumber</small>
                                                        }
                                                    </div>
                                                </div>
                                            </td>
                                            <td>@item.DepartmentName</td>
                                            <td>
                                                @item.Date.ToString("dd.MM.yyyy")
                                                <br>
                                                <small class="text-muted">@item.Date.ToString("dddd", new System.Globalization.CultureInfo("tr-TR"))</small>
                                            </td>
                                            <td>
                                                @item.StartTime.ToString(@"hh\:mm")
                                                @if (item.IsLateArrival)
                                                {
                                                    <i class="fas fa-exclamation-triangle text-warning ms-1" title="Geç geldi"></i>
                                                }
                                            </td>
                                            <td>
                                                @if (item.EndTime.HasValue)
                                                {
                                                    @item.EndTime.Value.ToString(@"hh\:mm")
                                                    @if (item.IsEarlyDeparture)
                                                    {
                                                        <i class="fas fa-exclamation-triangle text-info ms-1" title="Erken gitti"></i>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">Devam Ediyor</span>
                                                }
                                            </td>
                                            <td>
                                                <strong>@item.TotalHours.ToString("F1") saat</strong>
                                                @if (item.IsOvertime)
                                                {
                                                    <br><small class="text-warning">Mesai: @item.OvertimeHours.ToString("F1")s</small>
                                                }
                                            </td>
                                            <td>
                                                @switch (item.WorkType)
                                                {
                                                    case "Office":
                                                        <span class="badge bg-primary">Ofis</span>
                                                        break;
                                                    case "Remote":
                                                        <span class="badge bg-success">Uzaktan</span>
                                                        break;
                                                    case "Field":
                                                        <span class="badge bg-info">Saha</span>
                                                        break;
                                                    case "Meeting":
                                                        <span class="badge bg-warning">Toplantı</span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-secondary">@item.WorkType</span>
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                @switch (item.Status)
                                                {
                                                    case "Active":
                                                        <span class="badge bg-warning">Aktif</span>
                                                        break;
                                                    case "Completed":
                                                        <span class="badge bg-primary">Tamamlandı</span>
                                                        break;
                                                    case "Approved":
                                                        <span class="badge bg-success">Onaylandı</span>
                                                        break;
                                                    case "Rejected":
                                                        <span class="badge bg-danger">Reddedildi</span>
                                                        break;
                                                    case "Pending":
                                                        <span class="badge bg-info">Onay Bekliyor</span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-secondary">@item.Status</span>
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group d-flex gap-1" role="group">
                                                    <a asp-action="Details" asp-route-id="@item.Id" 
                                                       class="btn btn-sm btn-outline-info"
                                                       style="border: none; width: 32px; height: 32px; z-index: 10; position: relative;"
                                                       data-bs-toggle="tooltip" title="Detayları Görüntüle">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    @if (!item.EndTime.HasValue && item.Status == "Active")
                                                    {
                                                        <a asp-action="CheckOut" asp-route-id="@item.Id" 
                                                           class="btn btn-sm btn-outline-danger"
                                                           style="border: none; width: 32px; height: 32px; z-index: 10; position: relative;"
                                                           data-bs-toggle="tooltip" title="Çıkış Yap">
                                                            <i class="fas fa-sign-out-alt"></i>
                                                        </a>
                                                    }
                                                    <a asp-action="Edit" asp-route-id="@item.Id" 
                                                       class="btn btn-sm btn-outline-warning"
                                                       style="border: none; width: 32px; height: 32px; z-index: 10; position: relative;"
                                                       data-bs-toggle="tooltip" title="Düzenle">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <form asp-action="ToggleStatus" asp-route-id="@item.Id" method="post" style="display: inline;">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" 
                                                                class="btn btn-sm @(item.IsActive ? "btn-outline-secondary" : "btn-outline-success")"
                                                                style="border: none; width: 32px; height: 32px; z-index: 10; position: relative;"
                                                                data-bs-toggle="tooltip" title="@(item.IsActive ? "Pasif Yap" : "Aktif Yap")"
                                                                onclick="return confirm('@(item.IsActive ? "Bu kaydı pasif yapmak istediğinizden emin misiniz?" : "Bu kaydı aktif yapmak istediğinizden emin misiniz?")')">
                                                            <i class="fas @(item.IsActive ? "fa-ban" : "fa-check")"></i>
                                                        </button>
                                                    </form>
                                                    <a asp-action="Delete" asp-route-id="@item.Id" 
                                                       class="btn btn-sm btn-outline-danger"
                                                       style="border: none; width: 32px; height: 32px; z-index: 10; position: relative;"
                                                       data-bs-toggle="tooltip" title="Sil"
                                                       onclick="return confirm('Bu kaydı silmek istediğinizden emin misiniz?')">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="9" class="text-center">
                                            <div class="py-3">
                                                <i class="fas fa-clock fa-3x text-muted mb-3"></i>
                                                <h5 class="text-muted">Henüz çalışma kaydı bulunmuyor</h5>
                                                <p class="text-muted">İlk çalışma kaydınızı oluşturmak için "Giriş Yap" butonunu kullanın.</p>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-sm {
        width: 32px;
        height: 32px;
    }
    .avatar-title {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        font-size: 12px;
    }
    .btn:hover {
        transform: translateY(-1px);
        transition: all 0.2s ease;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Initialize tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });

        // Auto-submit form on checkbox change for filters
        document.querySelectorAll('input[type="checkbox"]').forEach(function(checkbox) {
            checkbox.addEventListener('change', function() {
                this.closest('form').submit();
            });
        });
    });
</script>

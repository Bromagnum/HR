@model List<PositionListViewModel>

@{
    ViewData["Title"] = ViewBag.Title ?? "Pozisyon Listesi";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-briefcase me-2"></i>@ViewData["Title"]
                    </h3>
                    <div class="d-flex gap-2">
                        <div class="dropdown">
                            <button class="btn btn-outline-info dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                <i class="fas fa-filter me-1"></i>Filtrele
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="@Url.Action("Index")"><i class="fas fa-list me-2"></i>Tüm Pozisyonlar</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Available")"><i class="fas fa-check-circle me-2"></i>Müsait Pozisyonlar</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><h6 class="dropdown-header">Seviyeye Göre</h6></li>
                                <li><a class="dropdown-item" href="@Url.Action("ByLevel", new { level = "Stajyer" })">Stajyer</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("ByLevel", new { level = "Junior" })">Junior</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("ByLevel", new { level = "Mid-Level" })">Mid-Level</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("ByLevel", new { level = "Senior" })">Senior</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("ByLevel", new { level = "Manager" })">Manager</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><h6 class="dropdown-header">İstihdam Türüne Göre</h6></li>
                                <li><a class="dropdown-item" href="@Url.Action("ByEmploymentType", new { employmentType = "Tam Zamanlı" })">Tam Zamanlı</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("ByEmploymentType", new { employmentType = "Yarı Zamanlı" })">Yarı Zamanlı</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("ByEmploymentType", new { employmentType = "Stajyer" })">Stajyer</a></li>
                            </ul>
                        </div>
                        <a href="@Url.Action("Create")" class="btn btn-success">
                            <i class="fas fa-plus me-1"></i>Yeni Pozisyon Ekle
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>@TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th><i class="fas fa-briefcase me-1"></i>Pozisyon Adı</th>
                                        <th><i class="fas fa-building me-1"></i>Departman</th>
                                        <th><i class="fas fa-layer-group me-1"></i>Seviye</th>
                                        <th><i class="fas fa-clock me-1"></i>İstihdam Türü</th>
                                        <th><i class="fas fa-money-bill-wave me-1"></i>Maaş Aralığı</th>
                                        <th><i class="fas fa-users me-1"></i>Atanan Kişi</th>
                                        <th><i class="fas fa-toggle-on me-1"></i>Müsaitlik</th>
                                        <th><i class="fas fa-info-circle me-1"></i>Durum</th>
                                        <th><i class="fas fa-tools me-1"></i>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var position in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@position.Name</strong>
                                                @if (!string.IsNullOrEmpty(position.Description))
                                                {
                                                    <br><small class="text-muted">@position.Description.Substring(0, Math.Min(50, position.Description.Length))@(position.Description.Length > 50 ? "..." : "")</small>
                                                }
                                            </td>
                                            <td>
                                                <a href="@Url.Action("ByDepartment", new { departmentId = position.DepartmentId })" class="text-decoration-none">
                                                    @position.DepartmentName
                                                </a>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(position.Level))
                                                {
                                                    <span class="badge bg-info">@position.Level</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(position.EmploymentType))
                                                {
                                                    <span class="badge bg-secondary">@position.EmploymentType</span>
                                                }
                                            </td>
                                            <td>
                                                @if (position.MinSalary.HasValue || position.MaxSalary.HasValue)
                                                {
                                                    <small>
                                                        @if (position.MinSalary.HasValue && position.MaxSalary.HasValue)
                                                        {
                                                            @($"{position.MinSalary:C0} - {position.MaxSalary:C0}")
                                                        }
                                                        else if (position.MinSalary.HasValue)
                                                        {
                                                            @($"{position.MinSalary:C0}+")
                                                        }
                                                        else
                                                        {
                                                            @($"≤ {position.MaxSalary:C0}")
                                                        }
                                                    </small>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Belirtilmemiş</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-primary">@position.PersonCount kişi</span>
                                            </td>
                                            <td>
                                                @if (position.IsAvailable)
                                                {
                                                    <span class="badge bg-success"><i class="fas fa-check me-1"></i>Müsait</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning"><i class="fas fa-times me-1"></i>Dolu</span>
                                                }
                                            </td>
                                            <td>
                                                @if (position.IsActive)
                                                {
                                                    <span class="badge bg-success"><i class="fas fa-check me-1"></i>Aktif</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger"><i class="fas fa-times me-1"></i>Pasif</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="d-flex gap-1">
                                                    <a href="@Url.Action("Details", new { id = position.Id })" 
                                                       class="btn btn-sm btn-info"
                                                       style="border: none; width: 32px; height: 32px; z-index: 10; position: relative;"
                                                       data-bs-toggle="tooltip" 
                                                       title="Detayları Görüntüle">
                                                        <i class="fas fa-eye" style="z-index: 11; position: relative;"></i>
                                                    </a>
                                                    <a href="@Url.Action("Edit", new { id = position.Id })" 
                                                       class="btn btn-sm btn-warning"
                                                       style="border: none; width: 32px; height: 32px; z-index: 10; position: relative;"
                                                       data-bs-toggle="tooltip" 
                                                       title="Düzenle">
                                                        <i class="fas fa-edit" style="z-index: 11; position: relative;"></i>
                                                    </a>
                                                    <form asp-action="ToggleStatus" asp-route-id="@position.Id" method="post" style="display: inline;">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" 
                                                                class="btn btn-sm @(position.IsActive ? "btn-secondary" : "btn-success")"
                                                                style="border: none; width: 32px; height: 32px; z-index: 10; position: relative;"
                                                                data-bs-toggle="tooltip" 
                                                                title="@(position.IsActive ? "Pasif Yap" : "Aktif Yap")"
                                                                onclick="return confirm('@(position.IsActive ? "Bu pozisyonu pasif yapmak istediğinizden emin misiniz?" : "Bu pozisyonu aktif yapmak istediğinizden emin misiniz?")')">
                                                            <i class="fas @(position.IsActive ? "fa-toggle-off" : "fa-toggle-on")" style="z-index: 11; position: relative;"></i>
                                                        </button>
                                                    </form>
                                                    <a href="@Url.Action("Delete", new { id = position.Id })" 
                                                       class="btn btn-sm btn-danger"
                                                       style="border: none; width: 32px; height: 32px; z-index: 10; position: relative;"
                                                       data-bs-toggle="tooltip" 
                                                       title="Sil">
                                                        <i class="fas fa-trash" style="z-index: 11; position: relative;"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-briefcase fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Henüz pozisyon bulunmuyor</h5>
                            <p class="text-muted">İlk pozisyonu oluşturmak için "Yeni Pozisyon Ekle" butonunu kullanın.</p>
                            <a href="@Url.Action("Create")" class="btn btn-success">
                                <i class="fas fa-plus me-1"></i>Yeni Pozisyon Ekle
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Initialize tooltips
        document.addEventListener('DOMContentLoaded', function() {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });

            // Button hover effects
            document.querySelectorAll('.btn').forEach(function(btn) {
                btn.addEventListener('mouseenter', function() {
                    this.style.transform = 'scale(1.05)';
                    this.style.transition = 'transform 0.2s';
                });
                
                btn.addEventListener('mouseleave', function() {
                    this.style.transform = 'scale(1)';
                });
            });
        });
    </script>
}

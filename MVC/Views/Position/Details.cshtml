@model PositionDetailViewModel

@{
    ViewData["Title"] = "Pozisyon Detayları";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-xl-8 col-lg-10 mx-auto">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-briefcase me-2"></i>@ViewData["Title"]
                    </h3>
                    <div>
                        <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning">
                            <i class="fas fa-edit me-1"></i>Düzenle
                        </a>
                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Geri Dön
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Sol Kolon - Temel Bilgiler -->
                        <div class="col-lg-6">
                            <h5><i class="fas fa-info-circle me-2"></i>Temel Bilgiler</h5>
                            <table class="table table-borderless">
                                <tr>
                                    <td class="fw-bold text-muted"><i class="fas fa-briefcase me-2"></i>Pozisyon Adı:</td>
                                    <td>@Model.Name</td>
                                </tr>
                                <tr>
                                    <td class="fw-bold text-muted"><i class="fas fa-building me-2"></i>Departman:</td>
                                    <td>
                                        <a href="@Url.Action("ByDepartment", new { departmentId = Model.DepartmentId })" class="text-decoration-none">
                                            @Model.DepartmentName
                                        </a>
                                    </td>
                                </tr>
                                @if (!string.IsNullOrEmpty(Model.Level))
                                {
                                    <tr>
                                        <td class="fw-bold text-muted"><i class="fas fa-layer-group me-2"></i>Seviye:</td>
                                        <td><span class="badge bg-info">@Model.Level</span></td>
                                    </tr>
                                }
                                @if (!string.IsNullOrEmpty(Model.EmploymentType))
                                {
                                    <tr>
                                        <td class="fw-bold text-muted"><i class="fas fa-clock me-2"></i>İstihdam Türü:</td>
                                        <td><span class="badge bg-secondary">@Model.EmploymentType</span></td>
                                    </tr>
                                }
                                @if (Model.RequiredExperience.HasValue)
                                {
                                    <tr>
                                        <td class="fw-bold text-muted"><i class="fas fa-calendar me-2"></i>Gerekli Tecrübe:</td>
                                        <td>@Model.RequiredExperience.Value yıl</td>
                                    </tr>
                                }
                                <tr>
                                    <td class="fw-bold text-muted"><i class="fas fa-toggle-on me-2"></i>Müsaitlik:</td>
                                    <td>
                                        @if (Model.IsAvailable)
                                        {
                                            <span class="badge bg-success"><i class="fas fa-check me-1"></i>Müsait</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning"><i class="fas fa-times me-1"></i>Dolu</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td class="fw-bold text-muted"><i class="fas fa-info-circle me-2"></i>Durum:</td>
                                    <td>
                                        @if (Model.IsActive)
                                        {
                                            <span class="badge bg-success"><i class="fas fa-check me-1"></i>Aktif</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger"><i class="fas fa-times me-1"></i>Pasif</span>
                                        }
                                    </td>
                                </tr>
                            </table>
                        </div>

                        <!-- Sağ Kolon - Mali Bilgiler -->
                        <div class="col-lg-6">
                            <h5><i class="fas fa-money-bill-wave me-2"></i>Mali Bilgiler</h5>
                            <table class="table table-borderless">
                                @if (Model.MinSalary.HasValue || Model.MaxSalary.HasValue)
                                {
                                    <tr>
                                        <td class="fw-bold text-muted"><i class="fas fa-money-bill-wave me-2"></i>Maaş Aralığı:</td>
                                        <td>
                                            @if (Model.MinSalary.HasValue && Model.MaxSalary.HasValue)
                                            {
                                                <span class="badge bg-success">@($"{Model.MinSalary:C0} - {Model.MaxSalary:C0}")</span>
                                            }
                                            else if (Model.MinSalary.HasValue)
                                            {
                                                <span class="badge bg-success">@($"{Model.MinSalary:C0}+")</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">@($"≤ {Model.MaxSalary:C0}")</span>
                                            }
                                        </td>
                                    </tr>
                                }
                                <tr>
                                    <td class="fw-bold text-muted"><i class="fas fa-calendar-plus me-2"></i>Oluşturulma:</td>
                                    <td>@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                </tr>
                                <tr>
                                    <td class="fw-bold text-muted"><i class="fas fa-calendar-check me-2"></i>Son Güncelleme:</td>
                                    <td>@Model.UpdatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <!-- Açıklama -->
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="row mt-4">
                            <div class="col-12">
                                <h5><i class="fas fa-align-left me-2"></i>Açıklama</h5>
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <p class="mb-0">@Model.Description</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Gereksinimler -->
                    @if (!string.IsNullOrEmpty(Model.Requirements))
                    {
                        <div class="row mt-4">
                            <div class="col-12">
                                <h5><i class="fas fa-list-check me-2"></i>Gereksinimler</h5>
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <p class="mb-0">@Model.Requirements</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Sorumluluklar -->
                    @if (!string.IsNullOrEmpty(Model.Responsibilities))
                    {
                        <div class="row mt-4">
                            <div class="col-12">
                                <h5><i class="fas fa-tasks me-2"></i>Sorumluluklar</h5>
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <p class="mb-0">@Model.Responsibilities</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Atanan Personel -->
                    <div class="row mt-4">
                        <div class="col-12">
                            <h5><i class="fas fa-users me-2"></i>Atanan Personel (@Model.AssignedPersons.Count kişi)</h5>
                            @if (Model.AssignedPersons.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead class="table-light">
                                            <tr>
                                                <th><i class="fas fa-user me-1"></i>Ad Soyad</th>
                                                <th><i class="fas fa-id-badge me-1"></i>Sicil No</th>
                                                <th><i class="fas fa-calendar me-1"></i>İşe Başlama</th>
                                                <th><i class="fas fa-money-bill-wave me-1"></i>Maaş</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var person in Model.AssignedPersons)
                                            {
                                                <tr>
                                                    <td>
                                                        <a href="@Url.Action("Details", "Person", new { id = person.Id })" class="text-decoration-none">
                                                            @person.FullName
                                                        </a>
                                                    </td>
                                                    <td>@person.EmployeeNumber</td>
                                                    <td>@(person.HireDate?.ToString("dd/MM/yyyy") ?? "-")</td>
                                                    <td>@(person.Salary?.ToString("C0") ?? "-")</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="text-center py-4">
                                    <i class="fas fa-user-slash fa-2x text-muted mb-2"></i>
                                    <p class="text-muted mb-0">Bu pozisyona henüz personel atanmamış</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

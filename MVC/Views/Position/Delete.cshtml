@model PositionDetailViewModel

@{
    ViewData["Title"] = "Pozisyon Sil";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-xl-8 col-lg-10">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>@ViewData["Title"]
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Dikkat!</strong> Bu pozisyonu silmek istediğinizden emin misiniz?
                        Bu işlem geri alınamaz!
                    </div>

                    <div class="row">
                        <!-- Sol Kolon - Temel Bilgiler -->
                        <div class="col-lg-6">
                            <h5><i class="fas fa-info-circle me-2"></i>Silinecek Pozisyon Bilgileri</h5>
                            <table class="table table-borderless">
                                <tr>
                                    <td class="fw-bold text-muted"><i class="fas fa-briefcase me-2"></i>Pozisyon Adı:</td>
                                    <td>@Model.Name</td>
                                </tr>
                                <tr>
                                    <td class="fw-bold text-muted"><i class="fas fa-building me-2"></i>Departman:</td>
                                    <td>@Model.DepartmentName</td>
                                </tr>
                                @if (!string.IsNullOrEmpty(Model.Level))
                                {
                                    <tr>
                                        <td class="fw-bold text-muted"><i class="fas fa-layer-group me-2"></i>Seviye:</td>
                                        <td><span class="badge bg-info">@Model.Level</span></td>
                                    </tr>
                                }
                                @if (!string.IsNullOrEmpty(Model.EmploymentType))
                                {
                                    <tr>
                                        <td class="fw-bold text-muted"><i class="fas fa-clock me-2"></i>İstihdam Türü:</td>
                                        <td><span class="badge bg-secondary">@Model.EmploymentType</span></td>
                                    </tr>
                                }
                                <tr>
                                    <td class="fw-bold text-muted"><i class="fas fa-users me-2"></i>Atanan Personel:</td>
                                    <td>
                                        @if (Model.AssignedPersons.Any())
                                        {
                                            <span class="badge bg-warning">@Model.AssignedPersons.Count kişi</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">Personel yok</span>
                                        }
                                    </td>
                                </tr>
                            </table>
                        </div>

                        <!-- Sağ Kolon - Mali Bilgiler -->
                        <div class="col-lg-6">
                            <h5><i class="fas fa-money-bill-wave me-2"></i>Mali Bilgiler</h5>
                            <table class="table table-borderless">
                                @if (Model.MinSalary.HasValue || Model.MaxSalary.HasValue)
                                {
                                    <tr>
                                        <td class="fw-bold text-muted"><i class="fas fa-money-bill-wave me-2"></i>Maaş Aralığı:</td>
                                        <td>
                                            @if (Model.MinSalary.HasValue && Model.MaxSalary.HasValue)
                                            {
                                                <span class="badge bg-success">@($"{Model.MinSalary:C0} - {Model.MaxSalary:C0}")</span>
                                            }
                                            else if (Model.MinSalary.HasValue)
                                            {
                                                <span class="badge bg-success">@($"{Model.MinSalary:C0}+")</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">@($"≤ {Model.MaxSalary:C0}")</span>
                                            }
                                        </td>
                                    </tr>
                                }
                                <tr>
                                    <td class="fw-bold text-muted"><i class="fas fa-calendar-plus me-2"></i>Oluşturulma:</td>
                                    <td>@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                </tr>
                                <tr>
                                    <td class="fw-bold text-muted"><i class="fas fa-calendar-check me-2"></i>Son Güncelleme:</td>
                                    <td>@Model.UpdatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <!-- Açıklama -->
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="row mt-3">
                            <div class="col-12">
                                <h6><i class="fas fa-align-left me-2"></i>Açıklama</h6>
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <p class="mb-0">@Model.Description</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Atanan Personel Uyarısı -->
                    @if (Model.AssignedPersons.Any())
                    {
                        <div class="row mt-3">
                            <div class="col-12">
                                <div class="alert alert-danger" role="alert">
                                    <i class="fas fa-exclamation-circle me-2"></i>
                                    <strong>Uyarı!</strong> Bu pozisyonda <strong>@Model.AssignedPersons.Count aktif personel</strong> bulunmaktadır.
                                    Pozisyonu silmeden önce bu personeli başka pozisyonlara transfer etmeniz önerilir.
                                </div>
                                
                                <h6><i class="fas fa-users me-2"></i>Atanan Personel Listesi</h6>
                                <div class="table-responsive">
                                    <table class="table table-sm table-striped">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Ad Soyad</th>
                                                <th>Sicil No</th>
                                                <th>İşe Başlama</th>
                                                <th>Maaş</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var person in Model.AssignedPersons)
                                            {
                                                <tr>
                                                    <td>
                                                        <a href="@Url.Action("Details", "Person", new { id = person.Id })" class="text-decoration-none">
                                                            @person.FullName
                                                        </a>
                                                    </td>
                                                    <td>@person.EmployeeNumber</td>
                                                    <td>@(person.HireDate?.ToString("dd/MM/yyyy") ?? "-")</td>
                                                    <td>@(person.Salary?.ToString("C0") ?? "-")</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    }

                    <div class="d-flex justify-content-between mt-4">
                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>İptal Et
                        </a>
                        <div>
                            <a href="@Url.Action("Details", new { id = Model.Id })" class="btn btn-info me-2">
                                <i class="fas fa-eye me-1"></i>Detayları Gör
                            </a>
                            <form asp-action="Delete" method="post" style="display: inline;">
                                <input asp-for="Id" type="hidden" />
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger" 
                                        onclick="return confirm('Bu pozisyonu kalıcı olarak silmek istediğinizden emin misiniz? Bu işlem geri alınamaz!')">
                                    <i class="fas fa-trash me-1"></i>Pozisyonu Sil
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

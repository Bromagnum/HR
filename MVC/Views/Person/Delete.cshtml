@model MVC.Models.PersonDetailViewModel

@{
    ViewData["Title"] = "Personel Sil";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@ViewData["Title"]</h1>
</div>

<div class="alert alert-warning">
    <i class="fas fa-exclamation-triangle"></i>
    <strong>Dikkat!</strong> Bu personeli silmek istediğinize emin misiniz? Bu işlem geri alınamaz.
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">Silinecek Personel: @Model.FullName</h4>
            </div>
            <div class="card-body">
                <!-- Temel Bilgiler -->
                <div class="row mb-4">
                    <div class="col-md-4">
                        <dt>@Html.DisplayNameFor(model => model.TcKimlikNo)</dt>
                        <dd>@Html.DisplayFor(model => model.TcKimlikNo)</dd>
                    </div>
                    
                    <div class="col-md-4">
                        <dt>@Html.DisplayNameFor(model => model.EmployeeNumber)</dt>
                        <dd>@Html.DisplayFor(model => model.EmployeeNumber)</dd>
                    </div>
                    
                    <div class="col-md-4">
                        <dt>@Html.DisplayNameFor(model => model.Position)</dt>
                        <dd>@Html.DisplayFor(model => model.Position)</dd>
                    </div>
                    
                    <div class="col-md-4">
                        <dt>@Html.DisplayNameFor(model => model.DepartmentName)</dt>
                        <dd>@Html.DisplayFor(model => model.DepartmentName)</dd>
                    </div>
                    
                    <div class="col-md-4">
                        <dt>@Html.DisplayNameFor(model => model.Email)</dt>
                        <dd>@Html.DisplayFor(model => model.Email)</dd>
                    </div>
                    
                    <div class="col-md-4">
                        <dt>@Html.DisplayNameFor(model => model.Phone)</dt>
                        <dd>@Html.DisplayFor(model => model.Phone)</dd>
                    </div>
                    
                    <div class="col-md-6">
                        <dt>@Html.DisplayNameFor(model => model.HireDate)</dt>
                        <dd>@(Model.HireDate?.ToString("dd.MM.yyyy") ?? "-")</dd>
                    </div>
                    
                    <div class="col-md-6">
                        <dt>@Html.DisplayNameFor(model => model.CreatedAt)</dt>
                        <dd>@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</dd>
                    </div>
                </div>
                
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Evet, Sil
                        </button>
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                            <i class="fas fa-eye"></i> Detaya Dön
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Listeye Dön
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
}

@model PersonDetailViewModel
@{
    ViewData["Title"] = "Profilim";
    var isEmployeeView = ViewData["IsEmployeeView"] as bool? ?? false;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-user-circle me-2"></i>@ViewData["Title"]
                    </h3>
                </div>
                <div class="card-body">
                    @if (isEmployeeView)
                    {
                        <div class="alert alert-info" role="alert">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Bilgi:</strong> Gizlilik ve güvenlik amacıyla bazı bilgileriniz maskelenmiş olarak gösterilmektedir.
                            Bilgilerinizi güncellemek için yöneticinize başvurun.
                        </div>
                    }

                    <div class="row">
                        <!-- Kişisel Bilgiler -->
                        <div class="col-md-6">
                            <div class="card h-100">
                                <div class="card-header bg-light">
                                    <h5 class="card-title mb-0">
                                        <i class="fas fa-id-card me-2"></i>Kişisel Bilgiler
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="row mb-3">
                                        <div class="col-sm-4"><strong>TC Kimlik No:</strong></div>
                                        <div class="col-sm-8">
                                            <span class="badge bg-secondary">@(Model.TcKimlikNo ?? "Belirtilmemiş")</span>
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-sm-4"><strong>Ad:</strong></div>
                                        <div class="col-sm-8">@Model.FirstName</div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-sm-4"><strong>Soyad:</strong></div>
                                        <div class="col-sm-8">@Model.LastName</div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-sm-4"><strong>Baba Adı:</strong></div>
                                        <div class="col-sm-8">@(Model.FatherName ?? "Belirtilmemiş")</div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-sm-4"><strong>Anne Adı:</strong></div>
                                        <div class="col-sm-8">@(Model.MotherName ?? "Belirtilmemiş")</div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-sm-4"><strong>Doğum Yeri:</strong></div>
                                        <div class="col-sm-8">@(Model.BirthPlace ?? "Belirtilmemiş")</div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-sm-4"><strong>Doğum Tarihi:</strong></div>
                                        <div class="col-sm-8">
                                            @(Model.BirthDate?.ToString("dd.MM.yyyy") ?? "Belirtilmemiş")
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-sm-4"><strong>Medeni Hal:</strong></div>
                                        <div class="col-sm-8">@(Model.MaritalStatus ?? "Belirtilmemiş")</div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-sm-4"><strong>Kan Grubu:</strong></div>
                                        <div class="col-sm-8">@(Model.BloodType ?? "Belirtilmemiş")</div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-sm-4"><strong>Din:</strong></div>
                                        <div class="col-sm-8">@(Model.Religion ?? "Belirtilmemiş")</div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-sm-4"><strong>Ehliyet Sınıfı:</strong></div>
                                        <div class="col-sm-8">@(Model.DriverLicenseClass ?? "Belirtilmemiş")</div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- İş Bilgileri -->
                        <div class="col-md-6">
                            <div class="card h-100">
                                <div class="card-header bg-light">
                                    <h5 class="card-title mb-0">
                                        <i class="fas fa-briefcase me-2"></i>İş Bilgileri
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="row mb-3">
                                        <div class="col-sm-4"><strong>Çalışan No:</strong></div>
                                        <div class="col-sm-8">
                                            <span class="badge bg-primary">@(Model.EmployeeNumber ?? "Belirtilmemiş")</span>
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-sm-4"><strong>Departman:</strong></div>
                                        <div class="col-sm-8">@(Model.DepartmentName ?? "Belirtilmemiş")</div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-sm-4"><strong>Pozisyon:</strong></div>
                                        <div class="col-sm-8">@(Model.PositionName ?? "Belirtilmemiş")</div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-sm-4"><strong>İşe Giriş:</strong></div>
                                        <div class="col-sm-8">
                                            @(Model.HireDate?.ToString("dd.MM.yyyy") ?? "Belirtilmemiş")
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-sm-4"><strong>SSK No:</strong></div>
                                        <div class="col-sm-8">
                                            <span class="badge bg-secondary">@(Model.SskNumber ?? "Belirtilmemiş")</span>
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-sm-4"><strong>SSK Başlangıç:</strong></div>
                                        <div class="col-sm-8">
                                            @(Model.SskStartDate?.ToString("dd.MM.yyyy") ?? "Belirtilmemiş")
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-sm-4"><strong>Askerlik Durumu:</strong></div>
                                        <div class="col-sm-8">@(Model.MilitaryStatus ?? "Belirtilmemiş")</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <!-- İletişim Bilgileri -->
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header bg-light">
                                    <h5 class="card-title mb-0">
                                        <i class="fas fa-address-book me-2"></i>İletişim Bilgileri
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="row mb-3">
                                                <div class="col-sm-4"><strong>E-posta:</strong></div>
                                                <div class="col-sm-8">
                                                    <span class="badge bg-info">@(Model.Email ?? "Belirtilmemiş")</span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="row mb-3">
                                                <div class="col-sm-4"><strong>Telefon:</strong></div>
                                                <div class="col-sm-8">
                                                    <span class="badge bg-info">@(Model.Phone ?? "Belirtilmemiş")</span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="row mb-3">
                                                <div class="col-sm-4"><strong>Durum:</strong></div>
                                                <div class="col-sm-8">
                                                    @if (Model.IsActive)
                                                    {
                                                        <span class="badge bg-success">
                                                            <i class="fas fa-check-circle me-1"></i>Aktif
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-danger">
                                                            <i class="fas fa-times-circle me-1"></i>Pasif
                                                        </span>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    @if (!string.IsNullOrEmpty(Model.Address))
                                    {
                                        <div class="row">
                                            <div class="col-12">
                                                <div class="row mb-3">
                                                    <div class="col-sm-2"><strong>Adres:</strong></div>
                                                    <div class="col-sm-10">@Model.Address</div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Sistem Bilgileri -->
                    <div class="row mt-4">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header bg-light">
                                    <h5 class="card-title mb-0">
                                        <i class="fas fa-info-circle me-2"></i>Sistem Bilgileri
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="row mb-3">
                                                <div class="col-sm-4"><strong>Kayıt Tarihi:</strong></div>
                                                <div class="col-sm-8">@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            @if (Model.UpdatedAt.HasValue)
                                            {
                                                <div class="row mb-3">
                                                    <div class="col-sm-4"><strong>Son Güncelleme:</strong></div>
                                                    <div class="col-sm-8">@Model.UpdatedAt.Value.ToString("dd.MM.yyyy HH:mm")</div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-between">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Ana Sayfaya Dön
                        </a>
                        
                        @if (isEmployeeView)
                        {
                            <div class="btn-group">
                                <a asp-controller="Auth" asp-action="Profile" class="btn btn-outline-primary">
                                    <i class="fas fa-user-edit me-2"></i>Hesap Ayarları
                                </a>
                                <a asp-controller="Auth" asp-action="ChangePassword" class="btn btn-outline-warning">
                                    <i class="fas fa-key me-2"></i>Şifre Değiştir
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Maskelenmiş alanları vurgula
            $('.badge.bg-secondary').each(function() {
                if ($(this).text().includes('***')) {
                    $(this).attr('title', 'Gizlilik amacıyla maskelenmiş bilgi');
                    $(this).addClass('masked-data');
                }
            });
            
            $('.badge.bg-info').each(function() {
                if ($(this).text().includes('***')) {
                    $(this).attr('title', 'Gizlilik amacıyla maskelenmiş bilgi');
                    $(this).addClass('masked-data');
                }
            });
        });
    </script>
}

@section Styles {
    <style>
        .masked-data {
            cursor: help;
            border: 1px dashed #6c757d;
        }
        
        .card {
            transition: box-shadow 0.3s ease;
        }
        
        .card:hover {
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }
        
        .badge {
            font-size: 0.875em;
        }
    </style>
}

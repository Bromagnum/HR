@model IEnumerable<MaterialListViewModel>

@{
    ViewData["Title"] = "Düşük Stok Malzemeleri";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="fas fa-exclamation-triangle text-warning"></i>
            Düşük Stok Malzemeleri
        </h2>
        <div>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-list"></i> Tüm Malzemeler
            </a>
            <a asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus"></i> Yeni Malzeme
            </a>
            @if (User.IsInRole("Admin"))
            {
                <form asp-action="ExportLowStockToExcel" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-file-excel"></i> Excel'e Aktar
                    </button>
                </form>
            }
        </div>
    </div>

    @if (Model?.Any() == true)
    {
        <!-- Özet Kartları -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card bg-warning text-white">
                    <div class="card-body text-center">
                        <h4>@Model.Count()</h4>
                        <p class="mb-0">Düşük Stok Malzeme</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-danger text-white">
                    <div class="card-body text-center">
                        <h4>@Model.Count(m => m.StockQuantity == 0)</h4>
                        <p class="mb-0">Stokta Yok</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-info text-white">
                    <div class="card-body text-center">
                        <h4>@Model.Sum(m => m.TotalValue).ToString("C2")</h4>
                        <p class="mb-0">Toplam Değer</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-secondary text-white">
                    <div class="card-body text-center">
                        <h4>@Model.Select(m => m.Category).Distinct().Count()</h4>
                        <p class="mb-0">Farklı Kategori</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Düşük Stok Tablosu -->
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="fas fa-warehouse"></i> Düşük Stok Listesi
                </h5>
                <span class="badge bg-warning fs-6">@Model.Count() malzeme</span>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.First().Code)</th>
                                <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                                <th>@Html.DisplayNameFor(model => model.First().Category)</th>
                                <th>@Html.DisplayNameFor(model => model.First().StockQuantity)</th>
                                <th>@Html.DisplayNameFor(model => model.First().MinStockLevel)</th>
                                <th>Fark</th>
                                <th>@Html.DisplayNameFor(model => model.First().UnitPrice)</th>
                                <th>@Html.DisplayNameFor(model => model.First().Supplier)</th>
                                <th>Durum</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderBy(m => m.StockQuantity))
                            {
                                <tr class="@(item.StockQuantity == 0 ? "table-danger" : "table-warning")">
                                    <td>
                                        <strong>@item.Code</strong>
                                    </td>
                                    <td>
                                        @item.Name
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@item.Category</span>
                                    </td>
                                    <td>
                                        <strong class="@(item.StockQuantity == 0 ? "text-danger" : "text-warning")">
                                            @item.StockQuantity @item.Unit
                                        </strong>
                                    </td>
                                    <td>
                                        @item.MinStockLevel @item.Unit
                                    </td>
                                    <td>
                                        @{
                                            var diff = item.MinStockLevel - item.StockQuantity;
                                        }
                                        <span class="badge bg-danger">
                                            -@diff @item.Unit
                                        </span>
                                    </td>
                                    <td>
                                        @item.UnitPrice.ToString("C2")
                                    </td>
                                    <td>
                                        @(item.Supplier ?? "Belirtilmemiş")
                                    </td>
                                    <td>
                                        @if (item.StockQuantity == 0)
                                        {
                                            <span class="badge bg-danger">
                                                <i class="fas fa-times"></i> Stokta Yok
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">
                                                <i class="fas fa-exclamation-triangle"></i> Düşük Stok
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm" title="Detayları Görüntüle">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                                            {
                                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm" title="Düzenle">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Kategori Bazında Özet -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-chart-bar"></i> Kategori Bazında Düşük Stok Özeti
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @foreach (var categoryGroup in Model.GroupBy(m => m.Category))
                            {
                                <div class="col-md-4 col-lg-3 mb-3">
                                    <div class="card bg-light">
                                        <div class="card-body text-center">
                                            <h6 class="card-title">@categoryGroup.Key</h6>
                                            <p class="card-text">
                                                <strong class="text-warning">@categoryGroup.Count()</strong> malzeme
                                                <br />
                                                <small class="text-muted">
                                                    @categoryGroup.Sum(m => m.TotalValue).ToString("C2")
                                                </small>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-check-circle fa-5x text-success mb-3"></i>
            <h4 class="text-success">Harika! Düşük stok malzeme yok</h4>
            <p class="text-muted">Tüm malzemeleriniz yeterli stok seviyesinde.</p>
            <a asp-action="Index" class="btn btn-primary">
                <i class="fas fa-list"></i> Tüm Malzemeleri Görüntüle
            </a>
        </div>
    }
</div>

@section Scripts {
    <style>
        .table-warning {
            --bs-table-accent-bg: var(--bs-warning-bg-subtle);
            border-color: var(--bs-warning-border-subtle);
        }
        
        .table-danger {
            --bs-table-accent-bg: var(--bs-danger-bg-subtle);
            border-color: var(--bs-danger-border-subtle);
        }
        
        .card {
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            border-radius: 0.5rem;
        }
        
        .btn-group .btn {
            margin-right: 2px;
        }
        
        .badge {
            font-size: 0.75em;
        }
    </style>
}

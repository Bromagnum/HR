@model IEnumerable<MaterialListViewModel>

@{
    ViewData["Title"] = "Malzeme Listesi";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="fas fa-boxes text-primary"></i>
            Malzeme Listesi
        </h2>
        @if (User.IsInRole("Admin"))
        {
            <div>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Yeni Malzeme
                </a>
                <a asp-action="LowStock" class="btn btn-warning">
                    <i class="fas fa-exclamation-triangle"></i> Düşük Stok
                </a>
                <a asp-action="StockSummary" class="btn btn-info">
                    <i class="fas fa-chart-pie"></i> Stok Özeti
                </a>
            </div>
        }
    </div>

    <!-- Filter Section -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">
                <i class="fas fa-filter"></i> Filtreler
            </h5>
        </div>
        <div class="card-body">
            <form method="get" asp-action="Index">
                <div class="row">
                    <div class="col-md-3">
                        <label class="form-label">Malzeme Adı</label>
                        <input type="text" name="Name" class="form-control" placeholder="Malzeme adı..." />
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Kod</label>
                        <input type="text" name="Code" class="form-control" placeholder="Kod..." />
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Kategori</label>
                        <input type="text" name="Category" class="form-control" placeholder="Kategori..." />
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Düşük Stok</label>
                        <select name="IsLowStock" class="form-select">
                            <option value="">Tümü</option>
                            <option value="true">Sadece Düşük Stok</option>
                            <option value="false">Normal Stok</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Durum</label>
                        <select name="IsActive" class="form-select">
                            <option value="">Tümü</option>
                            <option value="true">Aktif</option>
                            <option value="false">Pasif</option>
                        </select>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-search"></i> Filtrele
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Temizle
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Results Table -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="fas fa-list"></i> Malzemeler
                <span class="badge bg-secondary">@Model.Count() kayıt</span>
            </h5>
            @if (User.IsInRole("Admin"))
            {
                <div>
                    <button type="button" class="btn btn-success btn-sm" onclick="exportToExcel()">
                        <i class="fas fa-file-excel"></i> Excel'e Aktar
                    </button>
                </div>
            }
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Kod</th>
                                <th>Ad</th>
                                <th>Kategori</th>
                                <th>Birim</th>
                                <th>Birim Fiyat</th>
                                <th>Stok</th>
                                <th>Stok Durumu</th>
                                <th>Toplam Değer</th>
                                <th>Organizasyon</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="@(item.IsLowStock ? "table-warning" : "")">
                                    <td>
                                        <code>@item.Code</code>
                                    </td>
                                    <td>
                                        <strong>@item.Name</strong>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@item.Category</span>
                                    </td>
                                    <td>
                                        @item.Unit
                                    </td>
                                    <td>
                                        @item.UnitPrice.ToString("C2")
                                    </td>
                                    <td>
                                        <span class="badge @(item.IsLowStock ? "bg-danger" : "bg-success")">
                                            @item.StockQuantity
                                        </span>
                                        <small class="text-muted">
                                            (Min: @item.MinStockLevel, Max: @item.MaxStockLevel)
                                        </small>
                                    </td>
                                    <td>
                                        @if (item.IsLowStock)
                                        {
                                            <span class="badge bg-danger">
                                                <i class="fas fa-exclamation-triangle"></i> @item.StockStatus
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">@item.StockStatus</span>
                                        }
                                    </td>
                                    <td>
                                        <strong>@item.TotalValue.ToString("C2")</strong>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.OrganizationName))
                                        {
                                            <span class="badge bg-info">@item.OrganizationName</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm" title="Detay">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            @if (User.IsInRole("Admin"))
                                            {
                                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm" title="Düzenle">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <button type="button" class="btn btn-danger btn-sm" title="Sil" onclick="deleteMaterial(@item.Id, '@item.Name')">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">Henüz malzeme bulunmuyor</h5>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Create" class="btn btn-primary mt-2">
                            <i class="fas fa-plus"></i> İlk Malzemeyi Ekle
                        </a>
                    }
                </div>
            }
        </div>
    </div>
</div>

<!-- Delete Form -->
<form id="deleteForm" method="post" style="display: none;">
    <input name="__RequestVerificationToken" type="hidden" value="@Html.AntiForgeryToken().ToString()" />
</form>

@section Scripts {
    <script>
        function deleteMaterial(id, name) {
            if (confirm(`"${name}" malzemesini silmek istediğinizden emin misiniz?`)) {
                const form = document.getElementById('deleteForm');
                form.action = '@Url.Action("Delete")' + '/' + id;
                form.submit();
            }
        }

        function exportToExcel() {
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = '@Url.Action("ExportToExcel")';
            
            const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
            const tokenInput = document.createElement('input');
            tokenInput.type = 'hidden';
            tokenInput.name = '__RequestVerificationToken';
            tokenInput.value = token;
            form.appendChild(tokenInput);
            
            document.body.appendChild(form);
            form.submit();
            document.body.removeChild(form);
        }
    </script>
}

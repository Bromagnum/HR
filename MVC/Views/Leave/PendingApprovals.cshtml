@model IEnumerable<MVC.Models.LeaveListViewModel>
@{
    ViewData["Title"] = "Onay Bekleyen İzinler";
    var statistics = ViewBag.Statistics as Dictionary<string, object> ?? new Dictionary<string, object>();
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-clock text-warning me-2"></i>
                        Onay Bekleyen İzinler
                    </h3>
                    <div class="btn-group">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-list me-1"></i>
                            Tüm İzinler
                        </a>
                        <a asp-action="Create" class="btn btn-success">
                            <i class="fas fa-plus me-1"></i>
                            Yeni İzin
                        </a>
                        <a asp-action="Calendar" class="btn btn-primary">
                            <i class="fas fa-calendar me-1"></i>
                            Takvim
                        </a>
                    </div>
                </div>

                <!-- Filtering Section -->
                <div class="card-body">
                    <form method="get" class="row g-3 mb-4">
                        <div class="col-md-4">
                            <label for="departmentId" class="form-label">Departman</label>
                            <select asp-items="ViewBag.Departments" name="departmentId" id="departmentId" class="form-select">
                                <option value="">Tüm Departmanlar</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label for="leaveTypeId" class="form-label">İzin Türü</label>
                            <select asp-items="ViewBag.LeaveTypes" name="leaveTypeId" id="leaveTypeId" class="form-select">
                                <option value="">Tüm İzin Türleri</option>
                            </select>
                        </div>
                        <div class="col-md-4 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary me-2">
                                <i class="fas fa-filter me-1"></i>
                                Filtrele
                            </button>
                            <a asp-action="PendingApprovals" class="btn btn-secondary">
                                <i class="fas fa-times me-1"></i>
                                Temizle
                            </a>
                        </div>
                    </form>

                    <!-- Statistics Cards -->
                    <div class="row mb-4">
                        <div class="col-lg-3 col-md-6">
                            <div class="card bg-warning text-dark">
                                <div class="card-body d-flex align-items-center">
                                    <div class="flex-grow-1">
                                        <h4 class="mb-0">@(statistics.ContainsKey("TotalPending") ? statistics["TotalPending"] : 0)</h4>
                                        <p class="mb-0">Toplam Bekleyen</p>
                                    </div>
                                    <div class="fs-2">
                                        <i class="fas fa-clock"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <div class="card bg-danger text-white">
                                <div class="card-body d-flex align-items-center">
                                    <div class="flex-grow-1">
                                        <h4 class="mb-0">@(statistics.ContainsKey("UrgentRequests") ? statistics["UrgentRequests"] : 0)</h4>
                                        <p class="mb-0">Acil Talepler</p>
                                    </div>
                                    <div class="fs-2">
                                        <i class="fas fa-exclamation-triangle"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <div class="card bg-info text-white">
                                <div class="card-body d-flex align-items-center">
                                    <div class="flex-grow-1">
                                        <h4 class="mb-0">@(statistics.ContainsKey("RequiringDocuments") ? statistics["RequiringDocuments"] : 0)</h4>
                                        <p class="mb-0">Belge Gereken</p>
                                    </div>
                                    <div class="fs-2">
                                        <i class="fas fa-file-alt"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <div class="card bg-secondary text-white">
                                <div class="card-body d-flex align-items-center">
                                    <div class="flex-grow-1">
                                        <h4 class="mb-0">@(statistics.ContainsKey("LongPending") ? statistics["LongPending"] : 0)</h4>
                                        <p class="mb-0">7+ Gün Bekleyen</p>
                                    </div>
                                    <div class="fs-2">
                                        <i class="fas fa-hourglass-half"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (!Model.Any())
                    {
                        <div class="text-center py-5">
                            <div class="mb-3">
                                <i class="fas fa-check-circle fa-3x text-success"></i>
                            </div>
                            <h5 class="text-muted">Harika! Onay bekleyen izin yok</h5>
                            <p class="text-muted">Tüm izin talepleri işlenmiş durumda.</p>
                        </div>
                    }
                    else
                    {
                        <!-- Data Table -->
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Öncelik</th>
                                        <th>Personel</th>
                                        <th>Departman</th>
                                        <th>İzin Türü</th>
                                        <th>Tarih Aralığı</th>
                                        <th>Gün</th>
                                        <th>Talep Tarihi</th>
                                        <th>Bekleme Süresi</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.OrderByDescending(l => l.IsUrgent).ThenBy(l => l.RequestDate))
                                    {
                                        var waitingDays = (DateTime.Now - item.RequestDate).Days;
                                        var rowClass = item.IsUrgent ? "table-warning" : (waitingDays > 7 ? "table-danger" : "");
                                        
                                        <tr class="@rowClass">
                                            <td>
                                                @if (item.IsUrgent)
                                                {
                                                    <span class="badge bg-danger">
                                                        <i class="fas fa-exclamation-triangle me-1"></i>
                                                        ACİL
                                                    </span>
                                                }
                                                else if (waitingDays > 7)
                                                {
                                                    <span class="badge bg-warning text-dark">
                                                        <i class="fas fa-clock me-1"></i>
                                                        GECİKMİŞ
                                                    </span>
                                                }
                                                else if (waitingDays > 3)
                                                {
                                                    <span class="badge bg-secondary">
                                                        <i class="fas fa-hourglass-half me-1"></i>
                                                        BEKLEYEN
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="fas fa-clock me-1"></i>
                                                        YENİ
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar bg-primary text-white rounded-circle me-2 d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">
                                                        @item.PersonName.FirstOrDefault()
                                                    </div>
                                                    <div>
                                                        <strong>@item.PersonName</strong>
                                                        @if (!string.IsNullOrEmpty(item.EmployeeNumber))
                                                        {
                                                            <br><small class="text-muted">@item.EmployeeNumber</small>
                                                        }
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary">@item.DepartmentName</span>
                                            </td>
                                            <td>
                                                <span class="badge" style="background-color: @item.LeaveTypeColor; color: white;">
                                                    @item.LeaveTypeName
                                                </span>
                                                @if (item.RequiresDocument && !item.HasDocument)
                                                {
                                                    <br><small class="text-danger">
                                                        <i class="fas fa-file-alt me-1"></i>
                                                        Belge Gerekli
                                                    </small>
                                                }
                                            </td>
                                            <td>
                                                <small>
                                                    <strong>Başlangıç:</strong> @item.StartDate.ToString("dd.MM.yyyy")<br>
                                                    <strong>Bitiş:</strong> @item.EndDate.ToString("dd.MM.yyyy")
                                                </small>
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@item.TotalDays gün</span>
                                            </td>
                                            <td>
                                                <small>@item.RequestDate.ToString("dd.MM.yyyy HH:mm")</small>
                                            </td>
                                            <td>
                                                <span class="@(waitingDays > 7 ? "text-danger" : waitingDays > 3 ? "text-warning" : "text-muted")">
                                                    @waitingDays gün
                                                </span>
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info" title="Detaylar">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Approve" asp-route-id="@item.Id" class="btn btn-outline-success" title="Onayla">
                                                        <i class="fas fa-check"></i>
                                                    </a>
                                                    <a asp-action="Reject" asp-route-id="@item.Id" class="btn btn-outline-danger" title="Reddet">
                                                        <i class="fas fa-times"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning" title="Düzenle">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-refresh every 5 minutes for pending approvals
        setTimeout(function() {
            location.reload();
        }, 300000); // 5 minutes
        
        // Show confirmation for approval actions
        $('.btn-outline-success, .btn-outline-danger').on('click', function(e) {
            var action = $(this).hasClass('btn-outline-success') ? 'onaylamak' : 'reddetmek';
            if (!confirm('Bu izni ' + action + ' istediğinizden emin misiniz?')) {
                e.preventDefault();
            }
        });
    </script>
}

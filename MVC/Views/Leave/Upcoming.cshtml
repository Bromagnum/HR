@model IEnumerable<MVC.Models.LeaveListViewModel>
@{
    ViewData["Title"] = "İzin Yönetimi";
    var statistics = ViewBag.Statistics as Dictionary<string, object> ?? new Dictionary<string, object>();
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-calendar-check text-primary me-2"></i>
                        İzin Yönetimi
                    </h3>
                    <div class="btn-group">
                        <a asp-action="Create" class="btn btn-success">
                            <i class="fas fa-plus me-1"></i>
                            Yeni İzin
                        </a>
                        <a asp-action="PendingApprovals" class="btn btn-warning">
                            <i class="fas fa-clock me-1"></i>
                            Onay Bekleyenler
                        </a>
                        <a asp-action="MyLeaves" class="btn btn-info">
                            <i class="fas fa-user me-1"></i>
                            İzinlerim
                        </a>
                        <a asp-action="Calendar" class="btn btn-primary">
                            <i class="fas fa-calendar me-1"></i>
                            Takvim
                        </a>
                    </div>
                </div>

                <!-- Filtering Section -->
                <div class="card-body">
                    <form method="get" class="row g-3 mb-4">
                        <div class="col-md-3">
                            <label for="PersonId" class="form-label">Personel</label>
                            <select name="PersonId" id="PersonId" class="form-select">
                                <option value="">Tümü</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="LeaveTypeId" class="form-label">İzin Türü</label>
                            <select name="LeaveTypeId" id="LeaveTypeId" class="form-select">
                                <option value="">Tümü</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label for="departmentId" class="form-label">Departman</label>
                            <select asp-items="ViewBag.Departments" name="departmentId" id="departmentId" class="form-select">
                                <option value="">Tümü</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label for="Status" class="form-label">Durum</label>
                            <select name="Status" id="Status" class="form-select">
                                <option value="">Tümü</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label for="StartDate" class="form-label">Başlangıç</label>
                            <input name="StartDate" id="StartDate" type="date" class="form-control" />
                        </div>
                        <div class="col-md-2">
                            <label for="EndDate" class="form-label">Bitiş</label>
                            <input name="EndDate" id="EndDate" type="date" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label for="SearchTerm" class="form-label">Arama</label>
                            <input name="SearchTerm" id="SearchTerm" type="text" class="form-control" placeholder="Personel adı, gerekçe..." />
                        </div>
                        <div class="col-md-2">
                            <label for="Year" class="form-label">Yıl</label>
                            <input name="Year" id="Year" type="number" class="form-control" min="2020" max="2030" value="2025" />
                        </div>
                        <div class="col-md-4 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary me-2">
                                <i class="fas fa-search me-1"></i>
                                Filtrele
                            </button>
                            <button type="button" class="btn btn-secondary" onclick="clearFilters()">
                                <i class="fas fa-times me-1"></i>
                                Temizle
                            </button>
                        </div>
                    </form>

                    <!-- Statistics Cards -->
                    <div class="row mb-4">
                        <div class="col-lg-3 col-md-6">
                            <div class="card bg-primary text-white">
                                <div class="card-body d-flex align-items-center">
                                    <div class="flex-grow-1">
                                        <h4 class="mb-0">@(statistics.ContainsKey("TotalRequests") ? statistics["TotalRequests"] : 0)</h4>
                                        <p class="mb-0">Toplam İzin</p>
                                    </div>
                                    <div class="fs-2">
                                        <i class="fas fa-calendar-check"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <div class="card bg-warning text-dark">
                                <div class="card-body d-flex align-items-center">
                                    <div class="flex-grow-1">
                                        <h4 class="mb-0">@(statistics.ContainsKey("PendingApproval") ? statistics["PendingApproval"] : 0)</h4>
                                        <p class="mb-0">Onay Bekleyen</p>
                                    </div>
                                    <div class="fs-2">
                                        <i class="fas fa-clock"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <div class="card bg-success text-white">
                                <div class="card-body d-flex align-items-center">
                                    <div class="flex-grow-1">
                                        <h4 class="mb-0">@(statistics.ContainsKey("Approved") ? statistics["Approved"] : 0)</h4>
                                        <p class="mb-0">Onaylanan</p>
                                    </div>
                                    <div class="fs-2">
                                        <i class="fas fa-check"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <div class="card bg-info text-white">
                                <div class="card-body d-flex align-items-center">
                                    <div class="flex-grow-1">
                                        <h4 class="mb-0">@(statistics.ContainsKey("InProgress") ? statistics["InProgress"] : 0)</h4>
                                        <p class="mb-0">Devam Eden</p>
                                    </div>
                                    <div class="fs-2">
                                        <i class="fas fa-play"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (!Model.Any())
                    {
                        <div class="text-center py-5">
                            <div class="mb-3">
                                <i class="fas fa-calendar-times fa-3x text-muted"></i>
                            </div>
                            <h5 class="text-muted">İzin kaydı bulunamadı</h5>
                            <p class="text-muted">Filtreleri değiştirerek tekrar deneyebilir veya yeni bir izin ekleyin.</p>
                        </div>
                    }
                    else
                    {
                        <!-- Data Table -->
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Personel</th>
                                        <th>Departman</th>
                                        <th>İzin Türü</th>
                                        <th>Tarih Aralığı</th>
                                        <th>Gün</th>
                                        <th>Durum</th>
                                        <th>Talep Tarihi</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar bg-primary text-white rounded-circle me-2 d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">
                                                        @item.PersonName.FirstOrDefault()
                                                    </div>
                                                    <div>
                                                        <strong>@item.PersonName</strong>
                                                        @if (!string.IsNullOrEmpty(item.EmployeeNumber))
                                                        {
                                                            <br><small class="text-muted">@item.EmployeeNumber</small>
                                                        }
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary">@item.DepartmentName</span>
                                            </td>
                                            <td>
                                                <span class="badge" style="background-color: @item.LeaveTypeColor; color: white;">
                                                    @item.LeaveTypeName
                                                </span>
                                            </td>
                                            <td>
                                                <small>
                                                    <strong>Başlangıç:</strong> @item.StartDate.ToString("dd.MM.yyyy")<br>
                                                    <strong>Bitiş:</strong> @item.EndDate.ToString("dd.MM.yyyy")
                                                </small>
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@item.TotalDays gün</span>
                                            </td>
                                            <td>
                                                @switch (item.Status)
                                                {
                                                    case DAL.Entities.LeaveStatus.Pending:
                                                        <span class="badge bg-warning text-dark">@item.StatusText</span>
                                                        break;
                                                    case DAL.Entities.LeaveStatus.Approved:
                                                        <span class="badge bg-success">@item.StatusText</span>
                                                        break;
                                                    case DAL.Entities.LeaveStatus.Rejected:
                                                        <span class="badge bg-danger">@item.StatusText</span>
                                                        break;
                                                    case DAL.Entities.LeaveStatus.Cancelled:
                                                        <span class="badge bg-secondary">@item.StatusText</span>
                                                        break;
                                                    case DAL.Entities.LeaveStatus.InProgress:
                                                        <span class="badge bg-info">@item.StatusText</span>
                                                        break;
                                                    case DAL.Entities.LeaveStatus.Completed:
                                                        <span class="badge bg-primary">@item.StatusText</span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-light text-dark">@item.StatusText</span>
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                <small>@item.RequestDate.ToString("dd.MM.yyyy HH:mm")</small>
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary" title="Detaylar">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    @if (item.Status == DAL.Entities.LeaveStatus.Pending)
                                                    {
                                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning" title="Düzenle">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                        <a asp-action="Approve" asp-route-id="@item.Id" class="btn btn-outline-success" title="Onayla">
                                                            <i class="fas fa-check"></i>
                                                        </a>
                                                    }
                                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger" title="Sil">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function clearFilters() {
            window.location.href = '@Url.Action("Upcoming", "Leave")';
        }
    </script>
}

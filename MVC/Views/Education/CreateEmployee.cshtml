@model EducationCreateViewModel

@{
    ViewBag.Title = "Yeni Eğitim Bilgisi Ekle";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-graduation-cap me-2"></i>@ViewBag.Title
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-1"></i>
                        Bu sayfada <strong>kendi eğitim bilginizi</strong> ekleyebilirsiniz.
                    </div>

                    <form asp-action="Create" method="post">
                        <!-- Hidden PersonId for Employee -->
                        <input type="hidden" asp-for="PersonId" />
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">
                                        <i class="fas fa-user me-1"></i>Personel
                                    </label>
                                    <select class="form-select" disabled>
                                        @foreach (var item in ViewBag.PersonSelectList as List<SelectListItem> ?? new List<SelectListItem>())
                                        {
                                            if (item.Selected)
                                            {
                                                <option selected>@item.Text</option>
                                            }
                                        }
                                    </select>
                                    <small class="form-text text-muted">Kendi adınıza eğitim kaydı ekliyorsunuz.</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="SchoolName" class="form-label">
                                        <i class="fas fa-university me-1"></i>@Html.DisplayNameFor(m => m.SchoolName)
                                    </label>
                                    <input asp-for="SchoolName" class="form-control" placeholder="Örn: İstanbul Üniversitesi" />
                                    <span asp-validation-for="SchoolName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Degree" class="form-label">
                                        <i class="fas fa-medal me-1"></i>@Html.DisplayNameFor(m => m.Degree)
                                    </label>
                                    <select asp-for="Degree" class="form-select">
                                        <option value="">Derece Seçiniz...</option>
                                        <option value="Lise">Lise</option>
                                        <option value="Ön Lisans">Ön Lisans</option>
                                        <option value="Lisans">Lisans</option>
                                        <option value="Yüksek Lisans">Yüksek Lisans</option>
                                        <option value="Doktora">Doktora</option>
                                        <option value="Sertifika">Sertifika</option>
                                        <option value="Kurs">Kurs</option>
                                    </select>
                                    <span asp-validation-for="Degree" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="FieldOfStudy" class="form-label">
                                        <i class="fas fa-book me-1"></i>@Html.DisplayNameFor(m => m.FieldOfStudy)
                                    </label>
                                    <input asp-for="FieldOfStudy" class="form-control" placeholder="Örn: Bilgisayar Mühendisliği" />
                                    <span asp-validation-for="FieldOfStudy" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="StartDate" class="form-label">
                                        <i class="fas fa-calendar-alt me-1"></i>@Html.DisplayNameFor(m => m.StartDate)
                                    </label>
                                    <input asp-for="StartDate" type="date" class="form-control" />
                                    <span asp-validation-for="StartDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="EndDate" class="form-label">
                                        <i class="fas fa-calendar-check me-1"></i>@Html.DisplayNameFor(m => m.EndDate)
                                    </label>
                                    <input asp-for="EndDate" type="date" class="form-control" />
                                    <span asp-validation-for="EndDate" class="text-danger"></span>
                                    <small class="form-text text-muted">Devam ediyorsa boş bırakabilirsiniz.</small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="GPA" class="form-label">
                                        <i class="fas fa-star me-1"></i>@Html.DisplayNameFor(m => m.GPA)
                                    </label>
                                    <input asp-for="GPA" type="number" step="0.01" min="0" max="4" class="form-control" placeholder="Örn: 3.25" />
                                    <span asp-validation-for="GPA" class="text-danger"></span>
                                    <small class="form-text text-muted">4.00 üzerinden not ortalamanız (opsiyonel)</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Location" class="form-label">
                                        <i class="fas fa-map-marker-alt me-1"></i>@Html.DisplayNameFor(m => m.Location)
                                    </label>
                                    <input asp-for="Location" class="form-control" placeholder="Örn: İstanbul, Türkiye" />
                                    <span asp-validation-for="Location" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <div class="mb-3">
                                    <div class="form-check">
                                        <input asp-for="IsOngoing" class="form-check-input" type="checkbox" />
                                        <label asp-for="IsOngoing" class="form-check-label">
                                            <i class="fas fa-clock me-1"></i>@Html.DisplayNameFor(m => m.IsOngoing)
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <div class="mb-3">
                                    <label asp-for="Description" class="form-label">
                                        <i class="fas fa-comment me-1"></i>@Html.DisplayNameFor(m => m.Description)
                                    </label>
                                    <textarea asp-for="Description" class="form-control" rows="3" 
                                              placeholder="Eğitim hakkında ek bilgiler, aldığınız dersler, projeler vb."></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <div class="d-flex justify-content-between">
                                    <a asp-action="Index" class="btn btn-secondary">
                                        <i class="fas fa-arrow-left me-1"></i>Geri Dön
                                    </a>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-save me-1"></i>Eğitim Bilgisini Kaydet
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // Devam ediyor checkbox'ı değiştiğinde bitiş tarihini disable/enable et
            $('#IsOngoing').change(function() {
                if ($(this).is(':checked')) {
                    $('#EndDate').prop('disabled', true).val('');
                } else {
                    $('#EndDate').prop('disabled', false);
                }
            });
            
            // Sayfa yüklendiğinde kontrol et
            if ($('#IsOngoing').is(':checked')) {
                $('#EndDate').prop('disabled', true);
            }
        });
    </script>
}

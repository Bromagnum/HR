@model IEnumerable<EducationListViewModel>

@{
    ViewBag.Title = "Eğitimlerim";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="card-title">
                            <i class="fas fa-graduation-cap me-2"></i>Eğitimlerim
                        </h3>
                        <div class="btn-group">
                            <a href="@Url.Action("Create")" class="btn btn-primary">
                                <i class="fas fa-plus me-1"></i>Yeni Eğitim Ekle
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-1"></i>
                        Bu sayfada sadece <strong>kendi eğitim bilgilerinizi</strong> görüntüleyebilir ve yönetebilirsiniz.
                    </div>

                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table id="educationTable" class="table table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Okul Adı</th>
                                        <th>Derece</th>
                                        <th>Bölüm</th>
                                        <th>Başlangıç</th>
                                        <th>Bitiş</th>
                                        <th>Durum</th>
                                        <th>GPA</th>
                                        <th>Lokasyon</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var education in Model)
                                    {
                                        <tr class="@(education.IsActive ? "" : "table-secondary")">
                                            <td>
                                                <strong>@education.SchoolName</strong>
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@education.Degree</span>
                                            </td>
                                            <td>@education.FieldOfStudy</td>
                                            <td>@education.StartDate.ToString("MM/yyyy")</td>
                                            <td>
                                                @if (education.IsOngoing)
                                                {
                                                    <span class="badge bg-warning text-dark">
                                                        <i class="fas fa-clock me-1"></i>Devam Ediyor
                                                    </span>
                                                }
                                                else if (education.EndDate.HasValue)
                                                {
                                                    @education.EndDate.Value.ToString("MM/yyyy")
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (education.IsActive)
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="fas fa-check me-1"></i>Aktif
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">
                                                        <i class="fas fa-times me-1"></i>Pasif
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                @if (education.GPA.HasValue)
                                                {
                                                    <span class="badge @(education.GPA >= 3.0m ? "bg-success" : education.GPA >= 2.5m ? "bg-warning" : "bg-danger")">
                                                        @education.GPA.Value.ToString("F2")
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(education.Location))
                                                {
                                                    <i class="fas fa-map-marker-alt me-1"></i>@education.Location
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@education.Id" class="btn btn-info btn-sm" title="Detay">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-graduation-cap fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Henüz eğitim bilginiz bulunmuyor</h5>
                            <p class="text-muted">İlk eğitim bilginizi eklemek için aşağıdaki butona tıklayın.</p>
                            <a href="@Url.Action("Create")" class="btn btn-primary">
                                <i class="fas fa-plus me-1"></i>İlk Eğitim Bilgimi Ekle
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#educationTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.13.7/i18n/tr.json"
                },
                "pageLength": 10,
                "order": [[ 3, "desc" ]], // Başlangıç tarihine göre sırala
                "columnDefs": [
                    { "orderable": false, "targets": [8] } // İşlemler sütunu sıralanmasın
                ]
            });
        });
    </script>
}

@model EducationDetailViewModel

@{
    ViewBag.Title = "Eğitim Detayları";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="card-title">
                            <i class="fas fa-graduation-cap me-2"></i>@ViewBag.Title
                        </h3>
                        <div class="btn-group">
                            <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning">
                                <i class="fas fa-edit me-1"></i>Düzenle
                            </a>
                            <a href="@Url.Action("Index")" class="btn btn-secondary">
                                <i class="fas fa-list me-1"></i>Listeye Dön
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Sol Sütun -->
                        <div class="col-md-6">
                            <h5 class="border-bottom pb-2 mb-3">
                                <i class="fas fa-university me-2"></i>Eğitim Bilgileri
                            </h5>
                            
                            <div class="mb-3">
                                <label class="form-label fw-bold">@Html.DisplayNameFor(m => m.SchoolName)</label>
                                <div class="border rounded p-2 bg-light">
                                    <i class="fas fa-university me-2"></i>@Model.SchoolName
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-6">
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">@Html.DisplayNameFor(m => m.Degree)</label>
                                        <div class="border rounded p-2 bg-light">
                                            <span class="badge bg-info fs-6">@Model.Degree</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">@Html.DisplayNameFor(m => m.FieldOfStudy)</label>
                                        <div class="border rounded p-2 bg-light">
                                            @if (!string.IsNullOrEmpty(Model.FieldOfStudy))
                                            {
                                                <i class="fas fa-book me-2"></i>@Model.FieldOfStudy
                                            }
                                            else
                                            {
                                                <span class="text-muted">Belirtilmemiş</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-6">
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">@Html.DisplayNameFor(m => m.StartDate)</label>
                                        <div class="border rounded p-2 bg-light">
                                            <i class="fas fa-calendar-plus me-2"></i>@Model.StartDate.ToString("dd.MM.yyyy")
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">@Html.DisplayNameFor(m => m.EndDate)</label>
                                        <div class="border rounded p-2 bg-light">
                                            @if (Model.IsOngoing)
                                            {
                                                <span class="badge bg-warning text-dark">
                                                    <i class="fas fa-clock me-1"></i>Devam Ediyor
                                                </span>
                                            }
                                            else if (Model.EndDate.HasValue)
                                            {
                                                <i class="fas fa-calendar-check me-2"></i>@Model.EndDate.Value.ToString("dd.MM.yyyy")
                                            }
                                            else
                                            {
                                                <span class="text-muted">Belirtilmemiş</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-6">
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">@Html.DisplayNameFor(m => m.GPA)</label>
                                        <div class="border rounded p-2 bg-light">
                                            @if (Model.GPA.HasValue)
                                            {
                                                <span class="badge @(Model.GPA >= 3.0m ? "bg-success" : Model.GPA >= 2.5m ? "bg-warning" : "bg-danger") fs-6">
                                                    <i class="fas fa-chart-line me-1"></i>@Model.GPA.Value.ToString("F2")
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Belirtilmemiş</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">@Html.DisplayNameFor(m => m.Location)</label>
                                        <div class="border rounded p-2 bg-light">
                                            @if (!string.IsNullOrEmpty(Model.Location))
                                            {
                                                <i class="fas fa-map-marker-alt me-2"></i>@Model.Location
                                            }
                                            else
                                            {
                                                <span class="text-muted">Belirtilmemiş</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>

                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                <div class="mb-3">
                                    <label class="form-label fw-bold">@Html.DisplayNameFor(m => m.Description)</label>
                                    <div class="border rounded p-2 bg-light">
                                        <i class="fas fa-file-alt me-2"></i>@Model.Description
                                    </div>
                                </div>
                            }
                        </div>

                        <!-- Sağ Sütun -->
                        <div class="col-md-6">
                            <h5 class="border-bottom pb-2 mb-3">
                                <i class="fas fa-user me-2"></i>Personel Bilgileri
                            </h5>
                            
                            <div class="mb-3">
                                <label class="form-label fw-bold">@Html.DisplayNameFor(m => m.PersonName)</label>
                                <div class="border rounded p-2 bg-light">
                                    <i class="fas fa-user me-2"></i>@Model.PersonName
                                    @if (!string.IsNullOrEmpty(Model.PersonEmployeeNumber))
                                    {
                                        <small class="text-muted">(@Model.PersonEmployeeNumber)</small>
                                    }
                                </div>
                            </div>

                            @if (!string.IsNullOrEmpty(Model.PersonEmail))
                            {
                                <div class="mb-3">
                                    <label class="form-label fw-bold">@Html.DisplayNameFor(m => m.PersonEmail)</label>
                                    <div class="border rounded p-2 bg-light">
                                        <i class="fas fa-envelope me-2"></i>
                                        <a href="mailto:@Model.PersonEmail">@Model.PersonEmail</a>
                                    </div>
                                </div>
                            }

                            @if (!string.IsNullOrEmpty(Model.PersonPhone))
                            {
                                <div class="mb-3">
                                    <label class="form-label fw-bold">@Html.DisplayNameFor(m => m.PersonPhone)</label>
                                    <div class="border rounded p-2 bg-light">
                                        <i class="fas fa-phone me-2"></i>@Model.PersonPhone
                                    </div>
                                </div>
                            }

                            @if (!string.IsNullOrEmpty(Model.PersonDepartmentName))
                            {
                                <div class="mb-3">
                                    <label class="form-label fw-bold">@Html.DisplayNameFor(m => m.PersonDepartmentName)</label>
                                    <div class="border rounded p-2 bg-light">
                                        <i class="fas fa-building me-2"></i>@Model.PersonDepartmentName
                                    </div>
                                </div>
                            }

                            <hr class="my-4">
                            
                            <h5 class="border-bottom pb-2 mb-3">
                                <i class="fas fa-info-circle me-2"></i>Sistem Bilgileri
                            </h5>

                            <div class="mb-3">
                                <label class="form-label fw-bold">@Html.DisplayNameFor(m => m.IsActive)</label>
                                <div class="border rounded p-2 bg-light">
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-check me-1"></i>Aktif
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="fas fa-times me-1"></i>Pasif
                                        </span>
                                    }
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold">@Html.DisplayNameFor(m => m.CreatedAt)</label>
                                <div class="border rounded p-2 bg-light">
                                    <i class="fas fa-clock me-2"></i>@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                                </div>
                            </div>

                            @if (Model.UpdatedAt.HasValue)
                            {
                                <div class="mb-3">
                                    <label class="form-label fw-bold">@Html.DisplayNameFor(m => m.UpdatedAt)</label>
                                    <div class="border rounded p-2 bg-light">
                                        <i class="fas fa-edit me-2"></i>@Model.UpdatedAt.Value.ToString("dd.MM.yyyy HH:mm")
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="mt-4 d-flex justify-content-end gap-2">
                        <a href="@Url.Action("ByPerson", new { personId = Model.PersonId })" class="btn btn-info">
                            <i class="fas fa-graduation-cap me-1"></i>Bu Personelin Diğer Eğitimleri
                        </a>
                        <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning">
                            <i class="fas fa-edit me-1"></i>Düzenle
                        </a>
                        <a href="@Url.Action("Delete", new { id = Model.Id })" class="btn btn-danger">
                            <i class="fas fa-trash me-1"></i>Sil
                        </a>
                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            <i class="fas fa-list me-1"></i>Listeye Dön
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


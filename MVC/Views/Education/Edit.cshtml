@model EducationEditViewModel

@{
    ViewBag.Title = "Eğitim Bilgisi Düzenle";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-edit me-2"></i>@ViewBag.Title
                    </h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="PersonId" class="form-label">
                                        <i class="fas fa-user me-1"></i>@Html.DisplayNameFor(m => m.PersonId)
                                    </label>
                                    <select asp-for="PersonId" class="form-select" asp-items="ViewBag.PersonSelectList">
                                        <option value="">Personel Seçiniz...</option>
                                    </select>
                                    <span asp-validation-for="PersonId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="SchoolName" class="form-label">
                                        <i class="fas fa-university me-1"></i>@Html.DisplayNameFor(m => m.SchoolName)
                                    </label>
                                    <input asp-for="SchoolName" class="form-control" placeholder="Örn: İstanbul Üniversitesi" />
                                    <span asp-validation-for="SchoolName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Degree" class="form-label">
                                        <i class="fas fa-medal me-1"></i>@Html.DisplayNameFor(m => m.Degree)
                                    </label>
                                    <select asp-for="Degree" class="form-select">
                                        <option value="">Derece Seçiniz...</option>
                                        <option value="Lise">Lise</option>
                                        <option value="Ön Lisans">Ön Lisans</option>
                                        <option value="Lisans">Lisans</option>
                                        <option value="Yüksek Lisans">Yüksek Lisans</option>
                                        <option value="Doktora">Doktora</option>
                                        <option value="Sertifika">Sertifika</option>
                                        <option value="Diğer">Diğer</option>
                                    </select>
                                    <span asp-validation-for="Degree" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="FieldOfStudy" class="form-label">
                                        <i class="fas fa-book me-1"></i>@Html.DisplayNameFor(m => m.FieldOfStudy)
                                    </label>
                                    <input asp-for="FieldOfStudy" class="form-control" placeholder="Örn: Bilgisayar Mühendisliği" />
                                    <span asp-validation-for="FieldOfStudy" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="StartDate" class="form-label">
                                        <i class="fas fa-calendar-plus me-1"></i>@Html.DisplayNameFor(m => m.StartDate)
                                    </label>
                                    <input asp-for="StartDate" class="form-control" type="date" />
                                    <span asp-validation-for="StartDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="EndDate" class="form-label">
                                        <i class="fas fa-calendar-check me-1"></i>@Html.DisplayNameFor(m => m.EndDate)
                                    </label>
                                    <input asp-for="EndDate" class="form-control" type="date" />
                                    <span asp-validation-for="EndDate" class="text-danger"></span>
                                    <div class="form-text">Devam ediyorsa boş bırakabilirsiniz</div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label">Durum</label>
                                    <div class="form-check">
                                        <input asp-for="IsOngoing" class="form-check-input" type="checkbox" id="isOngoingCheck" />
                                        <label class="form-check-label" for="isOngoingCheck">
                                            <i class="fas fa-clock me-1"></i>Devam Ediyor
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="GPA" class="form-label">
                                        <i class="fas fa-chart-line me-1"></i>@Html.DisplayNameFor(m => m.GPA)
                                    </label>
                                    <input asp-for="GPA" class="form-control" type="number" step="0.01" min="0" max="4" placeholder="Örn: 3.45" />
                                    <span asp-validation-for="GPA" class="text-danger"></span>
                                    <div class="form-text">4.00 üzerinden (isteğe bağlı)</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Location" class="form-label">
                                        <i class="fas fa-map-marker-alt me-1"></i>@Html.DisplayNameFor(m => m.Location)
                                    </label>
                                    <input asp-for="Location" class="form-control" placeholder="Örn: İstanbul" />
                                    <span asp-validation-for="Location" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">
                                <i class="fas fa-file-alt me-1"></i>@Html.DisplayNameFor(m => m.Description)
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="3" 
                                      placeholder="Eğitim ile ilgili ek bilgiler (isteğe bağlı)"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a href="@Url.Action("Details", new { id = Model.Id })" class="btn btn-info">
                                <i class="fas fa-eye me-1"></i>Detaylar
                            </a>
                            <a href="@Url.Action("Index")" class="btn btn-secondary">
                                <i class="fas fa-times me-1"></i>İptal
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save me-1"></i>Güncelle
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Devam ediyor checkbox'ı değiştiğinde bitiş tarihini yönet
            $('#isOngoingCheck').change(function() {
                var endDateInput = $('input[name="EndDate"]');
                if ($(this).is(':checked')) {
                    endDateInput.val('').prop('disabled', true);
                } else {
                    endDateInput.prop('disabled', false);
                }
            });

            // Sayfa yüklendiğinde durumu kontrol et
            if ($('#isOngoingCheck').is(':checked')) {
                $('input[name="EndDate"]').prop('disabled', true);
            }
        });
    </script>
}


@{
    ViewData["Title"] = "IKYS - Hoş Geldiniz";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Header -->
            <div class="text-center mb-5">
                <h1 class="display-4 text-primary">
                    <i class="fas fa-users"></i> İnsan Kaynakları Yönetim Sistemi
                </h1>
                <p class="lead text-muted">İKYS'ye hoş geldiniz. Modern ve kullanıcı dostu arayüzü ile personel yönetimi.</p>
            </div>

            <!-- Status Cards -->
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="card text-white bg-success h-100">
                        <div class="card-body text-center">
                            <i class="fas fa-check-circle fa-3x mb-3"></i>
                            <h5>Sistem Aktif</h5>
                            <p>Uygulama başarıyla çalışıyor</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-white bg-info h-100">
                        <div class="card-body text-center">
                            <i class="fas fa-database fa-3x mb-3"></i>
                            <h5>Veritabanı</h5>
                            <p>Bağlantı başarılı</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-white bg-warning h-100">
                        <div class="card-body text-center">
                            <i class="fas fa-shield-alt fa-3x mb-3"></i>
                            <h5>Güvenlik</h5>
                            <p>Authentication aktif</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-white bg-primary h-100">
                        <div class="card-body text-center">
                            <i class="fas fa-cogs fa-3x mb-3"></i>
                            <h5>API</h5>
                            <p>Servisler hazır</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Login Section -->
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card shadow">
                        <div class="card-header bg-primary text-white">
                            <h5><i class="fas fa-sign-in-alt"></i> Sisteme Giriş</h5>
                        </div>
                        <div class="card-body">
                            <p>IKYS sistemini kullanmak için giriş yapmanız gerekmektedir.</p>
                            
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="card border-primary">
                                        <div class="card-header bg-light">
                                            <h6><i class="fas fa-user-shield text-primary"></i> Admin</h6>
                                        </div>
                                        <div class="card-body">
                                            <p><strong>Email:</strong> admin@ikys.com</p>
                                            <p><strong>Şifre:</strong> Admin123!</p>
                                            <small class="text-muted">Tam yetkili yönetici</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="card border-success">
                                        <div class="card-header bg-light">
                                            <h6><i class="fas fa-user-tie text-success"></i> Manager</h6>
                                        </div>
                                        <div class="card-body">
                                            <p><strong>Email:</strong> manager@ikys.com</p>
                                            <p><strong>Şifre:</strong> Manager123!</p>
                                            <small class="text-muted">Departman yöneticisi</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="card border-warning">
                                        <div class="card-header bg-light">
                                            <h6><i class="fas fa-user text-warning"></i> Employee</h6>
                                        </div>
                                        <div class="card-body">
                                            <p><strong>Email:</strong> employee@ikys.com</p>
                                            <p><strong>Şifre:</strong> Employee123!</p>
                                            <small class="text-muted">Çalışan hesabı</small>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="text-center mt-4">
                                <a asp-controller="Auth" asp-action="Login" class="btn btn-primary btn-lg">
                                    <i class="fas fa-sign-in-alt"></i> Giriş Yap
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Features -->
            <div class="row mt-5">
                <div class="col-12">
                    <h3 class="text-center mb-4">Sistem Özellikleri</h3>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <i class="fas fa-users fa-3x text-primary mb-3"></i>
                            <h5>Personel Yönetimi</h5>
                            <p>Personel kayıtları, kimlik bilgileri ve özlük işlemleri</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <i class="fas fa-calendar-check fa-3x text-success mb-3"></i>
                            <h5>İzin Yönetimi</h5>
                            <p>İzin talepleri, onaylar ve izin takibi</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <i class="fas fa-chart-bar fa-3x text-info mb-3"></i>
                            <h5>Performans İnceleme</h5>
                            <p>Çalışan performans değerlendirmeleri</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Debug Info -->
            <div class="row mt-4">
                <div class="col-12">
                    <div class="card border-secondary">
                        <div class="card-header bg-secondary text-white">
                            <h6><i class="fas fa-info-circle"></i> Sistem Bilgileri</h6>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <p><strong>Sunucu:</strong> @ViewContext.HttpContext.Request.Host</p>
                                    <p><strong>Protokol:</strong> @ViewContext.HttpContext.Request.Scheme</p>
                                    <p><strong>Zaman:</strong> @DateTime.Now.ToString("dd.MM.yyyy HH:mm:ss")</p>
                                </div>
                                <div class="col-md-6">
                                    <p><strong>Kullanıcı Durumu:</strong> 
                                        @if (User.Identity?.IsAuthenticated == true)
                                        {
                                            <span class="badge bg-success">Giriş Yapılmış (@User.Identity.Name)</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Giriş Yapılmamış</span>
                                        }
                                    </p>
                                    <p><strong>Environment:</strong> @(ViewContext.HttpContext.RequestServices.GetService(typeof(IWebHostEnvironment)) as IWebHostEnvironment)?.EnvironmentName</p>
                                    <p><strong>Versiyon:</strong> .NET 8.0</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.2s ease-in-out;
    }
    .card:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
</style>

@model MVC.Models.CreateUserViewModel
@{
    ViewData["Title"] = "Yeni Kullanıcı Oluştur";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="fas fa-user-plus me-2"></i>Yeni Kullanıcı Oluştur
                        </h4>
                        <a asp-action="Index" class="btn btn-light btn-sm">
                            <i class="fas fa-arrow-left me-1"></i>Geri Dön
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="CreateUser" method="post">
                        @Html.AntiForgeryToken()
                        
                        <div class="row">
                            <!-- Personal Information -->
                            <div class="col-md-6">
                                <div class="card border-0 bg-light mb-4">
                                    <div class="card-header bg-transparent border-0">
                                        <h6 class="mb-0 text-primary">
                                            <i class="fas fa-user me-1"></i>Kişisel Bilgiler
                                        </h6>
                                    </div>
                                    <div class="card-body">
                                        <div class="mb-3">
                                            <label asp-for="FirstName" class="form-label">Ad</label>
                                            <input asp-for="FirstName" class="form-control" placeholder="Ad giriniz" />
                                            <span asp-validation-for="FirstName" class="text-danger small"></span>
                                        </div>
                                        
                                        <div class="mb-3">
                                            <label asp-for="LastName" class="form-label">Soyad</label>
                                            <input asp-for="LastName" class="form-control" placeholder="Soyad giriniz" />
                                            <span asp-validation-for="LastName" class="text-danger small"></span>
                                        </div>
                                        
                                        <div class="mb-3">
                                            <label asp-for="Email" class="form-label">Email Adresi</label>
                                            <input asp-for="Email" type="email" class="form-control" placeholder="email@example.com" />
                                            <span asp-validation-for="Email" class="text-danger small"></span>
                                            <div class="form-text">Bu email adresi kullanıcı adı olarak kullanılacaktır.</div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- System Information -->
                            <div class="col-md-6">
                                <div class="card border-0 bg-light mb-4">
                                    <div class="card-header bg-transparent border-0">
                                        <h6 class="mb-0 text-primary">
                                            <i class="fas fa-cog me-1"></i>Sistem Bilgileri
                                        </h6>
                                    </div>
                                    <div class="card-body">
                                        <div class="mb-3">
                                            <label asp-for="Role" class="form-label">Rol</label>
                                            <select asp-for="Role" class="form-select" asp-items="ViewBag.Roles">
                                                <option value="">Rol seçiniz</option>
                                            </select>
                                            <span asp-validation-for="Role" class="text-danger small"></span>
                                            <div class="form-text">
                                                <strong>Admin:</strong> Tüm yetkilere sahip<br>
                                                <strong>Manager:</strong> Departman yöneticisi<br>
                                                <strong>Employee:</strong> Standart çalışan
                                            </div>
                                        </div>
                                        
                                        <div class="mb-3">
                                            <label asp-for="PersonId" class="form-label">Personel</label>
                                            <select asp-for="PersonId" class="form-select" asp-items="ViewBag.Persons">
                                                <option value="">Personel seçiniz (opsiyonel)</option>
                                            </select>
                                            <span asp-validation-for="PersonId" class="text-danger small"></span>
                                            <div class="form-text">Mevcut personel kaydı ile ilişkilendirebilirsiniz.</div>
                                        </div>
                                        
                                        <div class="mb-3">
                                            <label asp-for="DepartmentId" class="form-label">Departman</label>
                                            <select asp-for="DepartmentId" class="form-select" asp-items="ViewBag.Departments">
                                                <option value="">Departman seçiniz (opsiyonel)</option>
                                            </select>
                                            <span asp-validation-for="DepartmentId" class="text-danger small"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Password Section -->
                        <div class="row">
                            <div class="col-12">
                                <div class="card border-0 bg-warning bg-opacity-10 mb-4">
                                    <div class="card-header bg-transparent border-0">
                                        <h6 class="mb-0 text-warning">
                                            <i class="fas fa-lock me-1"></i>Şifre Bilgileri
                                        </h6>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label asp-for="Password" class="form-label">Şifre</label>
                                                    <div class="input-group">
                                                        <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Şifre giriniz" />
                                                        <button class="btn btn-outline-secondary" type="button" onclick="togglePassword('password')">
                                                            <i class="fas fa-eye" id="password-eye"></i>
                                                        </button>
                                                    </div>
                                                    <span asp-validation-for="Password" class="text-danger small"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label asp-for="ConfirmPassword" class="form-label">Şifre Tekrarı</label>
                                                    <div class="input-group">
                                                        <input asp-for="ConfirmPassword" type="password" class="form-control" id="confirmPassword" placeholder="Şifreyi tekrar giriniz" />
                                                        <button class="btn btn-outline-secondary" type="button" onclick="togglePassword('confirmPassword')">
                                                            <i class="fas fa-eye" id="confirmPassword-eye"></i>
                                                        </button>
                                                    </div>
                                                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <div class="alert alert-info small">
                                            <i class="fas fa-info-circle me-2"></i>
                                            <strong>Şifre Gereksinimleri:</strong>
                                            <ul class="mb-0 mt-2">
                                                <li>En az 6 karakter olmalıdır</li>
                                                <li>En az bir rakam içermelidir</li>
                                                <li>En az bir küçük harf içermelidir</li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Notes Section -->
                        <div class="row">
                            <div class="col-12">
                                <div class="mb-3">
                                    <label asp-for="Notes" class="form-label">Notlar (Opsiyonel)</label>
                                    <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Kullanıcı hakkında notlar..."></textarea>
                                    <span asp-validation-for="Notes" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times me-1"></i>İptal
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-user-plus me-1"></i>Kullanıcı Oluştur
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Password visibility toggle
        function togglePassword(fieldId) {
            const field = document.getElementById(fieldId);
            const eye = document.getElementById(fieldId + '-eye');
            
            if (field.type === 'password') {
                field.type = 'text';
                eye.classList.remove('fa-eye');
                eye.classList.add('fa-eye-slash');
            } else {
                field.type = 'password';
                eye.classList.remove('fa-eye-slash');
                eye.classList.add('fa-eye');
            }
        }

        // Password strength validation
        document.getElementById('password').addEventListener('input', function(e) {
            const password = e.target.value;
            const requirements = {
                length: password.length >= 6,
                number: /\d/.test(password),
                lowercase: /[a-z]/.test(password)
            };
            
            // Visual feedback could be added here
            console.log('Password requirements:', requirements);
        });

        // Form validation
        document.querySelector('form').addEventListener('submit', function(e) {
            const password = document.getElementById('password').value;
            const confirmPassword = document.getElementById('confirmPassword').value;
            
            if (password !== confirmPassword) {
                e.preventDefault();
                alert('Şifre ve şifre tekrarı uyuşmuyor!');
                return false;
            }
        });
    </script>
}

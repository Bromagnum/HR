@model QualificationDetailViewModel
@{
    ViewData["Title"] = "Yeterlilik Sil";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-trash me-2"></i>Yeterlilik Sil
                    </h3>
                </div>
                
                <div class="card-body">
                    <div class="alert alert-danger" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Dikkat!</strong> Bu işlem geri alınamaz. Yeterlilik kaydını silmek istediğinizden emin misiniz?
                    </div>

                    <div class="row">
                        <!-- Left Column - Basic Info -->
                        <div class="col-md-6">
                            <h5 class="border-bottom pb-2 mb-3">Silinecek Yeterlilik Bilgileri</h5>
                            
                            <div class="mb-3">
                                <strong>Yeterlilik Adı:</strong>
                                <p class="ms-3">@Model.Name</p>
                            </div>

                            <div class="mb-3">
                                <strong>Kategori:</strong>
                                <p class="ms-3">
                                    <span class="badge bg-primary fs-6">@Model.Category</span>
                                </p>
                            </div>

                            <div class="mb-3">
                                <strong>Veren Kurum:</strong>
                                <p class="ms-3">@Model.IssuingAuthority</p>
                            </div>

                            @if (!string.IsNullOrEmpty(Model.CredentialNumber))
                            {
                                <div class="mb-3">
                                    <strong>Sertifika/Kimlik Numarası:</strong>
                                    <p class="ms-3">
                                        <code>@Model.CredentialNumber</code>
                                    </p>
                                </div>
                            }

                            <div class="mb-3">
                                <strong>Personel:</strong>
                                <p class="ms-3">
                                    @Model.PersonName
                                    @if (!string.IsNullOrEmpty(Model.DepartmentName))
                                    {
                                        <br />
                                        <small class="text-muted">@Model.DepartmentName</small>
                                    }
                                </p>
                            </div>
                        </div>

                        <!-- Right Column - Dates & Status -->
                        <div class="col-md-6">
                            <h5 class="border-bottom pb-2 mb-3">Tarih ve Durum Bilgileri</h5>

                            <div class="mb-3">
                                <strong>Veriliş Tarihi:</strong>
                                <p class="ms-3">@Model.IssueDate.ToString("dd MMMM yyyy")</p>
                            </div>

                            <div class="mb-3">
                                <strong>Süre Durumu:</strong>
                                <p class="ms-3">
                                    @if (!Model.HasExpiration)
                                    {
                                        <span class="badge bg-info fs-6">Süresiz</span>
                                    }
                                    else if (Model.IsExpired)
                                    {
                                        <span class="badge bg-danger fs-6">
                                            <i class="fas fa-times me-1"></i>Süresi Dolmuş
                                        </span>
                                        <br />
                                        <small class="text-muted">Son Geçerlilik: @Model.ExpirationDate?.ToString("dd MMMM yyyy")</small>
                                    }
                                    else if (Model.IsExpiringSoon)
                                    {
                                        <span class="badge bg-warning fs-6">
                                            <i class="fas fa-clock me-1"></i>Süresi Yaklaşıyor
                                        </span>
                                        <br />
                                        <small class="text-muted">Son Geçerlilik: @Model.ExpirationDate?.ToString("dd MMMM yyyy")</small>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success fs-6">
                                            <i class="fas fa-check me-1"></i>Geçerli
                                        </span>
                                        @if (Model.ExpirationDate.HasValue)
                                        {
                                            <br />
                                            <small class="text-muted">Son Geçerlilik: @Model.ExpirationDate.Value.ToString("dd MMMM yyyy")</small>
                                        }
                                    }
                                </p>
                            </div>

                            @if (!string.IsNullOrEmpty(Model.Level))
                            {
                                <div class="mb-3">
                                    <strong>Seviye:</strong>
                                    <p class="ms-3">
                                        <span class="badge bg-info fs-6">@Model.Level</span>
                                    </p>
                                </div>
                            }

                            @if (Model.Score.HasValue)
                            {
                                <div class="mb-3">
                                    <strong>Puan:</strong>
                                    <p class="ms-3">
                                        <span class="badge @(Model.Score >= 80 ? "bg-success" : Model.Score >= 60 ? "bg-warning" : "bg-danger") fs-6">
                                            @Model.Score / 100
                                        </span>
                                    </p>
                                </div>
                            }

                            <div class="mb-3">
                                <strong>Kayıt Durumu:</strong>
                                <p class="ms-3">
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success fs-6">
                                            <i class="fas fa-check me-1"></i>Aktif
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary fs-6">
                                            <i class="fas fa-times me-1"></i>Pasif
                                        </span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Description -->
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="row mt-4">
                            <div class="col-12">
                                <h5 class="border-bottom pb-2 mb-3">Açıklama</h5>
                                <div class="bg-light p-3 rounded">
                                    @Model.Description
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Action Buttons -->
                    <div class="row mt-4">
                        <div class="col-12">
                            <div class="d-flex justify-content-between">
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left me-1"></i>İptal Et
                                </a>
                                <div>
                                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info me-2">
                                        <i class="fas fa-eye me-1"></i>Detay Görüntüle
                                    </a>
                                    <form asp-action="Delete" method="post" style="display: inline;">
                                        <button type="submit" class="btn btn-danger" 
                                                onclick="return confirm('Bu yeterlilik kaydını silmek istediğinizden emin misiniz? Bu işlem geri alınamaz!')">
                                            <i class="fas fa-trash me-1"></i>Sil
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

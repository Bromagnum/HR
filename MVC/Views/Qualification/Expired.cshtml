@model List<QualificationListViewModel>

@{
    ViewData["Title"] = "Süresi Dolmuş Yeterlilikler";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-exclamation-triangle text-danger me-2"></i>@ViewData["Title"]
                    </h3>
                    <div class="d-flex gap-2">
                        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                            <i class="fas fa-list me-1"></i>Tüm Yeterlilikler
                        </a>
                        <a href="@Url.Action("ExpiringSoon")" class="btn btn-outline-warning">
                            <i class="fas fa-clock me-1"></i>Süresi Yaklaşanlar
                        </a>
                        <a href="@Url.Action("Create")" class="btn btn-success">
                            <i class="fas fa-plus me-1"></i>Yeni Yeterlilik Ekle
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>@TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (Model.Any())
                    {
                        <div class="alert alert-danger" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>Dikkat!</strong> Aşağıdaki yeterlilikler süresi dolmuştur. Gerekli yenileme işlemlerini başlatın.
                        </div>

                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th><i class="fas fa-certificate me-1"></i>Yeterlilik Adı</th>
                                        <th><i class="fas fa-user me-1"></i>Personel</th>
                                        <th><i class="fas fa-building me-1"></i>Departman</th>
                                        <th><i class="fas fa-tags me-1"></i>Kategori</th>
                                        <th><i class="fas fa-calendar-times me-1"></i>Son Geçerlilik</th>
                                        <th><i class="fas fa-clock me-1"></i>Geçen Süre</th>
                                        <th><i class="fas fa-info-circle me-1"></i>Durum</th>
                                        <th><i class="fas fa-tools me-1"></i>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var qualification in Model)
                                    {
                                        <tr class="table-danger">
                                            <td>
                                                <strong>@qualification.Name</strong>
                                                @if (!string.IsNullOrEmpty(qualification.IssuingAuthority))
                                                {
                                                    <br><small class="text-muted">@qualification.IssuingAuthority</small>
                                                }
                                            </td>
                                            <td>
                                                <a href="@Url.Action("Details", "Person", new { id = qualification.PersonId })" class="text-decoration-none">
                                                    @qualification.PersonName
                                                </a>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(qualification.DepartmentName))
                                                {
                                                    @qualification.DepartmentName
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(qualification.Category))
                                                {
                                                    <span class="badge bg-secondary">@qualification.Category</span>
                                                }
                                            </td>
                                            <td>
                                                @if (qualification.ExpirationDate.HasValue)
                                                {
                                                    <span class="text-danger fw-bold">
                                                        @qualification.ExpirationDate.Value.ToString("dd/MM/yyyy")
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                @if (qualification.ExpirationDate.HasValue)
                                                {
                                                    var daysPassed = (DateTime.Now - qualification.ExpirationDate.Value).Days;
                                                    <span class="badge bg-danger">
                                                        @daysPassed gün geçti
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                @if (qualification.IsActive)
                                                {
                                                    <span class="badge bg-success"><i class="fas fa-check me-1"></i>Aktif</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger"><i class="fas fa-times me-1"></i>Pasif</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="d-flex gap-1">
                                                    <a href="@Url.Action("Details", new { id = qualification.Id })" 
                                                       class="btn btn-sm btn-info"
                                                       style="border: none; width: 32px; height: 32px; z-index: 10; position: relative;"
                                                       data-bs-toggle="tooltip" 
                                                       title="Detayları Görüntüle">
                                                        <i class="fas fa-eye" style="z-index: 11; position: relative;"></i>
                                                    </a>
                                                    <a href="@Url.Action("Edit", new { id = qualification.Id })" 
                                                       class="btn btn-sm btn-warning"
                                                       style="border: none; width: 32px; height: 32px; z-index: 10; position: relative;"
                                                       data-bs-toggle="tooltip" 
                                                       title="Yenile/Düzenle">
                                                        <i class="fas fa-sync-alt" style="z-index: 11; position: relative;"></i>
                                                    </a>
                                                    <form asp-action="ToggleStatus" asp-route-id="@qualification.Id" method="post" style="display: inline;">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" 
                                                                class="btn btn-sm @(qualification.IsActive ? "btn-secondary" : "btn-success")"
                                                                style="border: none; width: 32px; height: 32px; z-index: 10; position: relative;"
                                                                data-bs-toggle="tooltip" 
                                                                title="@(qualification.IsActive ? "Pasif Yap" : "Aktif Yap")"
                                                                onclick="return confirm('@(qualification.IsActive ? "Bu yeterliliği pasif yapmak istediğinizden emin misiniz?" : "Bu yeterliliği aktif yapmak istediğinizden emin misiniz?")')">
                                                            <i class="fas @(qualification.IsActive ? "fa-toggle-off" : "fa-toggle-on")" style="z-index: 11; position: relative;"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                            <h5 class="text-success">Harika! Süresi dolmuş yeterlilik yok</h5>
                            <p class="text-muted">Tüm yeterlilikler güncel durumda.</p>
                            <a href="@Url.Action("Index")" class="btn btn-primary">
                                <i class="fas fa-list me-1"></i>Tüm Yeterlilikleri Görüntüle
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Initialize tooltips
        document.addEventListener('DOMContentLoaded', function() {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });

            // Button hover effects
            document.querySelectorAll('.btn').forEach(function(btn) {
                btn.addEventListener('mouseenter', function() {
                    this.style.transform = 'scale(1.05)';
                    this.style.transition = 'transform 0.2s';
                });
                
                btn.addEventListener('mouseleave', function() {
                    this.style.transform = 'scale(1)';
                });
            });
        });
    </script>
}

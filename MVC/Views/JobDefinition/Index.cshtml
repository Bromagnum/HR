@model IEnumerable<JobDefinitionListViewModel>
@{
    ViewData["Title"] = "İş Tanımları";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var filter = ViewBag.Filter as JobDefinitionFilterViewModel ?? new JobDefinitionFilterViewModel();
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2><i class="fas fa-tasks me-2"></i>İş Tanımları</h2>
                    <p class="text-muted">Pozisyonlar için tanımlanmış iş tanımlarını görüntüleyin ve yönetin</p>
                </div>
                <div>
                    <a asp-action="Create" class="btn btn-success">
                        <i class="fas fa-plus"></i> Yeni İş Tanımı
                    </a>
                    <a asp-action="Summary" class="btn btn-info">
                        <i class="fas fa-chart-bar"></i> Özet Rapor
                    </a>
                </div>
            </div>

            <!-- Filter Section -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-filter me-2"></i>Filtreler
                        <button type="button" class="btn btn-outline-secondary btn-sm float-end" data-bs-toggle="collapse" data-bs-target="#filterCollapse">
                            <i class="fas fa-chevron-down"></i>
                        </button>
                    </h5>
                </div>
                <div class="collapse @((!string.IsNullOrEmpty(filter.Title) || filter.PositionId.HasValue || filter.DepartmentId.HasValue || filter.IsApproved.HasValue) ? "show" : "")" id="filterCollapse">
                    <div class="card-body">
                        <form method="get" asp-action="Index">
                            <div class="row">
                                <div class="col-md-3">
                                    <label class="form-label">Başlık</label>
                                    <input type="text" class="form-control" name="Title" value="@filter.Title" placeholder="İş tanımı başlığı ara..." />
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">Pozisyon</label>
                                    <select class="form-select" name="PositionId">
                                        <option value="">Tüm Pozisyonlar</option>
                                        @foreach (var position in ViewBag.PositionSelectList as SelectList ?? new SelectList(Enumerable.Empty<SelectListItem>()))
                                        {
                                            <option value="@position.Value" selected="@(filter.PositionId?.ToString() == position.Value)">@position.Text</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">Departman</label>
                                    <select class="form-select" name="DepartmentId">
                                        <option value="">Tüm Departmanlar</option>
                                        @foreach (var department in ViewBag.DepartmentSelectList as SelectList ?? new SelectList(Enumerable.Empty<SelectListItem>()))
                                        {
                                            <option value="@department.Value" selected="@(filter.DepartmentId?.ToString() == department.Value)">@department.Text</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">Onay Durumu</label>
                                    <select class="form-select" name="IsApproved">
                                        <option value="">Tümü</option>
                                        <option value="true" selected="@(filter.IsApproved == true)">Onaylanmış</option>
                                        <option value="false" selected="@(filter.IsApproved == false)">Onay Bekleyen</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-12">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-search"></i> Filtrele
                                    </button>
                                    <a asp-action="Index" class="btn btn-outline-secondary">
                                        <i class="fas fa-times"></i> Temizle
                                    </a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Job Definitions Table -->
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-list me-2"></i>İş Tanımları Listesi
                        <span class="badge bg-primary ms-2">@Model.Count() kayıt</span>
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Başlık</th>
                                        <th>Pozisyon</th>
                                        <th>Departman</th>
                                        <th>Versiyon</th>
                                        <th>Durum</th>
                                        <th>Onaylayan</th>
                                        <th>Nitelik Sayısı</th>
                                        <th>Eşleşme Sayısı</th>
                                        <th>Oluşturma Tarihi</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@item.Title</strong>
                                                @if (!string.IsNullOrEmpty(item.Description) && item.Description.Length > 50)
                                                {
                                                    <br><small class="text-muted">@item.Description.Substring(0, 50)...</small>
                                                }
                                            </td>
                                            <td>@item.PositionName</td>
                                            <td>@item.DepartmentName</td>
                                            <td><span class="badge bg-secondary">@item.Version</span></td>
                                            <td>
                                                <span class="badge @(item.IsApproved ? "bg-success" : "bg-warning")">
                                                    @item.StatusText
                                                </span>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.ApprovedByName))
                                                {
                                                    <span>@item.ApprovedByName</span>
                                                    @if (item.ApprovedAt.HasValue)
                                                    {
                                                        <br><small class="text-muted">@item.ApprovedAt.Value.ToString("dd.MM.yyyy")</small>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@item.RequiredQualificationCount</span>
                                            </td>
                                            <td>
                                                @if (item.MatchingResultsCount > 0)
                                                {
                                                    <span class="badge bg-success">@item.MatchingResultsCount</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                <span>@item.CreatedAt.ToString("dd.MM.yyyy")</span>
                                                <br><small class="text-muted">@item.CreatedAt.ToString("HH:mm")</small>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    @if (!item.IsApproved)
                                                    {
                                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                    }
                                                    <button type="button" class="btn btn-outline-success btn-sm" onclick="calculateMatches(@item.Id)">
                                                        <i class="fas fa-calculator"></i>
                                                    </button>
                                                    @if (item.MatchingResultsCount > 0)
                                                    {
                                                        <a asp-action="TopMatches" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm">
                                                            <i class="fas fa-star"></i>
                                                        </a>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Henüz iş tanımı bulunmamaktadır</h5>
                            <p class="text-muted">Yeni bir iş tanımı oluşturmak için yukarıdaki "Yeni İş Tanımı" butonunu kullanın.</p>
                            <a asp-action="Create" class="btn btn-success">
                                <i class="fas fa-plus"></i> İlk İş Tanımını Oluştur
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function calculateMatches(jobDefinitionId) {
            if (confirm('Bu iş tanımı için tüm personel ile eşleşme hesaplama işlemini başlatmak istiyor musunuz?')) {
                window.location.href = '@Url.Action("CalculateMatches")/' + jobDefinitionId;
            }
        }

        // Auto-submit form on filter changes
        $(document).ready(function() {
            $('.form-select').on('change', function() {
                $(this).closest('form').submit();
            });
        });
    </script>
}

@section Styles {
    <style>
        .card-header {
            background-color: #f8f9fa;
            border-bottom: 1px solid #dee2e6;
        }
        
        .table th {
            border-top: none;
            font-weight: 600;
            font-size: 0.875rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }
        
        .btn-group .btn {
            margin-right: 2px;
        }
        
        .badge {
            font-size: 0.75rem;
        }
        
        .table-responsive {
            border-radius: 0.375rem;
        }
    </style>
}
